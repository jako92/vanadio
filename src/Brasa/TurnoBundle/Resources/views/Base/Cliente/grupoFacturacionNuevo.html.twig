{% extends '::base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo grupo facturacion</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">                            
            <div class="form-group form-group-sm">
                <label for="form_nombre" class="col-sm-3 control-label">Nombre:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div> 
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Abreviatura:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.abreviatura, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>   
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Concepto:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.concepto, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                 
        </div>
    </div>                                    
    <div class="modal-footer">        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}