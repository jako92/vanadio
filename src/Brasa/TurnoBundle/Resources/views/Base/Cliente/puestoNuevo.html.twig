{% extends '::base_sin_menu.html.twig' %}
{% block content %}
    <!-- Content Header (Page header) -->
   <section class="content-header">
        <h1>
            Programacion turnos
            <small>Clientes: puesto nuevo</small>
        </h1>
    </section>    
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">     
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Programador:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.programadorRel, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                 
                <div class="form-group form-group-sm">
                    <label for="form_nombre" class="col-sm-3 control-label">Nombre:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}                        
                    </div>                
                </div>   
                <div class="form-group form-group-sm">
                    <label for="form_direccion" class="col-sm-3 control-label">Direccion:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.direccion, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}                        
                    </div>                
                </div>   
                <div class="form-group form-group-sm">
                    <label for="form_ciudadRel" class="col-sm-3 control-label">Ciudad:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.ciudadRel, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Numero comunicacion:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.numeroComunicacion, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                
                <div class="form-group form-group-sm">
                    <label for="form_telefono" class="col-sm-3 control-label">Telefono:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.telefono, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_celular" class="col-sm-3 control-label">Celular:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.celular, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_contacto" class="col-sm-3 control-label">Contacto:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.contacto, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_telefonoContacto" class="col-sm-3 control-label">Telefono contacto:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.telefonoContacto, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_celuarContacto" class="col-sm-3 control-label">Celular contacto:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.celularContacto, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_comentarios" class="col-sm-3 control-label">Comentario:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control','rows':'5'} }) }}                        
                    </div>                
                </div> 
            </div>
        </div> 
        <div class="panel panel-default">
            <div class="panel-heading">Información control</div>       
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        Control puesto {{ form_widget(form.controlPuesto) }}
                    </div>                
                </div>                
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Zona:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.zonaRel, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                 
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Operacion:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.operacionRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                           
            </div>
        </div>                 
        <div class="panel panel-default">
            <div class="panel-heading">Información contabilidad</div>
            <div class="panel-body">               
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Centro costo:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.centroCostoContabilidadRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                           
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Perfil del puesto</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Edad minima:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.edadMinima, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Edad maxima:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.edadMaxima, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Estado civil:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.estadoCivilRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Estatura minima:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.estaturaMinima, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Estatura maxima:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.estaturaMaxima, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Sexo:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.codigoSexoFk, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Peso minimo:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.pesoMinimo, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Peso maximo:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.pesoMaximo, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Tipo libreta militar:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.codigoTipoLibretaMilitar, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Moto:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.moto, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Carro:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.carro, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>    
            </div>
        </div>            
        <div class="modal-footer">        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}