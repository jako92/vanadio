{% extends '::base_sin_menu.html.twig' %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Clientes: contacto nuevo</small>
        </h1>
    </section>    
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.nombre) }}
                    </div>
                    <label class="col-sm-2 control-label">Cargo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.cargo) }}
                    </div>  
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Telefono:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.telefono) }}
                    </div>
                    <label class="col-sm-2 control-label">Celular:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.celular) }}
                    </div>  
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Fecha cumplea√±os:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaNacimiento) }}
                    </div> 
                </div>

            </div>                                    
            <div class="modal-footer">        
                {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            </div>
            {{ form_end(form) }}
            <br/><br/><br/><br/>
    </section>
{% endblock %}