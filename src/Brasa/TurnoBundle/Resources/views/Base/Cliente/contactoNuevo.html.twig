{% extends '::base_sin_menu.html.twig' %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Clientes: contacto nuevo</small>
        </h1>
    </section>    
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Gerente:</label>
                    <div class="col-sm-4">
                         {{ form_widget(form.gerente) }}
                    </div>
                    <label class="col-sm-2 control-label">Celular gerente:</label>
                    <div class="col-sm-4">
                         {{ form_widget(form.celularGerente) }}
                    </div>  
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Financiero:</label>
                    <div class="col-sm-4">
                         {{ form_widget(form.financiero) }}
                    </div>
                    <label class="col-sm-2 control-label">Celular financiero:</label>
                    <div class="col-sm-4">
                         {{ form_widget(form.celularFinanciero) }}
                    </div>  
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Contacto:</label>
                    <div class="col-sm-4">
                         {{ form_widget(form.contacto) }}
                    </div>
                    <label class="col-sm-2 control-label">Celular contacto:</label>
                    <div class="col-sm-4">
                         {{ form_widget(form.celularContacto) }}
                    </div>  
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Telefono contacto:</label>
                    <div class="col-sm-4">
                         {{ form_widget(form.telefonoContacto) }}
                    </div> 
                </div>
               
            </div>                                    
            <div class="modal-footer">        
                {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            </div>
            {{ form_end(form) }}
            <br/><br/><br/><br/>
    </section>
{% endblock %}