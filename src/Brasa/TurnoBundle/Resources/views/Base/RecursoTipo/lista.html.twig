{% extends '::base2.html.twig' %}
{% block content %}
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>    
    <div class="page-header">
        <h3>Lista recursos tipos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">

            <div class="form-group form-group-sm">  
                <label for="form_TxtNombre" class="col-sm-3 control-label">Nombre:</label>
                <div class="col-sm-9">                  
                    {{ form_widget(form.TxtNombre , { 'attr': {'class': 'form-control'} }) }}
                </div>                   
            </div>  

            <div class="form-group form-group-sm">  
                <label for="form_TxtCodigo" class="col-sm-3 control-label">Codigo:</label>
                <div class="col-sm-9">                  
                    {{ form_widget(form.TxtCodigo, { 'attr': {'class': 'form-control'} }) }}
                </div>      
            </div>   
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>                                                    
        </div>
    </div> 
    <table  class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th>{{ knp_pagination_sortable(arRecursosTipos, 'CÃ“DIGO', 'p.codigoRecursoTipoPk') }}</th>
            <th>NIT</th>
            <th>NOMBRE</th>                             
            <th></th>
        </tr>
        {% for arRecursosTipos in arRecursosTipos %}
            <tr>                
                <td>{{ arRecursosTipos.codigoRecursoTipoPk  }}</td>                                             
                <td>{{ arRecursosTipos.nombre }}</td>
                <td style="text-align: center"><a href="{{ path('brs_tur_base_recurso_tipo_nuevo', {'codigoRecursoTipo': arRecursosTipos.codigoRecursoTipoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>                                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arRecursosTipos.codigoRecursoTipoPk }}" /></td>
            </tr>

        {% endfor %}
    </table>

    <!-- Botones Menu Items -->
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arRecursosTipos.getTotalItemCount }}</span></div>                        
    </div>
    <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arRecursosTipos) }}       
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">                                
            {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
        <div class="btn-group">                                
            <a class="btn btn-default btn-sm" href="{{ path('brs_tur_base_recurso_tipo_nuevo', {'codigoRecursoTipo': 0}) }}">Nuevo</a>                                                
        </div>
        <div class="btn-group">                
            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
        </div>
    </div>
    <!-- Fin Botones Menu Items -->
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
