{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo concepto servicio</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">               
            <div class="form-group form-group-sm">
                <label for="form_nombre" class="col-sm-3 control-label">Nombre:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Nombre facturacion:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.nombreFacturacion, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>    
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Nombre facturacion adicional:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.nombreFacturacionAdicional, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label  class="col-sm-3 control-label">Tipo:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.tipo, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label  class="col-sm-3 control-label">% base iva:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.porBaseIva, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>     
            <div class="form-group form-group-sm">
                <label  class="col-sm-3 control-label">% iva:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.porIva, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                               
            <div class="form-group form-group-sm">
                <label for="form_horas" class="col-sm-3 control-label">Horas:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.horas, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                    
            <div class="form-group form-group-sm">
                <label for="form_horasDiurnas" class="col-sm-3 control-label">Horas diurnas:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.horasDiurnas, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                    
            <div class="form-group form-group-sm">
                <label for="form_horasNocturnas" class="col-sm-3 control-label">Horas Nocturnas:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.horasNocturnas, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>      
            <div class="form-group form-group-sm">
                <label for="form_vrCosto" class="col-sm-3 control-label">Costo:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.vrCosto, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                                 
        </div>
    </div>               
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_tur_base_concepto_servicio_lista') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}