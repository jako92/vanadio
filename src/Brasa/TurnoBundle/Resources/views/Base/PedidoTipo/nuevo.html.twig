{% extends '::base2.html.twig' %}
{% block title %}Tipo pedido - Soga App{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Tipo pedido: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Administracion</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> General</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Tipo pedido</a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>  
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">                                                      
                <div class="form-group form-group-sm">
                    <label for="form_nombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.nombre) }}                        
                    </div>
                    <label for="form_tipo" class="col-sm-2 control-label">Tipo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.tipo) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_abreviatura" class="col-sm-2 control-label"></label>
                    <div class="col-sm-10">
                        {{ form_widget(form.control) }}                        
                    </div>                
                </div>  
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Informacion contabilidad</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Tipo cuenta ingreso:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.tipoCuentaIngreso, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                    <label class="col-sm-2 control-label">Cuenta ingreso:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.codigoCuentaIngresoFk, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                   
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Tipo cuenta cartera:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.tipoCuentaCartera, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                    <label class="col-sm-2 control-label">Cuenta cartera:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.codigoCuentaCarteraFk, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>  
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Tipo cuenta iva:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.tipoCuentaIva, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>
                    <label class="col-sm-2 control-label">Cuenta iva:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.codigoCuentaIvaFk, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Comprobante:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.codigoComprobanteFk, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>
            </div>
        </div>             
         
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_tur_base_general_pedido_tipo') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
</div>
{% endblock %}