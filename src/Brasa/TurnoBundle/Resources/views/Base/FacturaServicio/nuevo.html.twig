{% extends '::base2.html.twig' %}
{% block content %}
    <!-- Content Header (Page header) -->
     <section class="content-header">
        <h1>
            Programacion turnos
            <small>Tipo servicio factura: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Administracion</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> General</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Tipo servicio factura</a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>  
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">                                                      
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Nombre:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>  
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">% IVA:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.porcentajeIva, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                  
            </div>
        </div>  
        <div class="panel panel-default">
            <div class="panel-heading">Informacion contabilidad</div>
            <div class="panel-body">                                                      
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Cuenta ingreso:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.codigoCuentaIngresoFk, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                   
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Cuenta cartera:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.codigoCuentaCarteraFk, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>  
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Cuenta iva:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.codigoCuentaIvaFk, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>  
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Cuenta rte fte:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.codigoCuentaRetencionFuenteFk, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>  
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Cuenta ingreso (Dev):</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.codigoCuentaIngresoDevolucionFk, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>  
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Cuenta iva (Dev):</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.codigoCuentaIvaDevolucionFk, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                      
            </div>
        </div>                      
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_tur_base_factura_servicio') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}