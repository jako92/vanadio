{% extends '::base2.html.twig' %}
{% block content %}
    <!-- Content Header (Page header) -->
   <section class="content-header">
        <h1>
            Programacion turnos
            <small>Tipo factura: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Administracion</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> General</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Tipo factura</a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>  
    <section class="content"> 
        <div class="container">
            {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
            {{ form_errors(form) }}
            <div class="panel panel-default">
                <div class="panel-heading">Informacion general</div>
                <div class="panel-body">                                                      
                    <div class="form-group form-group-sm">
                        <label for="form_nombre" class="col-sm-3 control-label">Nombre:</label>
                        <div class="col-sm-9">
                            {{ form_widget(form.nombre, { 'attr': {'class': 'form-control'} }) }}                        
                        </div>                
                    </div>  
                    <div class="form-group form-group-sm">
                        <label for="form_porIva" class="col-sm-3 control-label">Consecutivo:</label>
                        <div class="col-sm-9">
                            {{ form_widget(form.consecutivo, { 'attr': {'class': 'form-control'} }) }}                        
                        </div>                
                    </div>                  
                </div>
            </div>               
            <div class="modal-footer">
                <a class="btn btn-default btn-sm" href="{{ path('brs_tur_base_factura_tipo') }}">Cancelar</a>        
                {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
                {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            </div>
            {{ form_end(form) }}
            <br/><br/><br/><br/>
    </section>
</div>
{% endblock %}