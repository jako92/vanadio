{% extends '::base2.html.twig' %}
{% block content %}
    <!-- Content Header (Page header) -->
  <section class="content-header">
        <h1>
            Programacion turnos
            <small>Puesto: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Administracion</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Cliente</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Puesto</a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>   
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">     
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Programador:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.programadorRel, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                 
                <div class="form-group form-group-sm">
                    <label for="form_nombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nombre, {'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}                        
                        <div class="text-danger">{{ form_errors(form.nombre) }}</div>
                    </div>            
                </div>   
                <div class="form-group form-group-sm">
                    <label for="form_direccion" class="col-sm-2 control-label">Direccion:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.direccion, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}                        
                    </div> 
                    <label for="form_ciudadRel" class="col-sm-2 control-label">Ciudad:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.ciudadRel) }}                        
                    </div>                
                </div>                
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Numero comunicacion:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.numeroComunicacion) }}                        
                    </div>
                    <label for="form_telefono" class="col-sm-2 control-label">Telefono:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.telefono) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_celular" class="col-sm-2 control-label">Celular:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.celular) }}                        
                    </div>
                    <label for="form_contacto" class="col-sm-2 control-label">Contacto:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.contacto, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_telefonoContacto" class="col-sm-2 control-label">Telefono contacto:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.telefonoContacto) }}                        
                    </div>
                    <label for="form_celuarContacto" class="col-sm-2 control-label">Celular contacto:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.celularContacto) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_comentarios" class="col-sm-2 control-label">Comentario:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.comentarios, { 'attr': {'rows':'5'} }) }}                        
                    </div>                
                </div> 
            </div>
        </div> 
        <div class="panel panel-default">
            <div class="panel-heading">Información control</div>       
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Central de operacion:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.centroOperacionRel) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Zona:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.zonaRel) }}                        
                    </div>
                    <label class="col-sm-2 control-label">Operacion:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.operacionRel) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Hora inicio:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.horaInicio) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Hora final:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.horaFinal) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Ubicacion gps:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.ubicacionGps) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-9">
                        {{ form_widget(form.controlPuesto) }}
                    </div>                
                </div>
            </div>
        </div>                 
        <div class="panel panel-default">
            <div class="panel-heading">Información contabilidad</div>
            <div class="panel-body">               
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Centro costo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.centroCostoContabilidadRel) }}
                    </div>
                </div>                           
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Perfil del puesto</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Estado civil:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.estadoCivilRel) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Edad minima:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.edadMinima) }}
                    </div>
                    <label class="col-sm-2 control-label">Edad maxima:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.edadMaxima) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Estatura minima:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.estaturaMinima) }}
                    </div>
                    <label class="col-sm-2 control-label">Estatura maxima:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.estaturaMaxima) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Sexo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.codigoSexoFk) }}
                    </div>
                    <label class="col-sm-2 control-label">Tipo libreta militar:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.codigoTipoLibretaMilitar) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Peso minimo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.pesoMinimo) }}
                    </div>
                    <label class="col-sm-2 control-label">Peso maximo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.pesoMaximo) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Moto:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.moto) }}
                    </div>
                    <label class="col-sm-2 control-label">Carro:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.carro) }}
                    </div>
                </div>    
            </div>
        </div>            
        <div class="modal-footer">        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}