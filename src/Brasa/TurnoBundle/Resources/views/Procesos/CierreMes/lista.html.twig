{% extends '::base.html.twig' %}
{% block title %}Cierre mes - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Cierre mes</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}

        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CODIGO</th>
                <th>ANIO</th>
                <th>MES</th>
                <th></th>                
                <th></th>
            </tr>
            {% for arCierreMes in arCierreMes %}
            <tr>
                <td>{{ arCierreMes.codigoCierreMesPk  }}</td>
                <td>{{ arCierreMes.anio  }}</td>
                <td>{{ arCierreMes.mes }}</td>                
                {% if arCierreMes.estadoGenerado == 0 %}
                    <td><button class="btn btn-default btn-xs" type="submit" name="OpGenerar" value="{{ arCierreMes.codigoCierreMesPk }}">Generar</button></td>
                    <td></td>                                        
                {% else %}
                    {% if arCierreMes.estadoCerrado == 0 %}
                        <td><button class="btn btn-default btn-xs" type="submit" name="OpDeshacer" value="{{ arCierreMes.codigoCierreMesPk }}">Deshacer</button></td>
                        <td><button class="btn btn-default btn-xs" type="submit" name="OpCerrar" value="{{ arCierreMes.codigoCierreMesPk }}">Cerrar</button></td>                        
                    {% else %}
                        <td></td>                                        
                        <td></td>                                        
                    {% endif %}                                                                       
                {% endif %}                                                 
            </tr>
            {% endfor %}
        </table>     
        {{ form_rest(form) }}
        {{ form_end(form) }}

</div>
{% endblock %}
