{% extends '::base2.html.twig' %}
{% block title %}Cierre mes nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo cierre mes</h3>                         
    <div class="panel panel-default">
        <div class="panel-heading">Informacion</div>
        <div class="panel-body">                    
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Anio:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.anio, { 'attr': {'class': 'form-control'} }) }}                      
                </div>                
            </div>                     
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Mes:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.mes, { 'attr': {'class': 'form-control'} }) }}                      
                </div>                
            </div>                
        </div>
    </div>                          
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_tur_proceso_cierre_mes') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}