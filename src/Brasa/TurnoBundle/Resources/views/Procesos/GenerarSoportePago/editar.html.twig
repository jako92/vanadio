{% extends '::base_sin_menu.html.twig' %}
{% block title %}Cotizacion nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Soporte de pago: editar</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Procesos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Generar soporte pago</a></li>
            <li class="active">Editar</li>
        </ol>
    </section>    
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">     
                <div class="form-group form-group-sm">
                    <label for="form_dias" class="col-sm-5 control-label">Dias:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.dias, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>   
                <div class="form-group form-group-sm">
                    <label for="form_dias" class="col-sm-5 control-label">Transporte:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.diasTransporte, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                
                <div class="form-group form-group-sm">
                    <label for="form_horas" class="col-sm-5 control-label">Horas:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.horas, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                
                <div class="form-group form-group-sm">
                    <label for="form_horas" class="col-sm-5 control-label">Horas descanso:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.horasDescanso, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_horas" class="col-sm-5 control-label">Horas diurnas:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.horasDiurnas, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_horas" class="col-sm-5 control-label">Horas nocturnas:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.horasNocturnas, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_horas" class="col-sm-5 control-label">Horas festivas diurnas:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.horasFestivasDiurnas, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_horas" class="col-sm-5 control-label">Horas festivas nocturnas:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.horasFestivasNocturnas, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>

                <div class="form-group form-group-sm">
                    <label for="form_horas" class="col-sm-5 control-label">Horas extras ordinarias diurnas:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.horasExtrasOrdinariasDiurnas, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_horas" class="col-sm-5 control-label">Horas extras ordinarias nocturnas:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.horasExtrasOrdinariasNocturnas, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_horas" class="col-sm-5 control-label">Horas extras festivas diurnas:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.horasExtrasFestivasDiurnas, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_horas" class="col-sm-5 control-label">Horas extras festivas nocturnas:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.horasExtrasFestivasNocturnas, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                
            </div>
        </div>               
        <div class="modal-footer">               
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}