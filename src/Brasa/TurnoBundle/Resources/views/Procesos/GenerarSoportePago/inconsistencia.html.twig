{% extends '::base_sin_menu.html.twig' %}
{% block title %}Generar soporte pago - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Soporte de pago: inconsitencia</small>
        </h1>
    </section>    
    <section class="content"> 
        <script>
            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            })
        </script>
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}                      
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CODIGO</th>
                <th>DOCUMENTO</th>                
                <th>RECURSO</th>
                <th>INCONSISTENCIA</th>
            </tr>
            {% for arSoportePagoInconsistencia in arSoportePagoInconsistencia %}
                <tr>
                    <td>{{ arSoportePagoInconsistencia.codigoRecurso }}</td>
                    <td>{{ arSoportePagoInconsistencia.numeroIdentificacion }}</td>
                    <td>{{ arSoportePagoInconsistencia.recurso }}</td>
                    <td>{{ arSoportePagoInconsistencia.detalle }}</td>
                </tr>

            {% endfor %}
        </table>
        <div class="btn-group" style="float: left">                
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arSoportePagoInconsistencia.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arSoportePagoInconsistencia) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnAnalizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>         
        {{ form_rest(form) }}
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
