{% extends '::base2.html.twig' %}
{% block title %}Actualizar pedidos - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content"> 
        <script>
            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            })
        </script>    
        <div class="page-header">
            <h3>Actualizar pedidos</h3>
        </div>
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">        
                <div class="form-group form-group-sm">
                    <label for="form_fecha" class="col-sm-3 control-label">Periodo:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.anio) }}
                        {{ form_widget(form.mes) }}
                    </div>
                </div>                     
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnActualizarEstadoProgramado, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                        <br/><br/>
                        {{ form_widget(form.BtnActualizarHorasProgramadas, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                        <br/><br/>
                        {{ form_widget(form.BtnActualizarPendienteFacturar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}                        
                    </div>
                </div>
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
