{% extends '::base2.html.twig' %}
{% block title %}Mantenimiento programacion - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programacion: mantenimiento</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Procesos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Mantenimiento</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Programacion</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content"> 
        <script>
            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            })
        </script>    
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Parametros</div>
            <div class="panel-body">        
                <div class="form-group form-group-sm">
                    <label for="form_fecha" class="col-sm-2 control-label">Periodo a√±o:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.anio) }}
                    </div>
                    <label for="form_fecha" class="col-sm-2 control-label">Periodo mes:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.mes) }}
                    </div>
                </div><br>                  
                <div class="btn-group" style="float: right">
                    {{ form_widget(form.BtnActualizarHorasProgramadas, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
