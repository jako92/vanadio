{% extends '::base_sin_menu.html.twig' %}
{% block title %}Simular programacion servicio - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content"> 
        <script>
            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            })
        </script>    
        <div class="page-header">
            <h3>Simular programacion servicio</h3>
        </div>
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Generar</div>
            <div class="panel-body">  
                <div class="form-group form-group-sm">  
                    <label for="form_fecha" class="col-sm-2 control-label">Fecha:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.fecha, {'attr': {'maxlength' : 10} }) }}
                    </div>
                </div>                                        
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnGenerar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div> 
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>MES</th>
                <th>RECURSO</th>
                    {% for arrDiaSemana in arrDiaSemana %}
                    <th>{{ arrDiaSemana.dia }}{{ arrDiaSemana.diaSemana }}</th>
                    {% endfor %}                
            </tr>
            {% set intPuesto = '' %}
            {% for arSimulacionDetalle in arSimulacionDetalle %}                            
                {% if intPuesto != arSimulacionDetalle.codigoPuestoFk or arSimulacionDetalle.codigoPuestoFk == '' %}                                
                    <tr>
                        <td id="suptipo" colspan="38"><b>{{ arSimulacionDetalle.puestoRel.nombre | default('') }}<b/></td>
                    </tr>
                    {% set intPuesto = arSimulacionDetalle.codigoPuestoFk %}
                {% endif %}
                <tr>
                    <td>{{ arSimulacionDetalle.mes }}</td>
                    {% if arSimulacionDetalle.codigoRecursoFk is not null %}
                        <td>{{ arSimulacionDetalle.recursoRel.nombreCorto | default('') }}</td>
                    {% else %}
                        <td></td>
                    {% endif %}
                    <td>{{ arSimulacionDetalle.dia1  }}</td>
                    <td>{{ arSimulacionDetalle.dia2  }}</td>
                    <td>{{ arSimulacionDetalle.dia3  }}</td>
                    <td>{{ arSimulacionDetalle.dia4  }}</td>
                    <td>{{ arSimulacionDetalle.dia5  }}</td>
                    <td>{{ arSimulacionDetalle.dia6  }}</td>
                    <td>{{ arSimulacionDetalle.dia7  }}</td>
                    <td>{{ arSimulacionDetalle.dia8  }}</td>
                    <td>{{ arSimulacionDetalle.dia9  }}</td>
                    <td>{{ arSimulacionDetalle.dia10  }}</td>
                    <td>{{ arSimulacionDetalle.dia11  }}</td>
                    <td>{{ arSimulacionDetalle.dia12  }}</td>
                    <td>{{ arSimulacionDetalle.dia13  }}</td>
                    <td>{{ arSimulacionDetalle.dia14  }}</td>
                    <td>{{ arSimulacionDetalle.dia15  }}</td>
                    <td>{{ arSimulacionDetalle.dia16  }}</td>
                    <td>{{ arSimulacionDetalle.dia17  }}</td>
                    <td>{{ arSimulacionDetalle.dia18  }}</td>
                    <td>{{ arSimulacionDetalle.dia19  }}</td>
                    <td>{{ arSimulacionDetalle.dia20  }}</td>
                    <td>{{ arSimulacionDetalle.dia21  }}</td>
                    <td>{{ arSimulacionDetalle.dia22  }}</td>
                    <td>{{ arSimulacionDetalle.dia23  }}</td>
                    <td>{{ arSimulacionDetalle.dia24  }}</td>
                    <td>{{ arSimulacionDetalle.dia25  }}</td>
                    <td>{{ arSimulacionDetalle.dia26  }}</td>
                    <td>{{ arSimulacionDetalle.dia27  }}</td>
                    <td>{{ arSimulacionDetalle.dia28  }}</td>
                    <td>{{ arSimulacionDetalle.dia29  }}</td>
                    <td>{{ arSimulacionDetalle.dia30  }}</td>
                    <td>{{ arSimulacionDetalle.dia31  }}</td>
                </tr>
            {% endfor %}
        </table> 
        <!-- Botones Menu Items -->
        <div class="btn-toolbar">            
            <div class="btn-group" style="float: right">
                {{ form_widget(form.BtnGenerarSoportePago, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
                {{ form_widget(form.BtnPdf, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            </div>                       
        </div>        
        {{ form_rest(form) }}
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
