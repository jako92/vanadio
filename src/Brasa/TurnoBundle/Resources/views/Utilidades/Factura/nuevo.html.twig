{% extends '::base2.html.twig' %}
{% block title %}Utilidad editar factura - Soga App{% endblock %}
{% block content %}   
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Utilidad editar factura</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
       <div class="panel-body">         
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Tipo:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.facturaTipoRel, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>           
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Numero:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.numero, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                    
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Fecha:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.fecha) }}                        
                </div>                
            </div> 
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Vence:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.fechaVence) }}                        
                </div>                
            </div>  
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Desripcion:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.descripcion, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
        </div>
    </div>               
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_tur_utilidad_editar_factura') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}        
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}