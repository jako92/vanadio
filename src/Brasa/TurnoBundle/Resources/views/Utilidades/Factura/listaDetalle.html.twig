{% extends '::base.html.twig' %}
{% block title %}Editar factura detalle lista - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Lista facturas detalle para editar</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">                                 
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">Codigo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.TxtCodigoDetalle, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">                  
                        
                    </div>                    
                </div>                  
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>                
                <th>CODIGO</th>
                <th>CIUDAD</th>
                <th></th>
            </tr>
            {% for arFacturaDetalles in arFacturaDetalles %}
            <tr>                                             
                <td>{{ arFacturaDetalles.codigoFacturaDetallePk  }}</td> 
                <td>{{ arFacturaDetalles.ciudadRel.nombre | default('')  }}</td> 
                <td style="text-align: center"><a href="{{ path('brs_tur_utilidad_editar_factura_detalle_nuevo', {'codigoFacturaDetalle': arFacturaDetalles.codigoFacturaDetallePk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
            </tr>
            
            {% endfor %}
        </table>
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
