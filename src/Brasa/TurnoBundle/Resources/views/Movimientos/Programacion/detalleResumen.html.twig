{% extends '::base_sin_menu.html.twig' %}
{% block title %}Programacion detalle resumen - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content"> 
        <div class="panel panel-default">
            <div class="panel-heading">Informaci√≥n del pedido</div>
            <div class="panel-body">
                <table width="100%" class="table table-condensed table-bordered">
                    <tr>
                        <td class="titulo">PEDIDO:</td>
                        <td class="td-in-well">{{ arPedidoDetalle.pedidoRel.numero }}</td>
                        <td class="titulo">FECHA:</td>
                        <td class="td-in-well">{{ arPedidoDetalle.pedidoRel.fecha | date('Y/m/d') }}</td>
                    </tr>                                               
                    <tr>
                        <td class="titulo">HORAS:</td>
                        <td class="td-in-well">{{ arPedidoDetalle.horas }}</td>
                        <td class="titulo">HORAS PROGRAMADAS:</td>
                        <td class="td-in-well">{{ arPedidoDetalle.horasProgramadas }}</td>
                    </tr>
                    <tr>
                        <td class="titulo">HORAS DIURNAS:</td>
                        <td class="td-in-well">{{ arPedidoDetalle.horasDiurnas }}</td>
                        <td class="titulo">HORAS DIURNAS PROGRAMADAS:</td>
                        <td class="td-in-well">{{ arPedidoDetalle.horasDiurnasProgramadas }}</td>
                    </tr>    
                    <tr>
                        <td class="titulo">HORAS NOCTURNAS:</td>
                        <td class="td-in-well">{{ arPedidoDetalle.horasNocturnas }}</td>
                        <td class="titulo">HORAS NOCTURNAS PROGRAMADAS:</td>
                        <td class="td-in-well">{{ arPedidoDetalle.horasNocturnasProgramadas }}</td>
                    </tr>                    
                </table>                    
            </div>
        </div>
        <br/><br/><br/><br/>
    </section>
{% endblock %}