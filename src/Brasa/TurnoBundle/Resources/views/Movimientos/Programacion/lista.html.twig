{% extends '::base2.html.twig' %}
{% block title %}Programacion lista - Soga App{% endblock %}
{% block content %}
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>    
    <div class="page-header">
        <h3>Lista programaciones</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">
            <div     class="form-group form-group-sm">
                <label for="txtNit" class="col-sm-2 control-label">Cliente:</label>
                <div class="col-sm-10">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                {{ form_widget(form.TxtNit, { 'attr': {'class': 'form-control'} }) }}                              
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">     
                                {{ form_widget(form.TxtNombreCliente, { 'attr': {'class': 'form-control', 'readOnly': 'ReadOnly'} }) }}                              
                                <span class="input-group-btn">                                        
                                    <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_buscar_cliente', { 'campoCodigo': 'form_TxtNit', 'campoNombre': 'form_TxtNombreCliente' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>               

            <div class="form-group form-group-sm">  
                <label for="form_TxtCodigo" class="col-sm-2 control-label">Codigo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.TxtCodigo, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_estadoAutorizado" class="col-sm-2 control-label">Autorizado:</label>
                <div class="col-sm-4">                  
                    {{ form_widget(form.estadoAutorizado, { 'attr': {'class': 'form-control'} }) }}
                </div>                    
            </div> 
            <div class="form-group form-group-sm">  
                <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                <div class="col-sm-4">  
                    {{ form_widget(form.fechaDesde) }}
                </div>
                <label for="form_estadoAnulado" class="col-sm-2 control-label">Anulado:</label>
                <div class="col-sm-4">                  
                    {{ form_widget(form.estadoAnulado, { 'attr': {'class': 'form-control'} }) }}
                </div>                    
            </div>  
            <div class="form-group form-group-sm">  
                <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                <div class="col-sm-4">   
                    {{ form_widget(form.fechaHasta) }}
                </div>
                <label for="form_estadoFacturado" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">                                         
                </div>                    
            </div>  
            <div class="form-group form-group-sm">  
                <label for="form_TxtNumero" class="col-sm-2 control-label">Filtrar por fecha:</label>
                <div class="col-sm-4"> 
                    {{ form_widget(form.filtrarFecha) }}
                </div>
                <label for="form_estadoAnulado" class="col-sm-2 control-label"></label>
                <div class="col-sm-4">                  

                </div>                    
            </div>                    
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    <table  class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th>{{ knp_pagination_sortable(arProgramaciones, 'CÃ“DIGO', 'p.codigoProgramacionPk') }}</th>
            <th>FECHA</th>
            <th>CLIENTE</th>
            <th>H</th>
            <th>HD</th>
            <th>HN</th>                
            <th>AUT</th>
            <th>ANU</th>                
            <th></th>
            <th></th>
            <th></th>
        </tr>
        {% for arProgramaciones in arProgramaciones %}
            <tr>                
                <td>{{ arProgramaciones.codigoProgramacionPk  }}</td>
                <td>{{ arProgramaciones.fecha |date("Y/m/d")  }}</td>
                <td>{{ arProgramaciones.clienteRel.nombreCorto  }}</td>  
                <td style="text-align: right">{{ arProgramaciones.horas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arProgramaciones.horasDiurnas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arProgramaciones.horasNocturnas | number_format(0, '.', ',') }}</td>                
                <td>{% if arProgramaciones.estadoAutorizado == 1 %} SI {% else %} NO {% endif %}</td>                                
                <td>{% if arProgramaciones.estadoAnulado == 1 %} SI {% else %} NO {% endif %}</td>                  
                <td style="text-align: center">{% if arProgramaciones.estadoAutorizado == 0 and arProgramaciones.cierreMes == 0 %}<a href="{{ path('brs_tur_movimiento_programacion_nuevo', {'codigoProgramacion': arProgramaciones.codigoProgramacionPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a>{% endif %}</td>                
                <td style="text-align: center"><a href="{{ path('brs_tur_movimiento_programacion_detalle', { 'codigoProgramacion': arProgramaciones.codigoProgramacionPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arProgramaciones.codigoProgramacionPk }}" /></td>
            </tr>

        {% endfor %}
    </table>

    <!-- Botones Menu Items -->
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arProgramaciones.getTotalItemCount }}</span></div>                        
    </div>
    <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arProgramaciones) }}       
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">                                
            {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
        <div class="btn-group">                                
            <a class="btn btn-default btn-sm" href="{{ path('brs_tur_movimiento_programacion_nuevo', {'codigoProgramacion': 0}) }}">Nuevo</a>                                                
        </div>
        <div class="btn-group">                
            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
        </div>
    </div>
    <!-- Fin Botones Menu Items -->
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
