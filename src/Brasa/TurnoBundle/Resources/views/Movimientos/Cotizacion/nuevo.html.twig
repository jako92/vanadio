{% extends '::base2.html.twig' %}
{% block title %}Cotizacion nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Nuevo cotizacion</h3>
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body"> 
                <div class="form-group form-group-sm">
                    <label for="txtNit" class="col-sm-3 control-label">Cliente:</label>
                    <div class="col-sm-9">
                        <div class="row">
                            <div class="col-lg-2">
                                <div class="input-group">
                                    <input id="txtNit"  name="txtNit"  type="text" class="form-control" value="{{ arCotizacion.clienteRel.nit |default('') }}"/>
                                </div>
                            </div>
                            <div class="col-lg-10">
                                <div class="input-group">                                      
                                    <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arCotizacion.clienteRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                                    <span class="input-group-btn">                                        
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_buscar_cliente', { 'campoCodigo': 'txtNit', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>     
                <div class="form-group form-group-sm">
                    <label for="form_fechaVence" class="col-sm-3 control-label">Vence:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.fechaVence) }}
                    </div>
                </div>                           
                <div class="form-group form-group-sm">
                    <label for="form_sectorRel" class="col-sm-3 control-label">Sector:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.sectorRel, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>  
                <div class="form-group form-group-sm">
                    <label for="form_prospectoRel" class="col-sm-3 control-label">Prospecto:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.prospectoRel, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                 
                <div class="form-group">
                    <label for="form_comentarios" class="col-sm-3 control-label">Comentarios:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>                 
            </div>
        </div>               
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_tur_movimiento_cotizacion') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}