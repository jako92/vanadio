{% extends '::base.html.twig' %}
{% block title %}Factura nuevo - Soga App{% endblock %}
{% block content %}   
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva factura</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
       <div class="panel-body">       
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Tipo:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.facturaTipoRel, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>  
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Servicio:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.facturaServicioRel, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                 
            <div class="form-group form-group-sm">
                <label for="txtNit" class="col-sm-3 control-label">Cliente:</label>
                <div class="col-sm-9">
                    <div class="row">
                      <div class="col-lg-2">
                        <div class="input-group">
                          <input id="txtNit"  name="txtNit"  type="text" class="form-control" value="{{ arFactura.clienteRel.nit |default('') }}"/>
                        </div>
                      </div>
                      <div class="col-lg-10">
                        <div class="input-group">                                      
                          <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arFactura.clienteRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                          <span class="input-group-btn">                                        
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_buscar_cliente', { 'campoCodigo': 'txtNit', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarTercero', 600, 900)">Buscar</a>
                          </span>
                        </div>
                      </div>
                    </div>
                </div>
            </div>  
            <div class="form-group form-group-sm">
                <label for="txtCodigoDireccion" class="col-sm-3 control-label">Direccion envio:</label>
                <div class="col-sm-9">
                    <div class="row">
                      <div class="col-lg-2">
                        <div class="input-group">
                          <input id="txtCodigoDireccion"  name="txtCodigoDireccion"  type="text" class="form-control" value="{{ arFactura.codigoClienteDireccionFk |default('') }}"/>
                        </div>
                      </div>
                      <div class="col-lg-10">
                        <div class="input-group">                                      
                          <input id="txtNombre"  name="txtNombre"  type="text" class="form-control" value="{{ arFactura.clienteDireccionRel.nombre |default('') }}" readOnly="ReadOnly" />
                          <span class="input-group-btn">                                        
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_buscar_direccion', { 'campoCodigo': 'txtCodigoDireccion', 'campoNombre': 'txtNombre' }) }}', 'buscarTercero', 600, 900)">Buscar</a>                                                        
                          </span>
                        </div>
                      </div>
                    </div>
                </div>
            </div>                             
            <div class="form-group form-group-sm">
                <label for="form_soporte" class="col-sm-3 control-label">Soporte:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.soporte, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>  
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Descripcion:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.descripcion, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div> 
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Titulo relacion:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.tituloRelacion, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>  
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Detalle relacion:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.detalleRelacion, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label"></label>
                <div class="col-sm-9">
                    Imprimir con relacion {{ form_widget(form.imprimirRelacion) }} Imprimir agrupada {{ form_widget(form.imprimirAgrupada) }}
                </div>                
            </div>                
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-3 control-label">Comentarios:</label>
                <div class="col-sm-9">
                   {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>                 
        </div>
    </div>               
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_tur_movimiento_factura') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}