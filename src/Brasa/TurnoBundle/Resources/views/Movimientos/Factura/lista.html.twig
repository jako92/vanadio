{% extends '::base.html.twig' %}
{% block title %}Factura lista - Soga App{% endblock %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>    
<div class="container">
    <div class="page-header">
        <h3>Lista factura</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div     class="form-group form-group-sm">
                    <label for="txtNit" class="col-sm-2 control-label">Cliente:</label>
                    <div class="col-sm-10">
                        <div class="row">
                          <div class="col-lg-2">
                            <div class="input-group">
                              {{ form_widget(form.TxtNit, { 'attr': {'class': 'form-control'} }) }}                              
                            </div>
                          </div>
                          <div class="col-lg-10">
                            <div class="input-group">     
                              {{ form_widget(form.TxtNombreCliente, { 'attr': {'class': 'form-control', 'readOnly': 'ReadOnly'} }) }}                              
                              <span class="input-group-btn">                                        
                                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_buscar_cliente', { 'campoCodigo': 'form_TxtNit', 'campoNombre': 'form_TxtNombreCliente' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                              </span>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>               
                    
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumero" class="col-sm-2 control-label">Numero:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.TxtNumero, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label class="col-sm-2 control-label">Tipo:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.facturaTipoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div> 
                <div class="form-group form-group-sm">  
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-4">  
                        {{ form_widget(form.fechaDesde) }}
                    </div>
                    <label for="form_estadoAutorizado" class="col-sm-2 control-label">Autorizado:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.estadoAutorizado, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>  
                <div class="form-group form-group-sm">  
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-4">   
                        {{ form_widget(form.fechaHasta) }}
                    </div>
                    <label for="form_estadoAnulado" class="col-sm-2 control-label">Anulado:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.estadoAnulado, { 'attr': {'class': 'form-control'} }) }}
                    </div>                   
                </div>  
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumero" class="col-sm-2 control-label">Filtrar por fecha:</label>
                    <div class="col-sm-4"> 
                        {{ form_widget(form.filtrarFecha) }}
                    </div>
                    <label for="form_estadoAnulado" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">                  
                        
                    </div>                    
                </div>                    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arFacturas, 'CÃ“DIGO', 'p.codigoFacturaPk') }}</th>
                <th>TIPO</th>
                <th>SERVICIO</th>
                <th>NUMERO</th>
                <th>FECHA</th>
                <th>VENCE</th>
                <th>CLIENTE</th>
                <th>TOTAL</th>    
                <th>AUT</th>
                <th>CON</th>
                <th>ANU</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {% for arFacturas in arFacturas %}
            <tr>                                             
                <td>{{ arFacturas.codigoFacturaPk  }}</td>  
                <td>{{ arFacturas.facturaTipoRel.nombre |default('')  }}</td>
                <td>{{ arFacturas.facturaServicioRel.nombre |default('')  }}</td>
                <td>{{ arFacturas.numero  }}</td>
                <td>{{ arFacturas.fecha |date("Y/m/d")  }}</td>
                <td>{{ arFacturas.fechaVence |date("Y/m/d")  }}</td>
                <td>{{ arFacturas.clienteRel.nombreCorto |default('') }}</td>
                <td style="text-align: right">{{ arFacturas.vrTotal | number_format(0, '.', ',') }}</td>                
                <td>{% if arFacturas.estadoAutorizado == 1 %} SI {% else %} NO {% endif %}</td>                
                <td>{% if arFacturas.estadoContabilizado == 1 %} SI {% else %} NO {% endif %}</td>                
                <td>{% if arFacturas.estadoAnulado == 1 %} SI {% else %} NO {% endif %}</td>                
                <!--{% if arFacturas.facturaTipoRel.tipo == 1 %}-->
                    <td style="text-align: center"><a href="{{ path('brs_tur_movimiento_factura_nuevo', {'codigoFactura': arFacturas.codigoFacturaPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                {% else %} 
                    <td style="text-align: center"><a href="{{ path('brs_tur_movimiento_nota_credito_nuevo', {'codigoFactura': arFacturas.codigoFacturaPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                {% endif %}                
                <td style="text-align: center"><a href="{{ path('brs_tur_movimiento_factura_detalle', { 'codigoFactura': arFacturas.codigoFacturaPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arFacturas.codigoFacturaPk }}" /></td>
            </tr>
            
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arFacturas.getTotalItemCount }}</span></div>                        
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arFacturas) }}       
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">      
                {{ form_widget(form.BtnInterfaz, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">                                
                <a class="btn btn-default btn-sm" href="{{ path('brs_tur_movimiento_nota_credito_nuevo', {'codigoFactura': 0}) }}">Nueva nota credito</a>                                                
                <a class="btn btn-default btn-sm" href="{{ path('brs_tur_movimiento_factura_nuevo', {'codigoFactura': 0}) }}">Nueva factura</a>                                                
            </div>
            <div class="btn-group">                                
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
