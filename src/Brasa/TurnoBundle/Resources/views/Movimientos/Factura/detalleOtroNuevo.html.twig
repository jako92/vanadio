{% extends '::base_sin_menu.html.twig' %}
{% block title %}Factura detalle nuevo - Soga App{% endblock %}
{% block content %}   
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo detalle otro concepto</h3>   
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CODIGO</th>
                <th>NOMBRE</th>                
                <th>CANTIDAD</th>
                <th>PRECIO</th>
                <th></th>
            </tr>
            {% for arFacturaConceptos in arFacturaConceptos %}
            <tr>
                <td>{{ arFacturaConceptos.codigoFacturaConceptoPk  }}</td>
                <td>{{ arFacturaConceptos.nombre  }}</td>
                <td style="text-align: right"><input class="input-grid" type="text" name="TxtCantidad{{ arFacturaConceptos.codigoFacturaConceptoPk }}" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                        
                <td style="text-align: right"><input class="input-grid" type="text" name="TxtPrecio{{ arFacturaConceptos.codigoFacturaConceptoPk }}" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                                        
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arFacturaConceptos.codigoFacturaConceptoPk }}" /></td>
            </tr>

            {% endfor %}
        </table>    
                
    <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}