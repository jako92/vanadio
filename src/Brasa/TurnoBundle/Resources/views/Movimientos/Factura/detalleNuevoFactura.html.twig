{% extends '::base_sin_menu.html.twig' %}
{% block title %}Factura detalle nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Factura: nuevo detalle desde factura</small>
        </h1>
    </section>    
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">                                                                      
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                 
            </div>
        </div>    
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CODIGO</th>
                <th>NUMERO</th>                
                <th>FECHA</th>
                <th>PUESTO</th>
                <th>VALOR</th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
            </tr>
            {% for arFacturaDetalles in arFacturaDetalles %}
                <tr>
                    <td>{{ arFacturaDetalles.codigoFacturaDetallePk  }}</td>
                    <td>{{ arFacturaDetalles.facturaRel.numero  }}</td>    
                    <td>{{ arFacturaDetalles.puestoRel.nombre | default('')  }}</td>    
                    <td>{{ arFacturaDetalles.facturaRel.fecha |date("Y/m/d")  }}</td>                                 
                    <td style="text-align: right">{{ arFacturaDetalles.subtotal | number_format(0, '.', ',') }}</td>
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arFacturaDetalles.codigoFacturaDetallePk }}" /></td>
                </tr>

            {% endfor %}
        </table>    

        <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}