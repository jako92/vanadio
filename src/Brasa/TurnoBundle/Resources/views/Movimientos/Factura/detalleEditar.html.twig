{% extends '::base_sin_menu.html.twig' %}
{% block title %}Pedido detalle nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Factura: detalle factura</small>
        </h1>
    </section>    
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body"> 
                <div class="form-group form-group-sm">
                    <label for="form_conceptoServicioRel" class="col-sm-3 control-label">Servicio:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.conceptoServicioRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>             
                <div class="form-group form-group-sm">
                    <label for="form_modalidadServicioRel" class="col-sm-3 control-label">Modalidad:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.modalidadServicioRel, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                 
                <div class="form-group form-group-sm">
                    <label for="form_puestoRel" class="col-sm-3 control-label">Puesto:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.puestoRel, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>  
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Grupo facturacion:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.grupoFacturacionRel, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                
            </div>
        </div>               
        <div class="modal-footer">        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}