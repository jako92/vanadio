{% extends '::base.html.twig' %}
{% block title %}Pedido devolucion detalle - Soga App{% endblock %}
{% block content %}
    <script>
        $('#myTab a').click(function (e) {
            e.preventDefault();
            $(this).tab('show');
        })
    </script>
    <script>
        $(function () {
          $('[data-toggle="tooltip"]').tooltip()
        })
    </script>    
    <div class="container">        
        <div class="page-header">            
            <h3>Detalle pedido devolucion</h3>            
        </div>
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">
                <a  class="btn btn-default btn-sm" href="{{ path('brs_tur_movimiento_pedido_nuevo', {'codigoPedido': 0 }) }}">Nuevo</a>                                      
                {{ form_widget(form.BtnAutorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnDesAutorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
                {{ form_widget(form.BtnAnular, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnProgramar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnDesprogramar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnFacturar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>            
        </div>
        <div style="float:right">
            {% if arPedidoDevolucion.estadoAutorizado == 1 %}<span class="label label-default">Autorizado</span>{% endif %}                        
        </div>
        <br /><br />
        <!-- Encabezado Movimiento -->
        <div class="panel panel-default">
            <div class="panel-heading">Informaci√≥n</div>
            <div class="panel-body">
                <table width="100%" class="table table-condensed table-bordered">
                    <tr>
                        <td class="titulo">NUMERO:</td>
                        <td class="td-in-well">{{ arPedidoDevolucion.numero }}</td>                    
                        <td class="titulo" ></td>
                        <td align="right"></td>
                    </tr>               
                    <tr>
                        <td class="titulo">CLIENTE:</td>
                        <td class="td-in-well">{{ arPedidoDevolucion.clienteRel.nombreCorto }}</td>
                        <td class="titulo" ></td>
                        <td align="right"></td>
                    </tr>                       
                </table>
            </div>
        </div>

        <!-- Fin Encabezado Movimiento -->

        <ul class="nav nav-tabs">
            <li class="active"><a href="#tipos" data-toggle="tab">Detalle</a></li>
            <li><a href="#otrosConceptos" data-toggle="tab">Otros conceptos</a></li>
        </ul>

        <div class="tab-content">
            <div class="tab-pane active" id="tipos">
                <!-- Menu Encabezado Movimiento -->
                <div id="detalles" style="width: 100%"><br>
                    <table class="table table-striped table-bordered table-condensed">
                        <tr>
                            <th>COD</th>
                            <th>SERVICIO</th>
                            <th>MODALIDAD</th>
                            <th>PERIODO</th>
                            <th><p data-toggle="tooltip" data-placement="top" title="Liquidar dias reales">LDR</p></th>                                                        
                            <th>DES</th>
                            <th>HAS</th>
                            <th>CANT</th>
                            <th>LU</th>
                            <th>MA</th>
                            <th>MI</th>
                            <th>JU</th>
                            <th>VI</th>
                            <th>SA</th>
                            <th>DO</th>
                            <th>FE</th>
                            <th><p data-toggle="tooltip" data-placement="top" title="Horas (Programadas)">H(P)</p></th>                            
                            <th><p data-toggle="tooltip" data-placement="top" title="Horas diurnas (Programadas)">HD(P)</p></th>                            
                            <th><p data-toggle="tooltip" data-placement="top" title="Horas nocturnas (Programadas)">HN(P)</p></th>                            
                            <th>DIAS</th>
                            <th><p data-toggle="tooltip" data-placement="top" title="Precio minimo">P.MIN</p></th>                            
                            <th><p data-toggle="tooltip" data-placement="top" title="Precio ajustado">P.AJU</p></th>                            
                            <th>SUBTOTAL</th>  
                            <th>TOTAL</th>  
                            <th><p data-toggle="tooltip" data-placement="top" title="Grupo facturacion">GF</p></th>                            
                            <th>PRG</th>
                            <th>FAC</th>
                            <th>C</th>
                            <th></th>
                            <th></th>               
                            <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
                        </tr>
                        {% set intPuesto = '' %}
                        {% for arPedidoDevolucionDetalle in arPedidoDevolucionDetalle %}
                            {% if intPuesto != arPedidoDevolucionDetalle.codigoPuestoFk or arPedidoDevolucionDetalle.codigoPuestoFk == '' %}                                
                                 <tr>
                                     <td id="suptipo" colspan="38"><b>{{ arPedidoDevolucionDetalle.puestoRel.nombre | default('') }}<b/>
                                     </td>
                                 </tr>
                                 {% set intPuesto = arPedidoDevolucionDetalle.codigoPuestoFk %}
                             {% endif %}                             
                            <tr {% if arPedidoDevolucionDetalle.marca == 1 %} class="success" {% endif %}>
                                <td><a href="javascript:abrirVentana3('{{ path('brs_tur_movimiento_pedido_detalle_resumen', {'codigoPedidoDetalle': arPedidoDevolucionDetalle.codigoPedidoDetallePk }) }}', 'pedidoDetalleResumen', 600, 900)">{{ arPedidoDevolucionDetalle.codigoPedidoDetallePk }}</a><input type="hidden" name="LblCodigo[]" value="{{ arPedidoDevolucionDetalle.codigoPedidoDetallePk }}"></td>                                
                                <td>{{ arPedidoDevolucionDetalle.conceptoServicioRel.nombre  }}</td>                    
                                <td>{{ arPedidoDevolucionDetalle.modalidadServicioRel.nombre  }}</td>                    
                                <td>{{ arPedidoDevolucionDetalle.periodoRel.nombre  }}</td>
                                <td>{% if arPedidoDevolucionDetalle.compuesto == 0 %}{% if arPedidoDevolucionDetalle.liquidarDiasReales == 1 %} SI {% else %} NO {% endif %}{% endif %}</td>                                                                                       
                                <td>{% if arPedidoDevolucionDetalle.compuesto == 0 %}{{ arPedidoDevolucionDetalle.diaDesde }}{% endif %}</td>    
                                <td>{% if arPedidoDevolucionDetalle.compuesto == 0 %}{{ arPedidoDevolucionDetalle.diaHasta }}{% endif %}</td>    
                                <td>{% if arPedidoDevolucionDetalle.compuesto == 0 %}{{ arPedidoDevolucionDetalle.cantidad  }}{% endif %}</td>
                                <td>{% if arPedidoDevolucionDetalle.compuesto == 0 %}{% if arPedidoDevolucionDetalle.lunes == 1 %} SI {% else %} NO {% endif %}{% endif %}</td>
                                <td>{% if arPedidoDevolucionDetalle.compuesto == 0 %}{% if arPedidoDevolucionDetalle.martes == 1 %} SI {% else %} NO {% endif %}{% endif %}</td>
                                <td>{% if arPedidoDevolucionDetalle.compuesto == 0 %}{% if arPedidoDevolucionDetalle.miercoles == 1 %} SI {% else %} NO {% endif %}{% endif %}</td>
                                <td>{% if arPedidoDevolucionDetalle.compuesto == 0 %}{% if arPedidoDevolucionDetalle.jueves == 1 %} SI {% else %} NO {% endif %}{% endif %}</td>
                                <td>{% if arPedidoDevolucionDetalle.compuesto == 0 %}{% if arPedidoDevolucionDetalle.viernes == 1 %} SI {% else %} NO {% endif %}{% endif %}</td>
                                <td>{% if arPedidoDevolucionDetalle.compuesto == 0 %}{% if arPedidoDevolucionDetalle.sabado == 1 %} SI {% else %} NO {% endif %}{% endif %}</td>
                                <td>{% if arPedidoDevolucionDetalle.compuesto == 0 %}{% if arPedidoDevolucionDetalle.domingo == 1 %} SI {% else %} NO {% endif %}{% endif %}</td>
                                <td>{% if arPedidoDevolucionDetalle.compuesto == 0 %}{% if arPedidoDevolucionDetalle.festivo == 1 %} SI {% else %} NO {% endif %}{% endif %}</td>                                
                                <td style="text-align: right">{{ arPedidoDevolucionDetalle.horas | number_format(1, '.', ',') }}({{ arPedidoDevolucionDetalle.horasProgramadas | number_format(1, '.', ',') }})</td> 
                                <td style="text-align: right">{{ arPedidoDevolucionDetalle.horasDiurnas | number_format(1, '.', ',') }}({{ arPedidoDevolucionDetalle.horasDiurnasProgramadas | number_format(1, '.', ',') }})</td> 
                                <td style="text-align: right">{{ arPedidoDevolucionDetalle.horasNocturnas | number_format(1, '.', ',') }}({{ arPedidoDevolucionDetalle.horasNocturnasProgramadas | number_format(1, '.', ',') }})</td> 
                                <td style="text-align: right">{{ arPedidoDevolucionDetalle.dias | number_format(0, '.', ',') }}</td>                                 
                                <td style="text-align: right">{{ arPedidoDevolucionDetalle.vrPrecioMinimo | number_format(0, '.', ',') }}</td>                     
                                {% if arPedidoDevolucion.estadoAutorizado == 0 and arPedidoDevolucionDetalle.compuesto == 0%}
                                    <td style="text-align: right"><input class="input-grid" type="text" name="TxtValorAjustado{{ arPedidoDevolucionDetalle.codigoPedidoDetallePk }}" value="{{ arPedidoDevolucionDetalle.vrPrecioAjustado  }}" size="10" style="text-align: right; width:80px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                                                
                                    {% else %}
                                    <td style="text-align: right">{{ arPedidoDevolucionDetalle.vrPrecioAjustado | number_format(0, '.', ',') }}</td> 
                                {% endif %}                    
                                <td style="text-align: right">{{ arPedidoDevolucionDetalle.vrSubtotal | number_format(0, '.', ',') }}</td>                                                     
                                <td style="text-align: right">{{ arPedidoDevolucionDetalle.vrTotalDetalle | number_format(0, '.', ',') }}</td>                                                     
                                <td>{{ arPedidoDevolucionDetalle.grupoFacturacionRel.abreviatura | default('')  }}</td>                                                                
                                <td>{% if arPedidoDevolucionDetalle.estadoProgramado == 1 %} SI {% else %} NO {% endif %}</td>
                                <td>{% if arPedidoDevolucionDetalle.estadoFacturado == 1 %} SI {% else %} NO {% endif %}</td>
                                <td>{% if arPedidoDevolucionDetalle.compuesto == 1 %} 
                                        <a href="{{ path('brs_tur_movimiento_pedido_compuesto_detalle', { 'codigoPedidoDetalle': arPedidoDevolucionDetalle.codigoPedidoDetallePk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a>                                                    
                                    {% else %} 
                                        NO 
                                    {% endif %}
                                </td>                                 
                                <td>{% if arPedidoDevolucion.estadoAutorizado == 0 %}<a href="javascript:abrirVentana3('{{ path('brs_tur_movimiento_pedido_detalle_nuevo', {'codigoPedido': arPedidoDevolucion.codigoPedidoPk, 'codigoPedidoDetalle': arPedidoDevolucionDetalle.codigoPedidoDetallePk }) }}', 'AgregarNuevoDetalle', 600, 900)"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a>{% endif %}</td>                                        
                                <td style="text-align: center" {% if arPedidoDevolucionDetalle.ajusteProgramacion == 1 %} class="danger" {% endif %}><a href="{{ path('brs_tur_movimiento_pedido_detalle_recurso', { 'codigoPedidoDetalle': arPedidoDevolucionDetalle.codigoPedidoDetallePk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_043_group.png') }}" width=22 height=22></a></td>                                                        
                                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPedidoDevolucionDetalle.codigoPedidoDetallePk }}" /></td>
                            </tr>
                        {% endfor %}
                    </table>
                    <div class="btn-toolbar" style="float: left">    
                        <div class="btn-group">
                            <a  class="btn btn-default btn-sm" href="{{ path('brs_tur_movimiento_pedido') }}">Volver</a>
                        </div>
                        <div class="btn-group">
                            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arPedidoDevolucionDetalle.getTotalItemCount }}</span></div>                        
                        </div>
                    </div>                    
                    <div class="btn-toolbar" style="float: right">
                        {% if arPedidoDevolucion.estadoAutorizado == 0 %}
                            <div class="btn-group">
                                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_movimiento_pedido_detalle_nuevo', {'codigoPedido': arPedidoDevolucion.codigoPedidoPk, 'codigoPedidoDetalle': 0 }) }}', 'AgregarNuevoDetalle', 600, 900)">Nuevo</a>
                            </div>
                        {% endif %}            
                        <div class="btn-group">
                            {{ form_widget(form.BtnDetalleExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                        </div>                        
                        <div class="btn-group">
                            {{ form_widget(form.BtnDetalleActualizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                        </div>        
                        <div class="btn-group">
                            {{ form_widget(form.BtnDetalleDesprogramar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                            {{ form_widget(form.BtnDetalleAjuste, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                            {{ form_widget(form.BtnDetalleMarcar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                                                        
                            {{ form_widget(form.BtnDetalleEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                        </div>
                    </div>                    
                </div>
            </div>
            <div class="tab-pane" id="otrosConceptos">
                <div id="otrosConceptos" style="width: 100%"><br>
                    <table class="table table-striped table-bordered table-condensed">
                        <tr>
                            <th>COD</th>
                            <th>PUESTO</th>
                            <th>NOMBRE</th>
                            <th>%IVA</th>
                            <th>CANTIDAD</th>
                            <th>PRECIO</th>
                            <th>SUBTOTAL</th>
                            <th>IVA</th>
                            <th>TOTAL</th>
                            <th></th>
                        </tr>
                        {% for arPedidoDevolucionDetalleConceptos in arPedidoDevolucionDetalleConceptos %}
                            <tr>
                                <td>{{ arPedidoDevolucionDetalleConceptos.codigoPedidoDetalleConceptoPk  }}<input type="hidden" name="LblCodigoConcepto[]" value="{{ arPedidoDevolucionDetalleConceptos.codigoPedidoDetalleConceptoPk }}"></td>
                                <td>{{ arPedidoDevolucionDetalleConceptos.puestoRel.nombre | default('') }}</td>
                                <td>{{ arPedidoDevolucionDetalleConceptos.conceptoServicioRel.nombre | default('') }}</td>
                                <td style="text-align: right">{{ arPedidoDevolucionDetalleConceptos.porIva | number_format(0, '.', ',') }}</td>                                
                                {% if arPedidoDevolucion.estadoAutorizado == 0 %}
                                    <td style="text-align: right"><input class="input-grid" type="text" name="TxtCantidadConcepto{{ arPedidoDevolucionDetalleConceptos.codigoPedidoDetalleConceptoPk }}" value="{{ arPedidoDevolucionDetalleConceptos.cantidad  }}" size="20" style="width:120px; text-align: right" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                                    <td style="text-align: right"><input class="input-grid" type="text" name="TxtPrecioConcepto{{ arPedidoDevolucionDetalleConceptos.codigoPedidoDetalleConceptoPk }}" value="{{ arPedidoDevolucionDetalleConceptos.precio  }}" size="20" style="width:120px; text-align: right" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                                {% else %}
                                    <td style="text-align: right">{{ arPedidoDevolucionDetalleConceptos.cantidad | number_format(0, '.', ',') }}</td>
                                    <td style="text-align: right">{{ arPedidoDevolucionDetalleConceptos.precio | number_format(0, '.', ',') }}</td>
                                {% endif %}
                                <td style="text-align: right">{{ arPedidoDevolucionDetalleConceptos.subtotal | number_format(0, '.', ',') }}</td>
                                <td style="text-align: right">{{ arPedidoDevolucionDetalleConceptos.iva | number_format(0, '.', ',') }}</td>
                                <td style="text-align: right">{{ arPedidoDevolucionDetalleConceptos.total | number_format(0, '.', ',') }}</td>
                                <td><input type="checkbox" name="ChkSeleccionarPedidoDevolucionConcepto[]" value="{{ arPedidoDevolucionDetalleConceptos.codigoPedidoDetalleConceptoPk }}" /></td>
                            </tr>
                        {% endfor %}
                    </table>
                    <div class="btn-toolbar" style="float: left">    
                        <div class="btn-group">
                            <a  class="btn btn-default btn-sm" href="{{ path('brs_tur_movimiento_pedido') }}">Volver</a>
                        </div>
                        <div class="btn-group">
                            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arPedidoDevolucionDetalleConceptos.getTotalItemCount }}</span></div>                        
                        </div>
                    </div>                    
                    <div class="btn-toolbar" style="float: right">
                        {% if arPedidoDevolucion.estadoAutorizado == 0 %}
                        <div class="btn-group">
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_movimiento_pedido_detalle_concepto_nuevo', {'codigoPedido': arPedidoDevolucion.codigoPedidoPk}) }}', 'AgregarServicioDetalleOtro', 600, 900)">Nuevo</a>
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_movimiento_pedido_detalle_concepto_servicio_nuevo', {'codigoPedido': arPedidoDevolucion.codigoPedidoPk}) }}', 'AgregarServicioDetalleOtro', 600, 900)">Nuevo desde servicio</a>
                        </div>
                        {% endif %}
                        <div class="btn-group">
                            {{ form_widget(form.BtnDetalleConceptoActualizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                        </div>                        
                        <div class="btn-group">
                            {{ form_widget(form.BtnDetalleConceptoEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
                        </div>
                    </div>
                </div>
            </div>                         
        </div>


        {{ form_rest(form) }}
        {{ form_end(form) }}        
    </div>
{% endblock %}
