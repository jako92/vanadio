{% extends '::base2.html.twig' %}
{% block title %}Novedad nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo novedad</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body"> 
            <div class="form-group form-group-sm">
                <label for="form_novedadTipoRel" class="col-sm-3 control-label">Tipo:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.novedadTipoRel, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>            
            <div class="form-group form-group-sm">
                <label for="txtCodigoRecurso" class="col-sm-3 control-label">Recurso:</label>
                <div class="col-sm-9">
                    <div class="row">
                      <div class="col-lg-2">
                        <div class="input-group">
                          <input id="txtCodigoRecurso"  name="txtCodigoRecurso"  type="text" class="form-control" value="{{ arNovedad.recursoRel.codigoRecursoPk |default('') }}"/>
                        </div>
                      </div>
                      <div class="col-lg-10">
                        <div class="input-group">                                      
                          <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arNovedad.recursoRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                          <span class="input-group-btn">                                        
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_buscar_recurso', { 'campoCodigo': 'txtCodigoRecurso', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarRecurso', 600, 900)">Buscar</a>
                          </span>
                        </div>
                      </div>
                    </div>
                </div>
            </div>     
            <div class="form-group form-group-sm">
                <label for="txtCodigoRecursoReemplazo" class="col-sm-3 control-label">Recurso reemplazo:</label>
                <div class="col-sm-9">
                    <div class="row">
                      <div class="col-lg-2">
                        <div class="input-group">
                          <input id="txtCodigoRecursoReemplazo"  name="txtCodigoRecursoReemplazo"  type="text" class="form-control" value="{{ arNovedad.recursoReemplazoRel.codigoRecursoPk |default('') }}"/>
                        </div>
                      </div>
                      <div class="col-lg-10">
                        <div class="input-group">                                      
                          <input id="txtNombreCortoReemplazo"  name="txtNombreCortoReemplazo"  type="text" class="form-control" value="{{ arNovedad.recursoReemplazoRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                          <span class="input-group-btn">                                        
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_tur_buscar_recurso', { 'campoCodigo': 'txtCodigoRecursoReemplazo', 'campoNombre': 'txtNombreCortoReemplazo' }) }}', 'buscarRecurso', 600, 900)">Buscar</a>
                          </span>
                        </div>
                      </div>
                    </div>
                </div>
            </div>                          
            <div class="form-group form-group-sm">
                <label for="form_fechaDesde" class="col-sm-3 control-label">Desde:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.fechaDesde) }}
                </div>
            </div>                          
            <div class="form-group form-group-sm">
                <label for="form_fechaHasta" class="col-sm-3 control-label">Hasta:</label>
                <div class="col-sm-9">
                        {{ form_widget(form.fechaHasta) }}
                </div>
            </div>                                          
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-3 control-label">Comentarios:</label>
                <div class="col-sm-9">
                   {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>                 
        </div>
    </div>               
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_tur_movimiento_novedad') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}