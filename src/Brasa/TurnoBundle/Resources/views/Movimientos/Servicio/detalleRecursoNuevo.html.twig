{% extends '::base_sin_menu.html.twig' %}
{% block title %}Servicio detalle recurso nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <h3>Nuevo recurso servicio</h3>
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">

                <div class="form-group form-group-sm">  
                    <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtNombre , { 'attr': {'class': 'form-control','autofocus':'autofocus', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}
                    </div>                   
                </div>  
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">Codigo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.TxtCodigo , { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label class="col-sm-2 control-label">Identificacion</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.TxtIdentificacion , { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>                        
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                                                    
            </div>
        </div>  
        <table  class="table table-striped table-bordered table-condensed table-hover">            
            <tr>
                <th>{{ knp_pagination_sortable(arRecursos, 'CÃ“DIGO', 'e.codigoRecursoPk') }}</th>
                <th>NIT</th>
                <th>{{ knp_pagination_sortable(arRecursos, 'NOMBRE', 'e.nombreCorto') }}</th>
                <th>{{ knp_pagination_sortable(arRecursos, 'APODO', 'e.apodo') }}</th>
                <th></th>
            </tr>
            {% for arRecursos in arRecursos %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arRecursos.codigoRecursoPk }}">{{ arRecursos.codigoRecursoPk }} </td>
                <td>{{ arRecursos.numeroIdentificacion  }}</td>
                <td>{{ arRecursos.nombreCorto }}</td>
                <td>{{ arRecursos.apodo }}</td>  
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arRecursos.codigoRecursoPk }}" /></td>
            </tr>
            {% endfor %} 
        </table>                
        <div class="modal-footer">            
                {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}