{% extends '::base_sin_menu.html.twig' %}
{% block title %}Servicio detalle nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Nuevo detalle servicio</h3>
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body"> 
                <div class="form-group form-group-sm">
                    <label for="form_conceptoServicioRel" class="col-sm-3 control-label">Servicio:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.conceptoServicioRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>             
                <div class="form-group form-group-sm">
                    <label for="form_modalidadServicioRel" class="col-sm-3 control-label">Modalidad:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.modalidadServicioRel, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>               
                <div class="form-group form-group-sm">
                    <label for="form_fechaDesde" class="col-sm-3 control-label">Desde:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.fechaDesde) }}                        
                    </div>                                
                </div>     
                <div class="form-group form-group-sm">               
                    <label for="form_fechaHasta" class="col-sm-3 control-label">Hasta:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.fechaHasta) }}                        
                    </div>                 
                </div>                
                <div class="form-group form-group-sm">
                    <label for="form_puestoRel" class="col-sm-3 control-label">Puesto:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.puestoRel, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Grupo facturacion:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.grupoFacturacionRel, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                    
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Compuesto:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.compuesto) }}
                    </div>
                </div>                
                <div class="form-group form-group-sm">
                    <label for="form_liquidarDiasReales" class="col-sm-3 control-label">Liquidar dias reales:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.liquidarDiasReales) }}
                    </div>
                </div>                 
                <div class="form-group form-group-sm">
                    <label for="form_dia31" class="col-sm-3 control-label">Habilitar dia 31:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.dia31) }}
                    </div>
                </div>                    
                <div class="form-group form-group-sm">
                    <label for="form_cantidad" class="col-sm-3 control-label">Cantidad:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.cantidad, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                
                <div class="form-group form-group-sm">
                    <label for="form_lunes" class="col-sm-3 control-label"></label>
                    <div class="col-sm-9">
                        Lun{{ form_widget(form.lunes) }}  Mar{{ form_widget(form.martes) }} Mie{{ form_widget(form.miercoles) }}
                        Jue{{ form_widget(form.jueves) }} Vie{{ form_widget(form.viernes) }} Sab{{ form_widget(form.sabado) }} 
                        Dom{{ form_widget(form.domingo) }} Fes{{ form_widget(form.festivo) }}
                    </div>                
                </div>               
            </div>
        </div>               
        <div class="modal-footer">        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}