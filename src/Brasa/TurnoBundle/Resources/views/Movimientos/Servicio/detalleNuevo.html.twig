{% extends '::base_sin_menu.html.twig' %}
{% block title %}Servicio detalle nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Servicio: nuevo detalle del servicio</small>
        </h1>
    </section>    
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">   
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Servicio:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.conceptoServicioRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label class="col-sm-2 control-label">Servicio (facturacion):</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.conceptoServicioFacturacionRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Modalidad:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.modalidadServicioRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label class="col-sm-2 control-label">Grupor facturacion:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.grupoFacturacionRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>                                  
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Puesto:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.puestoRel, { 'attr': {'class': 'form-control'} }) }}   
                    </div>
                    <label class="col-sm-2 control-label">Cantidad:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.cantidad, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>                     
                <div class="form-group form-group-sm">
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaDesde) }}                        
                    </div>  
                    <label class="col-sm-2 control-label">Salario base (Liquidacion):</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.vrSalarioBase, { 'attr': {'class': 'form-control'} }) }}
                    </div>                                          
                </div>     
                <div class="form-group form-group-sm">               
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaHasta) }}                        
                    </div> 
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        <div class="col-sm-4">{{ form_widget(form.lunes) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.martes) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.miercoles) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.jueves) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.viernes) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.sabado) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.domingo) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.festivo) }}</div>
                    </div>                     
                </div>   
                <div class="form-group form-group-sm">
                    <label  class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                                                
                    </div>  
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        <div class="col-sm-4">{{ form_widget(form.compuesto) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.liquidarDiasReales) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.dia31) }}</div>
                    </div>                     
                </div>                     
            </div>
        </div>               
        <div class="modal-footer">        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}