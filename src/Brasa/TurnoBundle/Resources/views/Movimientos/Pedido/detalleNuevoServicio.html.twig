{% extends '::base_sin_menu.html.twig' %}
{% block title %}Programacion detalle nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Pedido: nuevo detalle desde servicio</small>
        </h1>
    </section>    
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Nuevo detalle desde servicio</h3>
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">                            

            </div>
        </div>    
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>COD</th>
                <th>SER</th>                
                <th>PUESTO</th>
                <th>SERVICIO</th>
                <th>MODALIDAD</th>
                <th>PERIODO</th>
                <th>PLANTILLA</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>CANT</th>
                <th>LU</th>
                <th>MA</th>
                <th>MI</th>
                <th>JU</th>
                <th>VI</th>
                <th>SA</th>
                <th>DO</th>
                <th>FE</th>
                <th>H</th>
                <th>H.D</th>
                <th>H.N</th>
                <th>DIAS</th>
                <th>VALOR</th>
                <th></th>
            </tr>
            {% for arServicioDetalles in arServicioDetalles %}
                <tr>
                    <td>{{ arServicioDetalles.codigoServicioDetallePk  }}</td>
                    <td>{{ arServicioDetalles.codigoServicioFk }}</td>                                
                    <td>{{ arServicioDetalles.puestoRel.nombre | default('') }}</td> 
                    <td>{{ arServicioDetalles.conceptoServicioRel.nombre  }}</td>                    
                    <td>{{ arServicioDetalles.modalidadServicioRel.nombre  }}</td>                    
                    <td>{{ arServicioDetalles.periodoRel.nombre  }}</td>
                    <td>{{ arServicioDetalles.plantillaRel.nombre | default('')  }}</td>
                    <td>{{ arServicioDetalles.fechaDesde | date('Y/m/d') }}</td>    
                    <td>{{ arServicioDetalles.fechaHasta | date('Y/m/d') }}</td>    
                    <td>{{ arServicioDetalles.cantidad  }}</td>
                    <td>{% if arServicioDetalles.lunes == 1 %} SI {% else %} NO {% endif %}</td>
                    <td>{% if arServicioDetalles.martes == 1 %} SI {% else %} NO {% endif %}</td>
                    <td>{% if arServicioDetalles.miercoles == 1 %} SI {% else %} NO {% endif %}</td>
                    <td>{% if arServicioDetalles.jueves == 1 %} SI {% else %} NO {% endif %}</td>
                    <td>{% if arServicioDetalles.viernes == 1 %} SI {% else %} NO {% endif %}</td>
                    <td>{% if arServicioDetalles.sabado == 1 %} SI {% else %} NO {% endif %}</td>
                    <td>{% if arServicioDetalles.domingo == 1 %} SI {% else %} NO {% endif %}</td>
                    <td>{% if arServicioDetalles.festivo == 1 %} SI {% else %} NO {% endif %}</td>
                    <td style="text-align: right">{{ arServicioDetalles.horas | number_format(0, '.', ',') }}</td> 
                    <td style="text-align: right">{{ arServicioDetalles.horasDiurnas | number_format(0, '.', ',') }}</td> 
                    <td style="text-align: right">{{ arServicioDetalles.horasNocturnas | number_format(0, '.', ',') }}</td> 
                    <td style="text-align: right">{{ arServicioDetalles.dias | number_format(0, '.', ',') }}</td> 
                    <td style="text-align: right">{{ arServicioDetalles.vrTotalDetalle | number_format(0, '.', ',') }}</td>                     
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arServicioDetalles.codigoServicioDetallePk }}" /></td>
                </tr>

            {% endfor %}
        </table>    

        <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}