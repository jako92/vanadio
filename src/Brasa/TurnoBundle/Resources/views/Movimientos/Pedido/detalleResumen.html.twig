                    <td style="text-align: right">{{ arProgramacionDetalles.horas | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arProgramacionDetalles.horasDiurnas | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arProgramacionDetalles.horasNocturnas | number_format(0, '.', ',') }}</td>
                </tr>
            {% endfor %}
        </table>
        <br/><br/><br/><br/>
    </section>
{% endblock %}