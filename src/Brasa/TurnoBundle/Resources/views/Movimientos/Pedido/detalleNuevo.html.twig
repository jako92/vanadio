{% extends '::base_sin_menu.html.twig' %}
{% block title %}Pedido detalle nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Pedido: nuevo detalle</small>
        </h1>
    </section>    
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion</div>
            <div class="panel-body"> 
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Servicio:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.conceptoServicioRel) }}
                    </div>
                    <label class="col-sm-2 control-label">Servicio (facturacion):</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.conceptoServicioFacturacionRel) }}
                    </div>                    
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Modalidad:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.modalidadServicioRel) }}
                    </div>
                    <label class="col-sm-2 control-label">Grupor facturacion:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.grupoFacturacionRel) }}
                    </div>                    
                </div>                    
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Puesto:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.puestoRel) }}   
                    </div>
                    <label class="col-sm-2 control-label">Cantidad:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.cantidad) }}
                    </div>                    
                </div> 
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.diaDesde) }}                        
                    </div>    
                    <label class="col-sm-2 control-label">Periodo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.periodoRel) }}
                    </div>                     
                </div>     
                <div class="form-group form-group-sm">               
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.diaHasta) }}                        
                    </div> 
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        <div class="col-sm-4">{{ form_widget(form.lunes) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.martes) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.miercoles) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.jueves) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.viernes) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.sabado) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.domingo) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.festivo) }}</div>
                    </div>                     
                </div>                      
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Detalle puesto:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.detallePuesto, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>   
                    <label class="col-sm-2 control-label"></label>
                    <div class="col-sm-4">
                        <div class="col-sm-4">{{ form_widget(form.compuesto) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.liquidarDiasReales) }}</div>
                        <div class="col-sm-4">{{ form_widget(form.dia31) }}</div>
                    </div>                      
                </div>   
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Precio (Ajustado):</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.vrPrecioAjustado, { 'attr': {'class': 'form-control'} }) }}   
                    </div>
                    <label class="col-sm-2 control-label">Salario base (Liquidacion):</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.vrSalarioBase, { 'attr': {'class': 'form-control'} }) }}   
                    </div>                  
                </div>                                    
                <div class="form-group">
                    <label class="col-sm-2 control-label">Detalle:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.detalle, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                 
            </div>
        </div>               
        <div class="modal-footer">        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}