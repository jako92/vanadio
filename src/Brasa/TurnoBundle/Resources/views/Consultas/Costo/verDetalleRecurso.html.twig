{% extends '::base_sin_menu.html.twig' %}
{% block title %}Generar soporte pago - Soga App{% endblock %}
{% block content %}  
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Costo: detalle</small>
        </h1>
    </section>     
    <section class="content"> 

        <div class="panel panel-default">
            <div class="panel-heading">Informaci√≥n</div>
            <div class="panel-body">
                <table width="100%" class="table table-condensed table-bordered">
                    <tr>
                        <td class="titulo">NOMBRE:</td>
                        <td class="td-in-well">{{ arCosto.empleadoRel.nombreCorto | default('') }}</td>
                        <td class="titulo" >NOMINA:</td>
                        <td align="right">{{ arCosto.vrNomina | number_format(0, '.', ',')}}</td>
                    </tr>                  
                    <tr>
                        <td class="titulo"></td>
                        <td class="td-in-well"></td>
                        <td class="titulo" >PRESTACIONES:</td>
                        <td align="right">{{ arCosto.vrPrestaciones | number_format(0, '.', ',')}}</td>
                    </tr> 
                    <tr>
                        <td class="titulo"></td>
                        <td class="td-in-well"></td>
                        <td class="titulo" >SEGURIDAD SOCIAL:</td>
                        <td align="right">{{ arCosto.vrAportesSociales | number_format(0, '.', ',')}}</td>
                    </tr>                     
                </table>
            </div>
        </div>        
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}                            
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>PD</th>
                <th>CLIENTE</th>
                <th>PUESTO</th>
                <th>C_COSTO</th>
                <th>HDS</th>
                <th>HD</th>
                <th>HN</th>
                <th>HFD</th>
                <th>HFN</th>
                <th>HEOD</th>
                <th>HEON</th>
                <th>HEFD</th>
                <th>HEFN</th>
                <th>RD</th>
                <th>RFD</th>
                <th>RFN</th>
                <th>%PART</th>
                <th>NOM</th>
                <th>SSO</th>
                <th>PRE</th>
                <th>COSTO</th>
            </tr>
            {% for arCostoDetalle in arCostoDetalle %}
                <tr>
                    <td>{{ arCostoDetalle.codigoPedidoDetalleFk }}</td>                               
                    <td>{{ arCostoDetalle.clienteRel.nombreCorto | default('')  }}</td>                               
                    <td>{{ arCostoDetalle.puestoRel.nombre | default('')  }}</td>                               
                    <td>{{ arCostoDetalle.codigoCentroCostoFk }}</td>                               
                    <td style="text-align: right">{{ arCostoDetalle.horasDescanso | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasDiurnas | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasNocturnas | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasFestivasDiurnas | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasFestivasNocturnas | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasExtrasOrdinariasDiurnas | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasExtrasOrdinariasNocturnas | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasExtrasFestivasDiurnas | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasExtrasFestivasNocturnas | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasRecargoNocturno | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasRecargoFestivoDiurno | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasRecargoFestivoNocturno | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.participacion | number_format(1, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.costoNomina | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.costoSeguridadSocial | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.costoPrestaciones | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.costo | number_format(0, '.', ',') }}</td>
                </tr>

            {% endfor %}
        </table>

        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>PD</th>
                <th>CLIENTE</th>
                <th>PUESTO</th>
                <th>HDS</th>
                <th>HD</th>
                <th>HN</th>
                <th>HFD</th>
                <th>HFN</th>
                <th>HEOD</th>
                <th>HEON</th>
                <th>HEFD</th>
                <th>HEFN</th>
                <th>RD</th>
                <th>RFD</th>
                <th>RFN</th>
            </tr>
            {% for arCostoDetalle in arCostoDetalle %}
                <tr>
                    <td>{{ arCostoDetalle.codigoPedidoDetalleFk }}</td>                               
                    <td>{{ arCostoDetalle.clienteRel.nombreCorto | default('')  }}</td>                               
                    <td>{{ arCostoDetalle.puestoRel.nombre | default('')  }}</td>                               
                    <td style="text-align: right">{{ arCostoDetalle.horasDescansoCosto | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasDiurnasCosto | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasNocturnasCosto | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasFestivasDiurnasCosto | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasFestivasNocturnasCosto | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasExtrasOrdinariasDiurnasCosto | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasExtrasOrdinariasNocturnasCosto | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasExtrasFestivasDiurnasCosto | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasExtrasFestivasNocturnasCosto | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasRecargoNocturnoCosto | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasRecargoFestivoDiurnoCosto | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCostoDetalle.horasRecargoFestivoNocturnoCosto | number_format(2, '.', ',') }}</td>
                </tr>

            {% endfor %}
        </table>        

        <div class="btn-group" style="float: left">                
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arCostoDetalle.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arCostoDetalle) }}
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
