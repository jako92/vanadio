{% extends '::base_sin_menu.html.twig' %}
{% block title %}Contrato adicion nuevo - Soga App{% endblock %} 
{% block content %}
<div class="container">    
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <h3>Nuevo contrato adicion</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">            
        </div> 
        <div class="form-group form-group-sm">
            <label for="form_fecha" class="col-sm-2 control-label">Fecha:</label>
            <div class="col-sm-10">
                    {{ form_widget(form.fecha, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="form_contratoAdicionTipoRel" class="col-sm-2 control-label">Tipo contrato adicion:</label>
            <div class="col-sm-10">                       
                {{ form_widget(form.contratoAdicionTipoRel, { 'attr': {'class': 'form-control'} }) }}
                     
            </div>
        </div>    
        <div class="form-group">
                <label class="col-sm-2 control-label">Contenido:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.contenido, { 'attr': {'class': 'form-control', 'rows': 20} }) }}
                </div>
            </div>        
</div>
</div>
    <div class="modal-footer">
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>    
{% endblock %}
