{% extends '::base.html.twig' %}
{% block title %}Medio magneticos - Soga App{% endblock %}
{% block content %}
    <div class="container">
        <div class="page-header">
            <h3>Medios magneticos</h3>
        </div>

        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        
        <div class="panel panel-default">
        <div class="panel-heading">Informacion a generar</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_fechaProceso" class="col-sm-2 control-label">Fecha proceso:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.fechaProceso, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
                
            
            
            <div class="form-group form-group-sm">
                <label for="form_formatos" class="col-sm-2 control-label">Formatos:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.formatos, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>      
        </div>
    </div>
        <!-- Fin-->
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnGenerarArchivo, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>    
        
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
