{% extends '::base2.html.twig' %}
{% block title %}Informaci√≥n dane - Soga App{% endblock %}
{% block content %}
        <section class="content-header">
        <h1>
            Recurso humano
            <small>Informacion DANE: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Utilidades</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Informacion DANE</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content"> 
    <script type="text/javascript">
        $(document).ready(function () {
            $('.date').datepicker({dateFormat: 'yy-mm-dd', dayNamesMin: ["Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]})
        });
    </script>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}

    <div class="panel panel-default">
        <div class="panel-heading">Informacion a generar</div>
        <div class="panel-body">            
            <div class="form-group form-group-sm">
                <label for="form_fechaDesde" class="col-sm-2 control-label">Informe Desde:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaDesde, {'attr': {'maxlength' : 10} }) }} 
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaHasta" class="col-sm-2 control-label">Informe Hasta:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaHasta, {'attr': {'maxlength' : 10} }) }} 
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label for="form_formatos" class="col-sm-2 control-label">Formatos:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.formatos, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>      
        </div>
    </div>
    <!-- Fin-->
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.BtnGenerarArchivo, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
    </div>    

    {{ form_rest(form) }}
    {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>      
{% endblock %}
