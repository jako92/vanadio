{% extends '::base2.html.twig' %}
{% block title %}Configuración aportes - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Configuracion: Aporte</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Utilidades</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Seguridad social</a></li>
            <li class="active">Configuracion</li>
        </ol>
    </section>    
    <section class="content">        	
        <script>
            $('#myTab a').click(function (e) {
                e.preventDefault();
                $(this).tab('show');
            })
        </script>
        {{ form_start(formConfiguracionAporte, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(formConfiguracionAporte) }}
        <ul class="nav nav-tabs">
            <li class="active"><a href="#configuracion" data-toggle="tab">Configuración</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active" id="configuracion">
                <div class="panel panel-default">
                    <div class="panel-heading">Información de la configuración</div>
                    <div class="panel-body">
                        <div class="form-group form-group-sm">
                            <label class="col-sm-3 control-label">Forma presentación:</label>
                            <div class="col-sm-9">
                                {{ form_widget(formConfiguracionAporte.formaPresentacion, { 'attr': {'class': 'form-control'} }) }}
                                <p style="font-size: 0.9em;">* U= unica S = Sucursal</p> 
                            </div>
                        </div>
                        <div class="form-group form-group-sm">    
                            <label class="col-sm-3 control-label">Nombre empresa:</label>
                            <div class="col-sm-9">
                                {{ form_widget(formConfiguracionAporte.nombreEmpresa, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group form-group-sm">    
                            <label class="col-sm-3 control-label">Tipo indentificacion empresa:</label>
                            <div class="col-sm-9">
                                {{ form_widget(formConfiguracionAporte.tipoIdentificacionEmpresa, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>
                        <div class="form-group form-group-sm">    
                            <label class="col-sm-3 control-label">Identificación empresa:</label>
                            <div class="col-sm-9">
                                {{ form_widget(formConfiguracionAporte.identificacionEmpresa, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>                            
                        <div class="form-group form-group-sm">    
                            <label class="col-sm-3 control-label">Dígito de verificación:</label>
                            <div class="col-sm-9">
                                {{ form_widget(formConfiguracionAporte.digitoVerificacionEmpresa, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>    
                        <div class="form-group form-group-sm">    
                            <label class="col-sm-3 control-label">Codigo entidad de riesgo:</label>
                            <div class="col-sm-9">
                                {{ form_widget(formConfiguracionAporte.codigoEntidadRiesgosProfesionales, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                        </div>                        
                    </div>
                </div>  
            </div>
            <div class="modal-footer">      
                {{ form_widget(formConfiguracionAporte.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            </div>                    
        </div>
        {{ form_end(formConfiguracionAporte) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
