{% extends '::base2.html.twig' %}
{% block title %}Seguridad social empleados - Soga App{% endblock %}
{% block content %}
        <section class="content-header">
        <h1>
            Recurso humano
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content"> 
    <div class="page-header">
        <h3>Lista empleados sucursal</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}        
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">  
                <label for="form_centroCostoRel" class="col-sm-2 control-label">Grupo pago:</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>      
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>                                                    
        </div>
    </div>
    <table  class="table table-striped table-bordered table-condensed table-hover">            
        <tr>
            <th>ID</th>
            <th>DOCUMENTO</th>
            <th>NOMBRE</th>
            <th>GRUPO PAGO</th>
            <th>CONTRATO</th>
            <th>D√çAS</th>
            <th>SALARIO</th>                
            <th>IBC</th>
            <th>VST</th>
            <th align="center"><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
        </tr>
        {% for arPeriodoEmpleados in arPeriodoEmpleados %}
            <tr>
                <td>{{ arPeriodoEmpleados.codigoPeriodoEmpleadoPk }} </td>
                <td>{{ arPeriodoEmpleados.empleadoRel.numeroIdentificacion  }}</td>
                <td>{{ arPeriodoEmpleados.empleadoRel.nombreCorto  }}</td>
                <td>{{ arPeriodoEmpleados.empleadoRel.centroCostoRel.nombre |default('') }}</td>
                <td>{{ arPeriodoEmpleados.codigoContratoFk  }}</td>
                <td style="text-align: right">{{ arPeriodoEmpleados.dias | number_format(0, '.', ',') }}</td>    
                <td style="text-align: right">{{ arPeriodoEmpleados.vrSalario | number_format(0, '.', ',') }}</td>                
                <td style="text-align: right">{{ arPeriodoEmpleados.ibc | number_format(0, '.', ',') }}</td>
                <td>{{ arPeriodoEmpleados.variacionTransitoriaSalario  }}</td>                
                <td style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPeriodoEmpleados.codigoPeriodoEmpleadoPk }}" /></td>
            </tr>
        {% endfor %}                        
    </table>                       
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arPeriodoEmpleados.getTotalItemCount }}</span></div>                        
    </div>
    <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arPeriodoEmpleados) }}       
    </div>    

    <!-- Botones Menu Items -->
    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_ss_periodo_detalle', { 'codigoPeriodo': arPeriodoDetalle.codigoPeriodoFk }) }}" style="float:left">Volver</a>
        </div>
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">    
            {{ form_widget(form.BtnActualizarEmpleados, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}                
        </div>           
        <div class="btn-group">
            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm' } }) }}                
        </div>
    </div>
    <br/><br/><br/><br/><br/>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">    
            {{ form_widget(form.BtnActualizarSalarioMinimo, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnActualizarEmpleadoAporte, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                    
        </div>
        {% if  arPeriodoDetalle.estadoGenerado == 0 %}    
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_ss_periodo_detalle_empleados_copiar', { 'codigoPeriodoDetalle': arPeriodoDetalle.codigoPeriodoDetallePk}) }}', 'Traslado', 600, 900)" style="float:left">Copiar</a>
            </div>
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_ss_periodo_detalle_empleados_trasladar', { 'codigoPeriodoDetalle': arPeriodoDetalle.codigoPeriodoDetallePk}) }}', 'Traslado', 600, 900)" style="float:left">Trasladar</a>
            </div>    
        {% endif %}
        <div class="btn-group">
            {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm' } }) }}                
        </div>            
    </div>
    <!-- Fin Botones Menu Items -->
    {{ form_rest(form) }}
    {{ form_end(form) }}   
        <br/><br/><br/><br/>
    </section>      
{% endblock %}
