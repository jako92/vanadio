{% extends '::base_sin_menu.html.twig' %}
{% block title %}Periodo detalle nuevo - Soga App{% endblock %}
{% block content %}
        <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content"> 
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo periodo detalle</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n detalle nuevo</div>
        <div class="panel-body">   
            <div class="form-group form-group-sm">
                <label for="form_ssoSucursalRel" class="col-sm-2 control-label">Sucursal:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.ssoSucursalRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_detalle" class="col-sm-2 control-label">Detalle:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.detalle, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
        </div>
    </div>                   
    <div class="modal-footer">      
        <a class="btn btn-default btn-sm" onclick="window.close()">Cancelar</a>        
        {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>    
    {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>      
{% endblock %}