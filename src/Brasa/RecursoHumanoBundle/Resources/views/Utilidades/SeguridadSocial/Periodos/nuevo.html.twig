{% extends '::base_sin_menu.html.twig' %}
{% block title %}Periodo nuevo - Soga App{% endblock %}
{% block content %}
        <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content"> 
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo periodo</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Información periodo</div>
        <div class="panel-body">   
            <div class="form-group form-group-sm">
                <label for="form_anio" class="col-sm-2 control-label">Año:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.anio, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_anioPago" class="col-sm-2 control-label">Año pago:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.anioPago, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label for="form_mes" class="col-sm-2 control-label">Mes:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.mes, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_mesPago" class="col-sm-2 control-label">Mes pago:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.mesPago, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaDesde, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaHasta, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaPago" class="col-sm-2 control-label">Fecha pago:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaPago, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
        </div>
    </div>                   
    <div class="modal-footer">      
        <a class="btn btn-default btn-sm" onclick="window.close()">Cancelar</a>        
        {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>    
    {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>      
{% endblock %}