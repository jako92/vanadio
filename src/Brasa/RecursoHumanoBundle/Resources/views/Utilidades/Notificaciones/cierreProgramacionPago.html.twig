{% extends '::base2.html.twig' %}
{% block title %}Programacion pago cierre - Soga App{% endblock %}
{% block content %}
        <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content"> 
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    <div class="page-header">
        <h3>Generar pago de nomina</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}

    <table  class="table table-striped table-bordered  table-condensed table-hover">
        <tr>
            <th>CÃ“DIGO</th>                
            <th>GRUPO PAGO</th>
            <th>HASTA</th>
            <th></th>
        </tr>
        {% for arCentrosCostos in arCentrosCostos %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arCentrosCostos.codigoCentroCostoPk }}">{{ arCentrosCostos.codigoCentroCostoPk }} </td>                
                <td>{{ arCentrosCostos.nombre  }}</td>                
                <td>{{ arCentrosCostos.fechaUltimoPagoProgramado |date("Y/m/d")  }}</td>               
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCentrosCostos.codigoCentroCostoPk }}" /></td>
            </tr>
        {% endfor %}
    </table>

    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.BtnEnviar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
        </div>
    </div>
    <!-- Fin Botones Menu Items -->
    {{ form_rest(form) }}
    {{ form_end(form) }}
    <br />
    <br />
        <br/><br/><br/><br/>
    </section>      
{% endblock %}
