{% extends '::base_sin_menu.html.twig' %}
{% block title %}Traslado pensión nuevo - Soga App{% endblock %} 
{% block content %}
        <section class="content-header">
        <h1>
            Recurso humano
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content"> 
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <h3>Nuevo traslado pensión</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_tipo" class="col-sm-5 control-label">Tipo:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.tipo, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_entidadPensionNuevaRel" class="col-sm-5 control-label">Pensión nuevo:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.entidadPensionNuevaRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_fechaAplicacion" class="col-sm-5 control-label">Fecha aplicación:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.fechaAplicacion, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaFosyga" class="col-sm-5 control-label">Fecha Fosyga:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.fechaFosyga, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label for="form_detalle" class="col-sm-5 control-label">Detalle:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.detalle, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>    

        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" onclick="window.close()">Cancelar</a>
        {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>      
{% endblock %}
