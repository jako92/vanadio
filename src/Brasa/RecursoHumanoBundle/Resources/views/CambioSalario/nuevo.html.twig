{% extends '::base_sin_menu.html.twig' %}
{% block title %}Cambio salario nuevo - Soga App{% endblock %} 
{% block content %}   
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(form) }}
        <h3>Nuevo cambio salario</h3>
        <div class="panel panel-default">
            <div class="panel-heading">Información general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_salarioNuevo" class="col-sm-5 control-label">Salario nuevo:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.salarioNuevo, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div> 
                <div class="form-group form-group-sm">
                    <label for="form_fechaAplicacion" class="col-sm-5 control-label">Fecha aplicación:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.fechaAplicacion) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_detalle" class="col-sm-5 control-label">Detalle:</label>
                    <div class="col-sm-7">
                        {{ form_widget(form.detalle, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>    

            </div>
        </div>
        <div class="modal-footer">
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
