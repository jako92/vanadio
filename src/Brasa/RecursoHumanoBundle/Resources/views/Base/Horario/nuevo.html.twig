{% extends '::base2.html.twig' %}
{% block title %}Horario nuevo - Soga App{% endblock %} 
{% block content %}
<div class="container">    
    {{ form_start(formHorario, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(formHorario) }}
    <h3>Nuevo horario</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                        {{ form_widget(formHorario.nombre, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Hora entrada:</label>
