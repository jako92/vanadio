{% extends '::base2.html.twig' %}
{% block title %}Estudio tipo acreditacion nuevo - Soga App{% endblock %} 
{% block content %}
<div class="container">    
    {{ form_start(formEstudioTipoAcreditacion, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(formEstudioTipoAcreditacion) }}
    <h3>Nuevo estudio tipo acreditacion</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Codigo:</label>
                <div class="col-sm-10">
                        {{ form_widget(formEstudioTipoAcreditacion.codigoEstudioAcreditacion, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                        {{ form_widget(formEstudioTipoAcreditacion.nombre, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Cargo:</label>
                <div class="col-sm-10">
                        {{ form_widget(formEstudioTipoAcreditacion.cargo, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>        
</div>
</div>
    <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_estudiotipoacreditacion_listar') }}">Cancelar</a>
            {{ form_widget(formEstudioTipoAcreditacion.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(formEstudioTipoAcreditacion) }}
</div>    
{% endblock %}
