{% extends '::base2.html.twig' %}
{% block title %}Motivo descarte aspirante nuevo - Soga App{% endblock %} 
{% block content %}
<div class="container">    
    {{ form_start(formMotivo, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(formMotivo) }}
    <h3>Nuevo Motivo descarte aspirante</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                        {{ form_widget(formMotivo.nombre, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>                                                               
        </div>
    </div>
    <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_motivodescarte_aspirante_listar') }}">Cancelar</a>
            {{ form_widget(formMotivo.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(formMotivo) }}
</div>    
{% endblock %}
