{% extends '::base2.html.twig' %}
{% block title %}Zonas nuevo - Soga App{% endblock %} 
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(formZona, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(formZona) }}
        <h3>Nuevo zona</h3>
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-10">
                        {{ form_widget(formZona.nombre, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()', 'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>

            </div>
        </div>
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_zona') }}">Cancelar</a>
            {{ form_widget(formZona.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>            
        {{ form_end(formZona) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
