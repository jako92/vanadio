{% extends '::base2.html.twig' %}
{% block title %}Elementos dotación lista - Soga App{% endblock %}  
{% block content %}
    <div class="container">
    <div class="page-header">    
        <h3>Listado tipos dotación</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }} 
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th>CÓDIGO</th>
            <th>{{ knp_pagination_sortable(arDotacionElementosTipos, 'NOMBRE', 'codigo') }}</th> 
            <th></th>
            <th></th>
        </tr>
            {%for arDotacionElementosTipos in arDotacionElementosTipos %}
               <tr>
