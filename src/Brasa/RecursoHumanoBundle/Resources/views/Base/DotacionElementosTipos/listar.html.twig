            {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_dotacion_elemento_tipo_nuevo', {'codigoDotacionElementoTipo': 0}) }}">Nuevo</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}</td>                   
        </div>
    </div>     
