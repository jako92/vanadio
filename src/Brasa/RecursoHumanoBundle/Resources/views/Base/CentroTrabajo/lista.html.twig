{% extends '::base2.html.twig' %}
{% block title %}Grupo de pago lista - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Grupo pago: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Administracion</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Grupo pago</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>   
    <section class="content">        	
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    <!-- Formulario de busqueda -->
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }} 
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">

            <div class="form-group form-group-sm">  
                <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtNombre, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>                                                    
        </div>
    </div>                                     
    <table  class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th>CÃ“DIGO</th>
            <th>NOMBRE</th>
            <th></th>
        </tr>
        {% for arCentroTrabajo in arCentroTrabajo %}
            <tr>
                <td>{{ arCentroTrabajo.codigoCentroTrabajoPk }} </td>
                <td>{{ arCentroTrabajo.nombre  }}</td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCentroTrabajo.codigoCentroTrabajoPk }}" /></td>
            </tr>
        {% endfor %}
    </table>

    <!-- Botones Menu Items -->
    <div class="btn-group" style="float: left">
      <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arCentroTrabajo.getTotalItemCount }}</span></div>                      
    </div>
    <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arCentroTrabajo) }}       
    </div>
   
    <!-- Fin Botones Menu Items -->
    {{ form_rest(form) }}
    {{ form_end(form) }}
    <br/><br/><br/><br/>
    </section>
{% endblock %}
