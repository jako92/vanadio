{% extends '::base2.html.twig' %}
{% block title %}Cliente detalle - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Sucursal: detalle</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Administracion</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Sucursal</a></li>
            <li class="active">Detalle</li>
        </ol>
    </section>     
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informaci√≥n Sucursal</div>
            <div class="panel-body">
                <table width="100%" class="table table-condensed table-bordered">
                    <tr>
                        <td class="titulo">ID:</td>
                        <td class="td-in-well">{{ arSucursal.codigoSucursalPk }}</td>
                        <td class="titulo">SUCURSAL:</th>
                        <td class="td-in-well">{{ arSucursal.nombre }}</td>
                    </tr>
                </table>
            </div>
        </div>
        <ul class="nav nav-tabs">
            <li class="active"><a href="#sucursal" data-toggle="tab">Centro de trabajo</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane active " id="sucursal">
                <!-- Menu Encabezado Movimiento -->
                <div id="puestos" style="width: 100%"><br>
                    <table class="table table-striped table-bordered table-condensed">
                        <tr>
                            <th>ID</th>                                
                            <th>NOMBRE</th>
                            <th></th>
                            <th></th>
                        </tr>
                        {% for arCentroTrabajo in arCentroTrabajo %}
                            <tr>
                                <td>{{ arCentroTrabajo.codigoCentroTrabajoPk }} </td>
                                <td>{{ arCentroTrabajo.nombre }} </td>
                                <td><a  href="javascript:abrirVentana3('{{ path('brs_rhu_base_centro_trabajo_nuevo',{'codigoSucursal': arSucursal.codigoSucursalPk, 'codigoCentroTrabajo':arCentroTrabajo.codigoCentroTrabajoPk })}}', 'AgregarNuevoDetalle', 600, 900)"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCentroTrabajo.codigoCentroTrabajoPk }}" /></td>
                            </tr>
                        {% endfor %}

                    </table>
                    <div class="btn-toolbar" style="float: right">
                        <div class="btn-group">            
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_base_centro_trabajo_nuevo', {'codigoSucursal': arSucursal.codigoSucursalPk, 'codigoCentroTrabajo': 0 }) }}', 'AgregarNuevoDetalle', 600, 900)">Nuevo</a>                            </div>
                        <div class="btn-group">
                            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}</td>                   
                        </div>
                    </div>                    
                </div>
            </div>
        </div>

        <!-- Botones Menu Items -->
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_cliente_detalle', { 'codigoCliente': codigoCliente }) }}" style="float:left">Volver</a>
            </div>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
