{% extends '::base.html.twig' %}
{% block title %}Academia nuevo - Soga App{% endblock %} 
{% block content %}
<div class="container">    
    {{ form_start(formAcademia, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(formAcademia) }}
    <h3>Nuevo academia</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            
            <div class="form-group form-group-sm">
                <label for="form_nit" class="col-sm-2 control-label">Nit:</label>
                <div class="col-sm-10">
                        {% if form_errors(formAcademia.nit) %}
                            {{ form_widget(formAcademia.nit, { 'attr': {'class': 'form-control'} }) }}
                            <div class="alert alert-danger" role="alert">{{ form_errors(formAcademia.nit)}}</div>
                        {% else %}
                            {{ form_widget(formAcademia.nit, { 'attr': {'class': 'form-control'} }) }}
                        {% endif %}
                </div>
            </div>    
                
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                        {{ form_widget(formAcademia.nombre, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Ciudad:</label>
                <div class="col-sm-10">
                        {{ form_widget(formAcademia.ciudadRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Sede:</label>
                <div class="col-sm-10">
                        {{ form_widget(formAcademia.sede, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Teléfono:</label>
                <div class="col-sm-10">
                        {{ form_widget(formAcademia.telefono, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Dirección:</label>
                <div class="col-sm-10">
                        {{ form_widget(formAcademia.direccion, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>        
</div>
</div>
    <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_academia_listar') }}">Cancelar</a>
            {{ form_widget(formAcademia.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(formAcademia) }}
</div>    
{% endblock %}
