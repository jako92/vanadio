{% extends '::base_sin_menu.html.twig' %}
{% block title %}Empleado carga foto - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Cargar foto</h3>
        <div class="panel panel-default">
            <div class="panel-heading">Cargar archivo</div>
            <div class="panel-body">
                <div>                      
                    <div class="form-group form-group-sm">
                        <label for="form_archivo" class="col-sm-2 control-label">Cargar:</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.attachment, { 'attr': {'class': 'btn btn-sm btn-default'} }) }}            
                        </div>
                    </div>                                
                </div>                                            
            </div>
        </div>                   
        <div class="modal-footer">        
            {{ form_widget(form.BtnCargar, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}            
        </div>    
        <blockquote>
            <p>Recuerde: El formato del archivo debe ser *.jpg y debe ser maximo de 5mb</p>
            <footer>Tipo <cite title="Source Title">archivos</cite></footer>
        </blockquote>     
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}