{% extends '::base2.html.twig' %}
{% block title %}Banco nuevo - Soga App{% endblock %} 
{% block content %}    
        <h1>
            Recurso humano
            <small>Contratacion: Banco: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Administracion</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Contratacion</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Banco</a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>    
    <section class="content">
        {{ form_start(formBanco, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(formBanco) }}
        <div class="panel panel-default">
            <div class="panel-heading">Información general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-10">
                        {{ form_widget(formBanco.nombre, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Nit:</label>
                    <div class="col-sm-10">
                        {{ form_widget(formBanco.nit, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Convenio nómina:</label>
                    <div class="col-sm-10">
                        {{ form_widget(formBanco.convenioNomina, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Teléfono:</label>
                    <div class="col-sm-10">
                        {{ form_widget(formBanco.telefono, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Dirección:</label>
                    <div class="col-sm-10">
                        {{ form_widget(formBanco.direccion, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Codigo general:</label>
                    <div class="col-sm-10">
                        {{ form_widget(formBanco.codigoGeneral, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Número digitos:</label>
                    <div class="col-sm-10">
                        {{ form_widget(formBanco.numeroDigitos, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>    

            </div>
        </div>
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_banco_listar') }}">Cancelar</a>
            {{ form_widget(formBanco.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(formBanco) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
