{% extends '::base.html.twig' %}
{% block title %}SubZonas lista - Soga App{% endblock %} 
{% block content %}
    <div class="container">
    <div class="page-header">
        <h3>Listado subzonas</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">

            <div class="form-group form-group-sm">  
                <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre subzona:</label>
                <div class="col-sm-10">                  
                    {{ form_widget(form.TxtNombre , { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>                   
            </div>   
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>                                                    
        </div>
    </div>
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>

            <th>CÃ“DIGO</th>
            <th>{{ knp_pagination_sortable(arSubZonas, 'NOMBRE', 'codigo') }}</th>
            <th></th>
            <th></th>
        </tr>

            {%for arSubZonas in arSubZonas %}
               <tr>
                <td>{{ arSubZonas.codigoSubZonaPk }}</td>
                <td>{{ arSubZonas.nombre }}</td>
                <td><a href="{{ path('brs_rhu_base_subzona_nuevo',{'codigoSubZonaPk': arSubZonas.codigoSubZonaPk})}}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSubZonas.codigoSubZonaPk }}" /></td>
            {%endfor%}
            </tr>
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">SubZonas <span class="badge">{{ arSubZonas.getTotalItemCount }}</span></div>
    </div>
    <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arSubZonas) }}
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_subzona_nuevo', {'codigoSubZonaPk': 0}) }}">Nuevo</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}</td>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
    </div>
{% endblock %}