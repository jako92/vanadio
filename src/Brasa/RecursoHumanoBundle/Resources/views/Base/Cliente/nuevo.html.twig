                </div>                
            </div>                 
            <div class="form-group form-group-sm">
                <label for="form_celularContacto" class="col-sm-2 control-label">Celular contacto:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.celularContacto, { 'attr': {'class': 'form-control'} }) }}                        
                </div>  
