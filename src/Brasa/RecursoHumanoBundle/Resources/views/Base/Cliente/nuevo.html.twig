{% extends '::base2.html.twig' %}
{% block title %}Cliente nuevo - Soga App{% endblock %}
{% block content %}
      <section class="content-header">
        <h1>
            Recurso humano
            <small>Cliente: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Administracion</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Cliente</a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>   
    <section class="content">        	
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">                                       
            <div class="form-group form-group-sm">
                <label for="form_nit" class="col-sm-2 control-label">Nit:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.nit, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>
            <div class="form-group form-group-sm">
                <label for="form_digitoVerificacion" class="col-sm-2 control-label">Digito verificacion:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.digitoVerificacion, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_nombreCorto" class="col-sm-2 control-label">Nombre corto:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.nombreCorto, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}                        
                </div>                
            </div>   
            <div class="form-group form-group-sm">
                <label for="form_formaPagoRel" class="col-sm-2 control-label">Forma pago:</label>
