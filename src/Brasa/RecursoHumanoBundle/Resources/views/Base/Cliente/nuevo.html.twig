            <div class="form-group form-group-sm">
                <label for="form_telefono" class="col-sm-2 control-label">Telefono:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.telefono, { 'attr': {'class': 'form-control'} }) }}                        
                </div>  
                <label for="form_celular" class="col-sm-2 control-label">Celular:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.celular, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                 
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_email" class="col-sm-2 control-label">Email:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                 
            <div class="form-group form-group-sm">
                <label for="form_gerente" class="col-sm-2 control-label">Gerente:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.gerente, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}                        
                </div>                
                <label for="form_celularGerente" class="col-sm-2 control-label">Celular:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.celularGerente, { 'attr': {'class': 'form-control'} }) }}                        
