    <div class="panel panel-default">
        <div class="panel-heading">Informacion comercial</div>
        <div class="panel-body">                                                                  
            <div class="form-group form-group-sm">
                <label for="form_cobroExamen" class="col-sm-3 control-label">Cobro examen medico:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.cobroExamen, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
