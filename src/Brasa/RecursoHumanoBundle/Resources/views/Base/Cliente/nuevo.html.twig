            <div class="form-group form-group-sm">
                <label for="form_autoretenedor" class="col-sm-2 control-label">Autoretenedor:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.autoretenedor) }}                        
                </div>  
                <label for="form_regimenSimplificado" class="col-sm-2 control-label">Regimen simplificado:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.regimenSimplificado) }}                        
                </div>                  
            </div>                
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>                 
