{% extends '::base2.html.twig' %}
{% block title %}Requisito cargo nuevo - Soga App{% endblock %} 
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Requisito por cargo: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Administracion</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Requisito por cargo</a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Información general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Cargo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.cargoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>                        
            </div>
        </div>

        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>            
                <th>CÓDIGO</th>
                <th>REQUISITO</th>
                <th>GENERAL</th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
            </tr>        
            {%for arRequisitosConcepto in arRequisitosConcepto %}
                <tr>
                    <td>{{arRequisitosConcepto.codigoRequisitoConceptoPk }}</td>
                    <td>{{arRequisitosConcepto.nombre }}</td>
                    <td>{% if arRequisitosConcepto.general == 1%}SI{% else %}NO{% endif %}</td>
                    <td align="center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arRequisitosConcepto.codigoRequisitoConceptoPk }}" /></td>
                    {%endfor%}
            </tr>            
        </table>        
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_contratacion_requisito_cargo_lista') }}">Cancelar</a>
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>            
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
