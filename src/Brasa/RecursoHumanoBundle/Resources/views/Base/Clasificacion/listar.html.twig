{% extends '::base2.html.twig' %}
{% block title %}Clasificación riesgos lista - Soga App{% endblock %}  
{% block content %}
    <div class="page-header">    
        <h3>Listado clasificación de riesgos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }} 
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th>CÓDIGO</th>
            <th>{{ knp_pagination_sortable(arClasificaciones, 'NOMBRE', 'CODIGO') }}</th> 
            <th>PORCENTAJE</th>
            <th></th>
            <th></th>
        </tr>
        {%for arClasificaciones in arClasificaciones %}
            <tr>
                <td>{{arClasificaciones.codigoClasificacionRiesgoPk}}</td>
                <td>{{arClasificaciones.nombre}}</td>
                <td style="text-align: right">{{arClasificaciones.porcentaje}}</td>
                <td><a href="{{ path('brs_rhu_base_clasificacion_nuevo',{'codigoClasificacionPk': arClasificaciones.codigoClasificacionRiesgoPk})}}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arClasificaciones.codigoClasificacionRiesgoPk }}" /></td>
                {%endfor%}
        </tr>            
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Clasificación riesgo <span class="badge">{{ arClasificaciones.getTotalItemCount }}</span></div>                        
    </div>
    <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arClasificaciones) }}       
    </div>
    <div class="btn-toolbar" style="float: right">              
        <div class="btn-group">
            {{ form_widget(form.BtnPdf, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_clasificacion_nuevo', {'codigoClasificacionPk': 0}) }}">Nuevo</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}</td>                   
        </div>
    </div>     
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}