{% extends '::base2.html.twig' %}
{% block title %}Información interna tipo lista - Soga App{% endblock %} 
{% block content %}
    <div class="page-header">    
        <h3>Listado tipo información interna</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }} 
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th>CÓDIGO</th>
            <th>{{ knp_pagination_sortable(arEmpleadoInformacionInternaTipos, 'NOMBRE', 'codigo') }}</th>
            <th>ACCIÓN</th>
            <th></th>
            <th></th>
        </tr>
        {%for arEmpleadoInformacionInternaTipos in arEmpleadoInformacionInternaTipos %}
            <tr>
                <td>{{arEmpleadoInformacionInternaTipos.codigoEmpleadoInformacionInternaTipoPk}}</td>
                <td>{{arEmpleadoInformacionInternaTipos.nombre}}</td>
                <td>{% if arEmpleadoInformacionInternaTipos.accion == 1 %} BLOQUEADO {% else %} DESBLOQUEADO{% endif%}</td>
                <td><a href="{{ path('brs_rhu_base_empleado_informacion_interna_tipo_nuevo',{'codigoInformacionInternaTipo': arEmpleadoInformacionInternaTipos.codigoEmpleadoInformacionInternaTipoPk})}}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arEmpleadoInformacionInternaTipos.codigoEmpleadoInformacionInternaTipoPk }}" /></td>
                {%endfor%}
        </tr>            
    </table>
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Tipo información interna <span class="badge">{{ arEmpleadoInformacionInternaTipos.getTotalItemCount }}</span></div>                        
    </div>
    <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arEmpleadoInformacionInternaTipos) }}       
    </div>
    <div class="btn-toolbar" style="float: right">              
        <div class="btn-group">
            {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
        </div>
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_empleado_informacion_interna_tipo_nuevo', {'codigoInformacionInternaTipo': 0}) }}">Nuevo</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}</td>                   
        </div>
    </div>     
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}