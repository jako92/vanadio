{% extends '::base.html.twig' %}
{% block title %}Dotacion cargo nuevo - Soga App{% endblock %} 
{% block content %}
<div class="container">    
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <h3>Nuevo dotacion del cargo</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Cargo:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.cargoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Dotacion:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.dotacionElementoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Cantidad:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.cantidadAsignada, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>    
        </div>
        </div>
    <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_dotacion_cargo_lista') }}">Cancelar</a>
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>            
    {{ form_end(form) }}
</div>    
{% endblock %}
