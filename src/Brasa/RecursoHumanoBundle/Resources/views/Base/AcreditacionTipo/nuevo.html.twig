{% extends '::base2.html.twig' %}
{% block title %}Tipo acreditacion nuevo - Soga App{% endblock %} 
{% block content %}
<div class="container">    
    {{ form_start(formAcreditacionTipo, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(formAcreditacionTipo) }}
    <h3>Nuevo tipo acreditacion</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Codigo:</label>
                <div class="col-sm-10">
                        {{ form_widget(formAcreditacionTipo.codigo, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-10">
                        {{ form_widget(formAcreditacionTipo.nombre, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Cargo:</label>
                <div class="col-sm-10">
                        {{ form_widget(formAcreditacionTipo.cargo, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Codigo cargo:</label>
                <div class="col-sm-10">
                        {{ form_widget(formAcreditacionTipo.cargoCodigo, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
</div>
</div>
    <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_base_acreditacion_tipo_lista') }}">Cancelar</a>
            {{ form_widget(formAcreditacionTipo.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(formAcreditacionTipo) }}
</div>    
{% endblock %}
