{% extends '::base_sin_menu.html.twig' %}
{% block title %}Empleado ex√°men nuevo - Soga App{% endblock %} 
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo examen</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_examenTipoRel" class="col-sm-4 control-label">Tipo:</label>
                <div class="col-sm-8">
                    {{ form_widget(form.examenTipoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaVencimiento" class="col-sm-4 control-label">Fecha vencimiento:</label>
                <div class="col-sm-8">
                    {{ form_widget(form.fechaVencimiento) }}
                </div>
            </div> 
            <div class="form-group form-group-sm">
                <label for="form_validarVencimiento" class="col-sm-4 control-label">Validar vencimientos:</label>
                <div class="col-sm-8">
                    {{ form_widget(form.validarVencimiento) }}
                </div>
            </div>
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-4 control-label">Comentarios:</label>
                <div class="col-sm-8">
                    {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>                
        </div>
    </div>               
    <div class="modal-footer">
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}