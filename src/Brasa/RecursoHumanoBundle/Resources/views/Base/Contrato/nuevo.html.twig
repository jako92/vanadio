            <div class="panel panel-default">
                <div class="panel-heading">Informacion turnos</div>
                <div class="panel-body">
                    <div class="form-group form-group-sm">
                        <label class="col-sm-2 control-label">Secuencia:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.secuencia, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                        <label class="col-sm-2 control-label">Devengado pactado:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.vrDevengadoPactado, { 'attr': {'class': 'form-control'} }) }}
                        </div>
                    </div>     
                    <div class="form-group form-group-sm">
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <div class="col-sm-4">{{ form_row(form.turnoFijoOrdinario) }}</div>
                        </div>
                    </div>                           
                </div>
            </div>                 
            <div class="modal-footer">              
                {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}            
            </div>    
            {{ form_end(form) }}
        </div>
        <br/><br/><br/><br/>
    </section>
{% endblock %}