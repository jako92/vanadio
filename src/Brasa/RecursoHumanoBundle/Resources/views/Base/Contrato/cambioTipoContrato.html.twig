<script>
    $('#myModal').modal('toggle');
</script>        
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Cambiar tipo contrato</h4>
      </div>  
      {{ form_start(formContrato, { 'attr': {'class': 'form-horizontal'} }) }}
      <div class="modal-body">
 
        <div class="form-group form-group-sm">
            <label for="form_contratoTipoNuevoRel" class="col-sm-4 control-label">Nuevo tipo contrato:</label>
            <div class="col-sm-8">
                    {{ form_widget(formContrato.contratoTipoNuevoRel, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="form_VrSalarioNuevo" class="col-sm-4 control-label">Nuevo salario:</label>
            <div class="col-sm-8">
                    {{ form_widget(formContrato.VrSalarioNuevo, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>           
        <div class="form-group form-group-sm">
            <label for="form_detalle" class="col-sm-4 control-label">Detalle:</label>
            <div class="col-sm-8">
                    {{ form_widget(formContrato.detalle, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>    
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>        
        {{ form_widget(formContrato.BtnGuardar, { 'attr': {'class': 'btn btn-primary'} }) }}            
      </div>
      {{ form_end(formContrato) }}
    </div>
  </div>
</div>