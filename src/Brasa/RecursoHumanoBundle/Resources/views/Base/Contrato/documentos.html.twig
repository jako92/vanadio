{% extends '::base_sin_menu.html.twig' %}
{% block title %}Entrega documentos - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>contrato: documento</small>
        </h1>
    </section>    
    <section class="content">        	
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <br>
    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>            
            <th>CÃ“DIGO</th>
            <th>DOCUMENTO</th>
            <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
        </tr>        
        {%for arEntregaDocumentos in arEntregaDocumentos %}
            <tr>
                <td>{{arEntregaDocumentos.codigoDocumentoPk }}</td>
                <td>{{arEntregaDocumentos.nombre }}</td>
                <td align="center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arEntregaDocumentos.codigoDocumentoPk }}" /></td>
                {%endfor%}
        </tr>            
    </table> 
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">                                
            {{ form_widget(form.BtnEntregaDocumentos, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>  
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
    <br/><br/><br/><br/>
    </section>
{% endblock %}