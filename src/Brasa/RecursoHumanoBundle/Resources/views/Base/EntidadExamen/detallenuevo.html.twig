{% extends '::base_sin_menu.html.twig' %}
{% block title %}Entidad exámen detalle nuevo - Soga App{% endblock %} 
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>detalle entidad examen: nuevo</small>
        </h1>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CÓDIGO</th>
                <th>TIPO EXÁMEN</th>
                <th style="text-align: right">PRECIO</th>
            </tr>

            {%for arExamenTipos in arExamenTipos %}
                <tr>
                    <td><input type="hidden" name="LblCodigo[]" value="{{ arExamenTipos.codigoExamenTipoPk }}">{{ arExamenTipos.codigoExamenTipoPk }}</td>
                    <td>{{arExamenTipos.nombre}}</td>
                    <td style="text-align: right"><input class="input-grid" type="text" name="TxtPrecio[]" value="0" size="20" style="text-align: right; width:85px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>
                    {%endfor%}
            </tr>            
        </table>    

        <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}