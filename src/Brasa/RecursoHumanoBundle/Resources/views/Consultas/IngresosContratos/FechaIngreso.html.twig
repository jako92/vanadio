{% extends '::base2.html.twig' %}
{% block title %}Consulta contratos fecha ingreso - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Contrato: fecha ingreso</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Consultas</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Contrato</a></li>
            <li class="active">Fecha ingreso</li>
        </ol>
    </section>    
    <section class="content">        	
        <script type="text/javascript">
            $(document).ready(function () {
                $('.date').datepicker({dateFormat: 'yy-mm-dd', dayNamesMin: ["Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]})
            });
        </script>        
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">                
                <div class="form-group form-group-sm">  
                    <label for="form_TxtContrato" class="col-sm-2 control-label">Contrato:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtContrato, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                                           
                <div class="form-group form-group-sm">  
                    <label for="form_TxtIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">  
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Fecha desde:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.fechaDesde, {'attr': {'maxlength' : 10} }) }} 
                    </div>
                    <label for="form_zonaRel" class="col-sm-2 control-label">Zona:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.zonaRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">  
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Fecha hasta:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.fechaHasta, {'attr': {'maxlength' : 10} }) }} 
                    </div>
                    <label for="form_subZonaRel" class="col-sm-2 control-label">Subzona:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.subZonaRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">  
                    <label for="form_empleadoTipoRel" class="col-sm-2 control-label">Empleado tipo:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.empleadoTipoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label for="form_contratoTipoRel" class="col-sm-2 control-label">Contrato tipo:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.contratoTipoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrarIngresosContratos, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>    
            </div>
        </div> 
        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CÓDIGO</th>
                <th>TIPO</th>
                <th>FECHA</th>
                <th>IDENTIFICACIÓN</th>                
                <th>EMPLEADO</th>                
                <th>GRUPO PAGO</th>
                <th>DESDE</th>
                <th>TIPO</th>
                <th>ZONA</th>
                <th>SUB ZONA</th>
            </tr>
            {% for arIngresosContratos in arIngresosContratos %}
                <tr>
                    <td><input type="hidden" name="LblCodigo[]" value="{{ arIngresosContratos.codigoContratoPk }}">{{ arIngresosContratos.codigoContratoPk }} </td>
                    <td>{{ arIngresosContratos.ContratoTipoRel.nombreCorto  }}</td>
                    <td>{{ arIngresosContratos.fecha |date("Y/m/d")  }}</td>
                    <td>{{ arIngresosContratos.empleadoRel.numeroIdentificacion  }}</td>
                    <td>{{ arIngresosContratos.empleadoRel.nombreCorto  }}</td>
                    <td>{{ arIngresosContratos.centroCostoRel.nombre  }}</td>                
                    <td>{{ arIngresosContratos.fechaDesde |date("Y/m/d")  }}</td>
                    <td>{{ arIngresosContratos.empleadoRel.empleadoTipoRel.nombre  |default('')}}</td>
                    <td>{{ arIngresosContratos.empleadoRel.zonaRel.nombre  |default('')}}</td>
                    <td>{{ arIngresosContratos.empleadoRel.subZonaRel.nombre  |default('')}}</td>
                </tr>
            {% endfor %}
        </table>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                {{ knp_pagination_render(arIngresosContratos) }} 
            </div>

        </div>                
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">
                {{ form_widget(form.BtnExcelIngresosContratos, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            </div>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}

