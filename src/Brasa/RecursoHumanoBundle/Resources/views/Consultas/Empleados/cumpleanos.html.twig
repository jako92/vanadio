{% extends '::base2.html.twig' %}
{% block title %}Consulta empleados cumpleaños - Soga App{% endblock %}
{% block content %}
   <section class="content-header">
        <h1>
            Recurso humano
            <small>Empleado: cumpleaños</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Consulta</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Empleado</a></li>
            <li class="active">Cumpleaños</li>
        </ol>
    </section>   
    <section class="content">        	
        <script type="text/javascript">
            $(document).ready(function () {
                $('.date').datepicker({dateFormat: 'yy-mm-dd', dayNamesMin: ["Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]})
            });
        </script>        
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">                

                  <div class="form-group form-group-sm">  
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Mes:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.Mes, {'attr': {'maxlength' : 10} }) }} 
                    </div>
                </div>                     
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                    
            </div>
        </div> 
        <div class="tab-pane" id="familia">
            <br />
            <table class="table table-striped table-bordered table-condensed">
                <tr>
                    <th>ID</th>
                    <th>EMPLEADO</th>
                    <th>FECHA NACIMIENTO</th>
                </tr>
                {% for arEmpleadosCumpleanos in arEmpleadosCumpleanos %}
                    <tr>
                        <td>{{ arEmpleadosCumpleanos.codigoEmpleadoPk }}</td>
                        <td>{{ arEmpleadosCumpleanos.nombreCorto }}</td>
                        <td>{{ arEmpleadosCumpleanos.fechaNacimiento |date("Y/m/d") }}</td>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <div class="btn-toolbar" style="float: left">
            <div class="btn-group">
                {{ knp_pagination_render(arEmpleadosCumpleanos) }} 
            </div>
        </div>                
        <div class="btn-toolbar" style="float: right">                 
            <div class="btn-group">                
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            </div>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
