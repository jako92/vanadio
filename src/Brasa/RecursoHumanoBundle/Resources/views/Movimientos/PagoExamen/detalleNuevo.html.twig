{% extends '::base_sin_menu.html.twig' %}
{% block title %}Examen pago detalle nuevo - Soga App{% endblock %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo detalle pago examen</h3>

    <table class="table table-striped table-bordered table-condensed table-hover">
        <tr>            
            <th>CODIGO</th>
            <th>IDENTIFICACIÃ“N</th>
            <th>NOMBRE</th>
            <th style="text-align: right">PRECIO</th>
            <th></th>
        </tr>        
        {%for arExamenes in arExamenes %}
            <tr>
                <td>{{arExamenes.codigoExamenPk}}</td>
                <td>{{arExamenes.identificacion}}</td>
                <td>{{arExamenes.nombreCorto}}</td>
                <td style="text-align: right">{{ arExamenes.vrTotal | number_format(2, '.', ',') }}</td>
