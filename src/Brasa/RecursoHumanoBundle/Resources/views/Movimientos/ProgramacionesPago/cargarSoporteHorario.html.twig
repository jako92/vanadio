{% extends '::base_sin_menu.html.twig' %}
{% block title %}Cargar soporte de turnos - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Cargar soporte de horarios</h3>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CODIGO</th>                
                <th>DESDE</th>
                <th>HASTA</th>
                <th>GRUPO PAGO</th>                
                <th></th>
            </tr>
            {% for arSoportePagoHorario in arSoportePagoHorario %}
                <tr>
                    <td>{{ arSoportePagoHorario.codigoSoportePagoHorarioPk  }}</td>                
                    <td>{{ arSoportePagoHorario.fechaDesde |date("Y/m/d")  }}</td>
                    <td>{{ arSoportePagoHorario.fechaHasta |date("Y/m/d")  }}</td>
                    <td>{{ arSoportePagoHorario.centroCostoRel.nombre }}</td>                
                    <td><button class="btn btn-default btn-xs" type="submit" name="OpCargar" value="{{ arSoportePagoHorario.codigoSoportePagoHorarioPk }}">Cargar</button></td>                                                                
                </tr>

            {% endfor %}
        </table>    

        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}