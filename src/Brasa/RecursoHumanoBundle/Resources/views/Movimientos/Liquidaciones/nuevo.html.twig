{% extends '::base2.html.twig' %}
{% block title %}Liquidacion nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Liquidacion: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimientos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Liquidacion</a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>    
    <section class="content">        	
        <script type="text/javascript">
            $(document).ready(function () {
                $('.date').datepicker({dateFormat: 'yyyy-mm-dd', dayNamesMin: ["Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]})
            });
        </script>
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}        
        <div class="panel panel-default">
            <div class="panel-heading">Informaci√≥n general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Cesantias:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.vrCesantias , { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                            
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Intereces cesantias:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.vrInteresesCesantias , { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div> 
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Prima:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.vrPrima , { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Vacaciones:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.vrVacaciones , { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>     
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Salario vacaciones:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.vrSalarioVacaciones , { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div> 
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Dias cesantias:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.diasCesantias , { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>  
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Dias primas:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.diasPrimas , { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Dias vacaciones:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.diasVacaciones , { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                
            </div>
        </div>    
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_movimiento_liquidacion') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>    
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}