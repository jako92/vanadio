<script>
    $('#myModal').modal('toggle');
</script>        
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Parametros liquidacion</h4>
      </div>  
      {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
      <div class="modal-body">                                
        <div class="form-group form-group-sm">
            <label class="col-sm-5 control-label">Porcentaje IBP:</label>
            <div class="col-sm-7">
                    {{ form_widget(form.porcentajeIbp, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label class="col-sm-5 control-label">Liquidar salario:</label>
            <div class="col-sm-7">
                    {{ form_widget(form.liquidarSalario) }}
            </div>
        </div> 
        <div class="form-group form-group-sm">
            <label class="col-sm-5 control-label">Indemnizacion:</label>
            <div class="col-sm-7">
                    {{ form_widget(form.vrIndemnizacion, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div> 
        <div class="form-group form-group-sm">
            <label class="col-sm-5 control-label">Dias ausentismo adicional:</label>
            <div class="col-sm-7">
                    {{ form_widget(form.diasAusentismoAdicional, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label class="col-sm-5 control-label">Eliminar ausentismos:</label>
            <div class="col-sm-7">
                    {{ form_widget(form.eliminarAusentismo) }}
            </div>
        </div>             
        <div class="form-group form-group-sm">
            <label class="col-sm-5 control-label">Salario cesantias (propuesto):</label>
            <div class="col-sm-7">
                    {{ form_widget(form.vrSalarioCesantiasPropuesto, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>            
        <div class="form-group form-group-sm">
            <label class="col-sm-5 control-label">Salario prima (propuesto):</label>
            <div class="col-sm-7">
                    {{ form_widget(form.vrSalarioPrimaPropuesto, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>            
        <div class="form-group form-group-sm">
            <label class="col-sm-5 control-label">Salario vacacion (propuesto):</label>
            <div class="col-sm-7">
                    {{ form_widget(form.vrSalarioVacacionPropuesto, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label class="col-sm-5 control-label">Dias ausentismo (propuesto):</label>
            <div class="col-sm-7">
                    {{ form_widget(form.diasAusentismoPropuesto, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>            
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>        
        {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary'} }) }}            
      </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>