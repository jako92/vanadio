{% extends '::base.html.twig' %}
{% block title %}Adicional al pago editar - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <p class="description"><h3 >Agregar {% if tipo == 1 %}bonificación{% endif %}{% if tipo == 2 %}descuento{% endif %}{% if tipo == 3 %}comisión{% endif %}</h3></p>
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_empleadoRel" class="col-sm-4 control-label">Empleado:</label>
                <div class="col-sm-8">
                        {{ form_widget(form.empleadoRel, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus','disabled':'disabled'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_pagoConceptoRel" class="col-sm-4 control-label">Concepto:</label>
                <div class="col-sm-8">
                        {{ form_widget(form.pagoConceptoRel, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_TxtValor" class="col-sm-4 control-label">Valor:</label>
                <div class="col-sm-8">
                        {{ form_widget(form.TxtValor, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label for="form_TxtDetalle" class="col-sm-4 control-label">Detalle:</label>
                <div class="col-sm-8">
                        {{ form_widget(form.TxtDetalle, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-4 control-label">Aplicar día laborado:</label>
                <div class="col-sm-8">
                        {{ form_widget(form.aplicarDiaLaborado, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>   
            <div class="form-group form-group-sm">
                <label class="col-sm-4 control-label">Aplicar día laborado (Sin descansos):</label>
                <div class="col-sm-8">
                        {{ form_widget(form.aplicarDiaLaboradoSinDescanso, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>               
        </div>
    </div>            
    <div class="modal-footer">              
        <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_pagos_adicionales_lista', {'modalidad': modalidad, 'periodo': periodo})}}">Cancelar</a>
        {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.BtnGuardaryNuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}            
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}