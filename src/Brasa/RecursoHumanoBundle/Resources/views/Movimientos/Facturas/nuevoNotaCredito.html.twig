{% extends '::base2.html.twig' %}
{% block title %}Factura nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Nota credito: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimientos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Nota credito</a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}        
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_facturaTipoRel" class="col-sm-2 control-label">Tipo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.facturaTipoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <label for="form_facturaServicioRel" class="col-sm-2 control-label">Servicio:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.facturaServicioRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                    
                <div class="form-group form-group-sm">
                    <label for="form_clienteRel" class="col-sm-2 control-label">Clientes:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.clienteRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>       
                <div class="form-group">
                    <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                 
            </div>
        </div>                   
        <div class="modal-footer">     
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_facturas_lista') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>    
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}