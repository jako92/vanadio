{% extends '::base_sin_menu.html.twig' %}
{% block title %}Factura detalle seleccion nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Factura: detalle seleccion nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimientos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Factura</a></li>
            <li class="active">Detalle seleccion nuevo</li>
        </ol>
    </section>    
    <section class="content">        	        
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}            
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>CÃ“DIGO</th>
            <th>FECHA</th>
            <th>IDENTIFICACION</th>
            <th>NOMBRE</th>
            <th>VALOR</th>
            <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
        </tr>

        {% for arSelecciones in arSelecciones %}
            <tr> 
                <td><input type="hidden" name="LblCodigo[]" value="{{ arSelecciones.codigoSeleccionPk }}">{{ arSelecciones.codigoSeleccionPk }}</td>  
                <td>{{ arSelecciones.fecha |date("Y/m/d")  }}</td>
                <td>{{ arSelecciones.numeroIdentificacion  }}</td>
                <td>{{ arSelecciones.nombreCorto  }}</td>                        
                <td style="text-align: right">{{ arSelecciones.VrServicio | number_format(0, '.', ',') }}</td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSelecciones.codigoSeleccionPk }}" /></td>
            </tr>
        {% endfor %}                                
    </table>
    {{ knp_pagination_render(arSelecciones) }}
    <div class="modal-footer">                
        {{ form_widget(form.BtnAgregar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div> 
    <br />
    {{ form_end(form) }}
    <br/><br/><br/><br/>
</section>
{% endblock %}