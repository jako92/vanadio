{% extends '::base_sin_menu.html.twig' %}
{% block title %}Factura detalle servicio nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Factura: detalle servicio nuevo</small>
        </h1>
    </section>    
    <section class="content">        	        
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}            
    <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>                
                <th>BASICO</th>
                <th>PRE</th>
                <th>NO_PRE</th>
                <th>TTE</th>
                <th>PENSION</th>
                <th>SALUD</th>
                <th>RIESGOS</th>
                <th>CAJA</th>
                <th>SENA</th>
                <th>ICBF</th>
                <th>PRES</th>
                <th>VAC</th>
                <th>A_PAR</th>
                <th>OPERACION</th>
                <th>ADMON</th>
                <th>TOTAL</th>
                <th></th>
            </tr>
            {% for arCobros in arCobros %}
                <tr>
                    <td><input type="hidden" name="LblCodigo[]" value="{{ arCobros.codigoCobroPk }}">{{ arCobros.codigoCobroPk }} </td>                                    
                    <td style="text-align: right">{{ arCobros.vrBasico | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrPrestacional | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrNoPrestacional | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrAuxilioTransporte | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrPension | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrSalud | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrRiesgos | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrCaja | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrSena | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrIcbf | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrPrestaciones | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrVacaciones | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrAporteParafiscales | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrOperacion | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrAdministracion | number_format(0, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrTotalCobro | number_format(0, '.', ',') }}</td>
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCobros.codigoCobroPk }}" /></td>
                </tr>
            {% endfor %}                               
    </table>
    {{ knp_pagination_render(arCobros) }}
    <div class="modal-footer">                
        {{ form_widget(form.BtnAgregar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div> 
    <br />
    {{ form_end(form) }}
    <br/><br/><br/><br/>
</section>
{% endblock %}