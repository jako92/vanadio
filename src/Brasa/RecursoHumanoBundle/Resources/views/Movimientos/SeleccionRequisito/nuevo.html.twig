{% extends '::base2.html.twig' %}
{% block title %}Selección requisición nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Selección requisición: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimientos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Selección requisición</a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}        
        <div class="panel panel-default">
            <div class="panel-heading">Información general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Grupo pago:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Zona:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.zonaRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>                
                <div class="form-group form-group-sm">
                    <label for="form_cargoRel" class="col-sm-2 control-label">Cargo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.cargoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <label for="form_nombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.nombre, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_cantidadSolicitada" class="col-sm-2 control-label">Cantidad:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.cantidadSolicitada, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_edadMinima" class="col-sm-2 control-label">Edad minima:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.edadMinima, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_edadMaxima" class="col-sm-2 control-label">Edad maxima:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.edadMaxima, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <label for="form_ciudadRel" class="col-sm-2 control-label">Ciudad residencia:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.ciudadRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_estudioTipoRel" class="col-sm-2 control-label">Nivel de estudio:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.estudioTipoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_estadoCivilRel" class="col-sm-2 control-label">Estado civil:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.estadoCivilRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_numeroHijos" class="col-sm-2 control-label">Nro hijos:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.numeroHijos, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <label for="form_codigoSexoFk" class="col-sm-2 control-label">Sexo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.codigoSexoFk, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_codigoReligionFk" class="col-sm-2 control-label">Religion:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.codigoReligionFk, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_codigoTipoVehiculoFk" class="col-sm-2 control-label">Vehiculo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.codigoTipoVehiculoFk, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_codigoLicenciaCarroFk" class="col-sm-2 control-label">Licencia carro:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.codigoLicenciaCarroFk, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_codigoLicenciaMotoFk" class="col-sm-2 control-label">Licencia moto:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.codigoLicenciaMotoFk, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_codigoDisponibilidadFk" class="col-sm-2 control-label">Disponibilidad:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.codigoDisponibilidadFk, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_experienciaRequisicionRel" class="col-sm-2 control-label">Experiencia:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.experienciaRequisicionRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>    
            </div>
        </div>               
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_seleccionrequisito_lista') }}">Cancelar</a>
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}