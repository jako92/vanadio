<script>
    $('#myModal').modal('toggle');
</script>        
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Refinanciar credito</h4>
      </div>
      {{ form_start(formCredito, { 'attr': {'class': 'form-horizontal'} }) }}
      <div class="modal-body">         
        <div {% if errores != "" %} style="visibility:hidden" {% endif %} >
            <div class="form-group form-group-sm" >                
                <label for="form_saldo" class="col-sm-2 control-label">Saldo:</label>
                <div class="col-sm-10">
                        {{ arCredito.saldo }}
                </div>
            </div>            
            <div class="form-group form-group-sm" >                
                <label for="form_numeroCuotas" class="col-sm-2 control-label">Cuotas:</label>
                <div class="col-sm-10">
                        {{ form_widget(formCredito.numeroCuotas, { 'attr': {'onkeypress': 'ValidaSoloNumeros();','class': 'form-control'} }) }}
                </div>
            </div>
        </div>                
        {% if errores != "" %}
            <div class="form-group form-group-sm">
                <label for="form_error" class="col-sm-2 control-label">Error:</label>
                <div class="col-sm-10">
                    No se puede refinanciar el credito porque tiene periodos
                    generados pendientes por pagar.
                </div>
            </div>
        {% endif %}                                                   
                        
      </div>
      <div class="modal-footer">        
        <div {% if errores != "" %} style="visibility:hidden" {% endif %} >
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>        
            {{ form_widget(formCredito.BtnGuardar, { 'attr': {'class': 'btn btn-primary'} }) }}            
        </div>
      </div>
      {{ form_end(formCredito) }}
    </div>
  </div>
</div>