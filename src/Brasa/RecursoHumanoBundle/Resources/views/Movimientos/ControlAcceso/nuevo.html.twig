{% extends '::base.html.twig' %}
{% block title %}Control acceso empleado editar - Soga App{% endblock %} 
{% block content %}
    <div class="container">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(form) }}
        <h3>Editar control acceso empleado</h3>
    <div class="panel panel-default">
      <div class="panel-heading">Información exámen</div>
      <div class="panel-body">
            <table width="100%" class="table table-condensed table-bordered">
                <tr>
                    <td class="titulo">IDENTIFICACION:</td>
                    <td class="td-in-well">{{ arHorarioAcceso.empleadoRel.numeroIdentificacion }}</td>
                    <td class="titulo">NOMBRE:</td>
                    <td class="td-in-well">{{ arHorarioAcceso.empleadoRel.nombreCorto }}</td>
                </tr>
                <tr>
                    <td class="titulo">TURNO:</td>
                    <td class="td-in-well">{{ arTurno.nombre }}</td>
                    <td class="titulo"></td>
                    <td class="td-in-well"></td>
                </tr>                
            </table>
      </div>
    </div>        
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">   
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Fecha / hora entrada:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaEntrada) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Fecha / hora salida:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaSalida) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Entrada:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.estadoEntrada) }} Tarde: {{ form_widget(form.entradaTarde) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Salida:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.estadoSalida) }} Antes: {{ form_widget(form.salidaAntes) }}
                    </div>
                </div>      
            </div>
        </div>
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_control_acceso_empleado_lista') }}">Cancelar</a>
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>            
        {{ form_end(form) }}
    </div>    
{% endblock %}
