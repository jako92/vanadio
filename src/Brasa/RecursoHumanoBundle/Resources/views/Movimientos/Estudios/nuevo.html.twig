{% extends '::base2.html.twig' %}
{% block title %}Estudio nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Estudio: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Estudio</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <script type="text/javascript">
            $(document).ready(function () {
                $('.date').datepicker({dateFormat: 'yy-mm-dd', dayNamesMin: ["Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]})
            });
        </script>        
        <div class="panel panel-default">
            <div class="panel-heading">Información general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_txtNumeroIdentificacion" class="col-sm-3 control-label">Empleado:</label>
                    <div class="col-sm-9">
                        <div class="row">
                            <div class="col-lg-2">
                                <div class="input-group">
                                    <input id="form_txtNumeroIdentificacion"  name="form_txtNumeroIdentificacion"  type="text" class="form-control" value="{{ arEstudio.empleadoRel.numeroIdentificacion |default('') }}"/>
                                </div>
                            </div>
                            <div class="col-lg-10">
                                <div class="input-group">                                      
                                    <input id="form_txtNombreCorto"  name="form_txtNombreCorto"  type="text" class="form-control" value="{{ arEstudio.empleadoRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                                    <span class="input-group-btn">                                        
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_buscar_empleado') }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label for="form_empleadoEstudioTipoRel" class="col-sm-3 control-label">Tipo:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.empleadoEstudioTipoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_institucion" class="col-sm-3 control-label">Institución:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.institucion, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_ciudadRel" class="col-sm-3 control-label">Ciudad:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.ciudadRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_titulo" class="col-sm-3 control-label">Titulo obtenido:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.titulo, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_gradoBachillerRel" class="col-sm-3 control-label">Grado bachiller:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.gradoBachillerRel, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_graduado" class="col-sm-3 control-label">Graduado:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.graduado, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <label for="form_fechaInicio" class="col-sm-3 control-label">Fecha inicio:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.fechaInicio) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaTerminacion" class="col-sm-3 control-label">Fecha terminación:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.fechaTerminacion) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaVencimientoControl" class="col-sm-3 control-label">Fecha ven estudio/curso:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.fechaVencimientoCurso) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <label for="form_numeroRegistro" class="col-sm-3 control-label">Numero registro:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.numeroRegistro, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>        
                <div class="form-group form-group-sm">
                    <label for="form_validarVencimiento" class="col-sm-3 control-label">Validar vencimiento:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.validarVencimiento, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="form_comentarios" class="col-sm-3 control-label">Comentarios:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>    
            </div>
        </div>
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_estudio_lista') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>    
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}