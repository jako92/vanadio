    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Cerrar selecci√≥n</h4>
      </div>  
      {{ form_start(formSeleccion, { 'attr': {'class': 'form-horizontal'} }) }}
      <div class="modal-body"> 
        
          <div>{{dato}}</div>
        
        <div class="form-group form-group-sm">
            <label for="form_fechaCierre" class="col-sm-4 control-label">Fecha cierre:</label>
            <div class="col-sm-8">
                    {{ form_widget(formSeleccion.fechaCierre, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="form_motivoCierreSeleccionRel" class="col-sm-4 control-label">Motivo:</label>
            <div class="col-sm-8">
                    {{ form_widget(formSeleccion.motivoCierreSeleccionRel, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>    
        <div class="form-group form-group-sm">
            <label for="form_comentarios" class="col-sm-4 control-label">Comentarios seleccion:</label>
            <div class="col-sm-8">
                    {{ form_widget(formSeleccion.comentarios, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="form_bloqueado" class="col-sm-4 control-label">Bloquear aspirante:</label>
            <div class="col-sm-8">
                    {{ form_widget(formSeleccion.bloqueado) }}
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="form_comentariosAspirante" class="col-sm-4 control-label">Comentarios aspirante:</label>
            <div class="col-sm-8">
                    {{ form_widget(formSeleccion.comentariosAspirante, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>    
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>        
