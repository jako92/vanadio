{% extends '::base2.html.twig' %}
{% block title %}Reclamo detalle - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Reclamo: detalle</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimientos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Reclamo</a></li>
            <li class="active">Detalle</li>
        </ol>
    </section>    
    <section class="content">        	       
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">
                {{ form_widget(form.BtnCerrar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
        <div style="float:right">
            {% if arReclamo.estadoCerrado == 1 %}<span class="label label-default">Cerrado</span>{% endif %}            
        </div>            
        <br /><br />
        <!-- Encabezado Movimiento -->
        <div class="panel panel-default">
            <div class="panel-heading">Información reclamo</div>
            <div class="panel-body">
                <table width="100%" class="table table-condensed table-bordered">
                    <tr>
                        <td class="titulo">CÓDIGO:</td>
                        <td>{{ arReclamo.codigoReclamoPk }}</td>
                        <td class="titulo">FECHA:</td>
                        <td>{{ arReclamo.fecha | date('Y/m/d') }}</td>
                    </tr>
                    <tr>
                        <td class="titulo">EMPLEADO:</td>
                        <td>{{ arReclamo.empleadoRel.nombreCorto }}</td>
                        <td class="titulo">FECHA CIERRE:</td>
                        <td>{{ arReclamo.fechaCierre | date('Y/m/d') }}</td>
                    </tr>                    
                    <tr>
                        <td class="titulo">RECLAMO:</td>
                        <td colspan="5" >{{ arReclamo.reclamo }}</td>
                    </tr>
                    <tr>
                        <td class="titulo">COMENTARIOS:</td>
                        <td colspan="5" >{{ arReclamo.comentarios }}</td>
                    </tr>                
                </table>
            </div>
        </div>

        <!-- Fin Encabezado Movimiento -->

        {{ form_rest(form) }}
        {{ form_end(form) }}
        <a  class="btn btn-default btn-sm" href="{{ path('brs_rhu_movimiento_reclamo') }}">Volver</a>
        <br/><br/><br/><br/>
    </section>
{% endblock %}
