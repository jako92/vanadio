{% extends '::base_sin_menu.html.twig' %}
{% block title %}Dotación detalle nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Nueva dotación</h3>

        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CÓDIGO</th>
                <th>ELEMENTO DOTACIÓN</th>
                <th>CANTIDAD</th>
            </tr>

            {%for arDotacionElementos in arDotacionElementos %}
                <tr>
                    <td><input type="hidden" name="LblCodigo[]" value="{{ arDotacionElementos.codigoDotacionElementoPk }}">{{ arDotacionElementos.codigoDotacionElementoPk }}</td>
                    <td>{{arDotacionElementos.nombre}}</td>
                    <td style="text-align: right"><input class="input-grid" type="text" name="TxtCantidad[]" value="0" size="5" style="text-align: right; width:50px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                
                    {%endfor%}
            </tr>            
        </table>    

        <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}