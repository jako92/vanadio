{% extends '::base_sin_menu.html.twig' %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Aplicar a requisición</h3>
        <div class="panel panel-default">
            <div class="panel-heading">Información general</div>
            <div class="panel-body">   
                <div class="form-group form-group-sm">
                    <label for="form_seleccionRequisicionRel" class="col-sm-3 control-label">Requisición:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.seleccionRequisicionRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>                            
            </div>
        </div>                   
        <div class="modal-footer">              
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}            
        </div>    
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}