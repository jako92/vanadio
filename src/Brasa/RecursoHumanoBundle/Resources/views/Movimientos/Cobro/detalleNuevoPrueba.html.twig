{% extends '::base_sin_menu.html.twig' %}
{% block title %}Cobro detalle prueba nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Cobro: detalle prueba nuevo</small>
        </h1>
    </section>    
    <section class="content">        	        
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}            
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>ID</th>
                <th>DOCUMENTO</th>
                <th>EMPLEADO</th>
                <th>TIPO</th>
                <th style="text-align: right">VALOR</th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
            </tr>
            {% for arPruebas in arPruebas %}
                <tr> 
                    <td><input type="hidden" name="LblCodigo[]" value="{{ arPruebas.codigoPruebaPk  }}">{{ arPruebas.codigoPruebaPk  }}</td>                  
                    <td>{{ arPruebas.empleadoRel.numeroIdentificacion  }}</td>
                    <td>{{ arPruebas.empleadoRel.nombreCorto  }}</td>
                    <td>{{ arPruebas.pruebaTipoRel.nombre }}</td>
                    <td style="text-align: right">{{ arPruebas.vrTotal | number_format(0, '.', ',') }}</td>
                    <td style="text-align: center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPruebas.codigoPruebaPk }}" /></td>
                </tr>
            {% endfor %}                                
        </table>
        {{ knp_pagination_render(arPruebas) }}
        <div class="btn-toolbar" style="float: left">
            <!-- Botones Menu Items -->
            <div class="btn-group">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arPruebas.getTotalItemCount }}</span></div>                        
            </div>
        </div> 
        <div class="btn-toolbar" style="float: right">
            <!-- Botones Menu Items -->
            <div class="btn-group">
                {{ form_widget(form.BtnAgregar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            </div>
        </div>            

        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}