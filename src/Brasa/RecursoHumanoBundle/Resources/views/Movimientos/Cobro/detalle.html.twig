                        <td class="titulo"></td>
                        <td class="td-in-well"></td>
                        <td class="titulo">TOTAL:</td>
                        <td class="td-in-well-numerico" align="right">$ {{ arCobro.vrTotalCobro | number_format(0, '.', ',') }}</td>                   
                    </tr>                      
