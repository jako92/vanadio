                        <td class="titulo">PRESTACIONAL:</td>
                        <td class="td-in-well-numerico" align="right">$ {{ arCobro.vrPrestacional | number_format(0, '.', ',') }}</td>                   
                    </tr>                     
                    <tr>
                        <td class="titulo">CLIENTE:</td>
                        <td>{{ arCobro.clienteRel.nombreCorto }}</td>
                        <td class="titulo"></td>
                        <td class="td-in-well"></td>
