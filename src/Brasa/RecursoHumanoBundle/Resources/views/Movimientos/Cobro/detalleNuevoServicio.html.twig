{% extends '::base_sin_menu.html.twig' %}
{% block title %}Cobro detalle servicio nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Cobro: detalle servicio nuevo</small>
        </h1>
    </section>    
    <section class="content">        	        
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}            
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>CÓDIGO</th>
            <th>IENTIFICACION</th>                                
            <th>EMPLEADO</th>                    
            <th style="text-align: right">BÁSICO</th>
            <th style="text-align: right">PRE</th>
            <th style="text-align: right">N_PRE</th>
            <th style="text-align: right">TTE</th>
            <th style="text-align: right">RIESGO</th>
            <th style="text-align: right">SALUD</th>
            <th style="text-align: right">PENSION</th>
            <th style="text-align: right">CAJA</th>
            <th style="text-align: right">PRES</th>
            <th style="text-align: right">VAC</th>
            <th style="text-align: right">A_PAR</th>
            <th style="text-align: right">OPE</th>
            <th style="text-align: right">ADMON</th>
            <th style="text-align: right">TOTAL</th>
            <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
        </tr>
        {% set intCodigoProgramacion = '' %}
        {% for arServicioCobrar in arServiciosCobrar %}
            {% if intCodigoProgramacion != arServicioCobrar.codigoProgramacionPagoFk %}
                <tr>                        
                    <td id="suptipo" colspan="20"><b>Periodo: </b>{{ arServicioCobrar.fechaDesde |date("Y/m/d") }} - {{ arServicioCobrar.fechaHasta |date("Y/m/d") }} <b>Gurpo pago:</b> {{ arServicioCobrar.centroCostoRel.nombre }}</td>
                </tr>
                {% set intCodigoProgramacion = arServicioCobrar.codigoProgramacionPagoFk %}                                
            {% endif %}             
            <tr> 
                <td><input type="hidden" name="LblCodigo[]" value="{{ arServicioCobrar.codigoServicioCobrarPk }}">{{ arServicioCobrar.codigoServicioCobrarPk }}</td>                  
                <td>{{ arServicioCobrar.empleadoRel.numeroIdentificacion }}</td>
                <td>{{ arServicioCobrar.empleadoRel.nombreCorto }}</td>                        
                <td style="text-align: right">{{ arServicioCobrar.VrSalario | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arServicioCobrar.VrPrestacional | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arServicioCobrar.VrNoPrestacional | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arServicioCobrar.VrAuxilioTransporte | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arServicioCobrar.VrRiesgos | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arServicioCobrar.VrSalud | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arServicioCobrar.VrPension | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arServicioCobrar.VrCaja | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arServicioCobrar.VrPrestaciones | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arServicioCobrar.VrVacaciones | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arServicioCobrar.VrAporteParafiscales | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arServicioCobrar.VrOperacion | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arServicioCobrar.VrAdministracion | number_format(0, '.', ',') }}</td>                
                <td style="text-align: right">{{ arServicioCobrar.VrTotalCobro | number_format(0, '.', ',') }}</td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arServicioCobrar.codigoServicioCobrarPk }}" /></td>
            </tr>
        {% endfor %}                                
    </table>
    {{ knp_pagination_render(arServiciosCobrar) }}
    <div class="btn-toolbar" style="float: left">
        <!-- Botones Menu Items -->
        <div class="btn-group">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arServiciosCobrar.getTotalItemCount }}</span></div>                        
        </div>
    </div> 
    <div class="btn-toolbar" style="float: right">
        <!-- Botones Menu Items -->
        <div class="btn-group">
            {{ form_widget(form.BtnAgregar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
    </div>            
   
    {{ form_end(form) }}
    <br/><br/><br/><br/>
</section>
{% endblock %}