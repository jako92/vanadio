{% extends '::base2.html.twig' %}
{% block title %}Cobro lista - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Cobro: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimientos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Cobro</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">        	        
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">                
                <div class="form-group form-group-sm">  
                    <label for="form_clienteRel" class="col-sm-2 control-label">Clientes:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.clienteRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label for="form_centroCostoRel" class="col-sm-2 control-label">Grupo pago:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.centroCostoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>                      
                <div class="form-group form-group-sm">  
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.fechaDesde, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.fechaHasta, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                    
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>ID</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>T_COBRO</th>
                <th>CLIENTE</th>
                <th>BASICO</th>
                <th>PRE</th>
                <th>NO_PRE</th>
                <th>TTE</th>
                <th>PENSION</th>
                <th>SALUD</th>
                <th>RIESGOS</th>
                <th>CAJA</th>
                <th>SENA</th>
                <th>ICBF</th>
                <th>PRESTACIONES</th>
                <th>VACACIONES</th>
                <th>A_PARAF</th>
                <th>ADMON</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {% for arCobros in arCobros %}
                <tr>
                    <td><input type="hidden" name="LblCodigo[]" value="{{ arCobros.codigoCobroPk }}">{{ arCobros.codigoCobroPk }} </td>                
                    <td>{{ arCobros.fechaDesde | date('Y-m-d') }}</td>
                    <td>{{ arCobros.fechaHasta | date('Y-m-d') }}</td>
                    {% if (arCobros.codigoCobroTipoFk is null) %}<td></td>{% else %}<td>{{ arCobros.cobroTipoRel.nombre }}</td>{% endif %}
                    <td>{{ arCobros.clienteRel.nombreCorto }}</td>
                    <td style="text-align: right">{{ arCobros.vrBasico | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrPrestacional | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrNoPrestacional | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrAuxilioTransporte | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrPension | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrSalud | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrRiesgos | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrCaja | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrSena | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrIcbf | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrPrestaciones | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrVacaciones | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrAporteParafiscales | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arCobros.vrAdministracion | number_format(2, '.', ',') }}</td>
                    <td style="text-align: center"><a href="{{ path('brs_rhu_cobro_nuevo', { 'codigoCobro':  arCobros.codigoCobroPk }) }}" ><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" title="Editar registro" width=20 height=20 title="Editar el registro"></a></td>
                    <td style="text-align: center"><a href="{{ path('brs_rhu_cobro_detalle', { 'codigoCobro': arCobros.codigoCobroPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22 title="Detalles del registro"></a></td>
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCobros.codigoCobroPk }}" /></td>
                </tr>
            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arCobros.getTotalItemCount }}</span></div>                        
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arCobros) }}       
        </div>
        <div class="btn-toolbar" style="float: right">          
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}                
            </div>            
            <div class="btn-group">                
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_cobro_nuevo', { 'codigoCobro': 0 }) }}" style="float:left">Nuevo</a>                                                                                
            </div>
            <div class="btn-group">                
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}                
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
        {{ form_end(form) }}        
        <br/><br/><br/><br/>
    </section>
{% endblock %}
