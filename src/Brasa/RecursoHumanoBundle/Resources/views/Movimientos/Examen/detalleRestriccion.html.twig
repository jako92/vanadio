{% extends '::base_sin_menu.html.twig' %}
{% block title %}Examen detalle restriccion - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Detalle restricción medica</h3>
    <div class="panel panel-default">
      <div class="panel-heading">Información general</div>
      <div class="panel-body">
            <table width="100%" class="table table-condensed table-bordered">
                <tr>
                    <td class="titulo">CÓDIGO:</td>
                    <td class="td-in-well">{{ arExamenRestriccionMedica.CodigoExamenRestriccionMedicaPk}}</td>
                    <td class="titulo">TIPO REVISIÓN:</td>
                    <td class="td-in-well">{{ arExamenRestriccionMedica.examenRevisionMedicaTipoRel.nombre }}</td>
                </tr>
                <tr>
                    <td class="titulo">DÍAS RESTRICCIÓN:</td>
                    <td class="td-in-well">{{ arExamenRestriccionMedica.dias}}</td>
                    <td class="titulo">FECHA VENCE:</td>
                    <td class="td-in-well">{{ arExamenRestriccionMedica.fechaVence | date('Y-m-d') }}</td>
                </tr>
            </table>
      </div>
    </div>
                            
        <table class="table table-striped table-bordered table-condensed table-hover">
        <tr> 
            <th colspan="2">DETALLE</th>
        </tr>    
        <tr>
            <th>CÓDIGO</th>
            <th>NOMBRE</th> 
        </tr>
            {%for arExamenRestriccionMedicaDetalle in arExamenRestriccionMedicaDetalle %}
               <tr>
                <td>{{arExamenRestriccionMedicaDetalle.codigoExamenRestriccionMedicaDetallePk}}</td>
                <td>{{arExamenRestriccionMedicaDetalle.examenRestriccionMedicaTipoRel.nombre}}</td>
            {%endfor%}
            </tr>            
    </table>    
                  
    <div class="modal-footer">            
            {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
</div>    
    {{ form_end(form) }}
{% endblock %}