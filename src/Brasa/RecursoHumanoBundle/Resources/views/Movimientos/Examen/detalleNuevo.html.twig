{% extends '::base_sin_menu.html.twig' %}
{% block title %}Examen nuevo tipo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Examen: detalle nuevo</small>
        </h1>        
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}        

        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>ID</th>
                <th>CODIGO</th>
                <th>NOMBRE</th> 
                <th>PRECIO</th>
                <th><p data-toggle="tooltip" data-placement="top" title="INGRESO">ING</p></th>
                <th></th>
            </tr>

            {%for arExamenListaPrecio in arExamenListaPrecios %}
                <tr>
                    <td>{{ arExamenListaPrecio.codigoExamenListaPrecioPk }}</td>
                    <td>{{ arExamenListaPrecio.codigoExamenTipoFk }}</td>
                    <td>{{ arExamenListaPrecio.examenTipoRel.nombre}}</td>
                    <td class="td-in-well" align="right">{{ arExamenListaPrecio.precio | number_format(0, '.', ',') }}</td>
                    <td>{% if arExamenListaPrecio.examenTipoRel.ingreso == 1 %} SI {% else %} NO {% endif %}</td>                    
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arExamenListaPrecio.codigoExamenListaPrecioPk }}" /></td>
                </tr>                       
            {%endfor%}                        
        </table>    

        <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}