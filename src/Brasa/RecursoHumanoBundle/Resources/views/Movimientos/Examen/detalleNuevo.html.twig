{% extends '::base_sin_menu.html.twig' %}
{% block title %}Examen nuevo tipo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Nuevo examen</h3>

        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>

                <th>CÃ“DIGO</th>
                <th>NOMBRE</th> 
                <th>INGRESO</th>
                <th></th>
            </tr>

            {%for arExamenTipos in arExamenTipos %}
                <tr>
                    <td>{{arExamenTipos.codigoExamenTipoPk}}</td>
                    <td>{{arExamenTipos.nombre}}</td>
                    <td>{% if arExamenTipos.ingreso == 1 %} SI {% else %} NO {% endif %}</td>
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arExamenTipos.codigoExamenTipoPk }}" /></td>
                    {%endfor%}
            </tr>            
        </table>    

        <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}