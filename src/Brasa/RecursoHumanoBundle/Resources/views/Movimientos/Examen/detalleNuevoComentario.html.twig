{% extends '::base_sin_menu.html.twig' %}
{% block title %}Examen agregar comentarios - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Examen: comentarios</small>
        </h1>        
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}        
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_validarVencimiento" class="col-sm-3 control-label">Validar vencimiento:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.validarVencimiento, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaVence" class="col-sm-3 control-label">Fecha vence:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.fechaVence, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>              
                <div class="form-group">
                    <label for="form_comentarios" class="col-sm-3 control-label">Comentarios:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control', 'rows':'8'} }) }}
                    </div>
                </div>                 
            </div>
        </div>               
        <div class="modal-footer">
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}            
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}