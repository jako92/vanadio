{% extends '::base2.html.twig' %}
{% block title %}Incapacidad nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Nueva incapacidad</h3>
        <div class="panel panel-default">
            <div class="panel-heading">Informacion incapacidad</div>
            <div class="panel-body">         
                <div class="form-group form-group-sm">
                    <label for="form_incapacidadTipoRel" class="col-sm-2 control-label">Tipo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.incapacidadTipoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>            
                <div class="form-group form-group-sm">
                    <label for="form_txtNumeroIdentificacion" class="col-sm-2 control-label">Empleado:</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-lg-2">
                                <div class="input-group">
                                    <input id="form_txtNumeroIdentificacion"  name="form_txtNumeroIdentificacion"  type="text" class="form-control" value="{{ arIncapacidad.empleadoRel.numeroIdentificacion |default('') }}"/>
                                </div>
                            </div>
                            <div class="col-lg-10">
                                <div class="input-group">                                      
                                    <input id="form_txtNombreCorto"  name="form_txtNombreCorto"  type="text" class="form-control" value="{{ arIncapacidad.empleadoRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                                    <span class="input-group-btn">                                        
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_buscar_empleado') }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>  
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Diagnostico:</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-lg-2">
                                <div class="input-group">
                                    <input id="form_txtCodigoIncapacidadDiagnostico"  name="form_txtCodigoIncapacidadDiagnostico"  type="text" class="form-control" value="{{ arIncapacidad.incapacidadDiagnosticoRel.codigo |default('') }}"/>
                                </div>
                            </div>
                            <div class="col-lg-10">
                                <div class="input-group">                                      
                                    <input id="form_txtNombreIncapacidadDiagnostico"  name="form_txtNombreIncapacidadDiagnostico"  type="text" class="form-control" value="{{ arIncapacidad.incapacidadDiagnosticoRel.nombre |default('') }}" readOnly="ReadOnly" />
                                    <span class="input-group-btn">                                        
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_buscar_incapacidad_diagnostico') }}', 'buscarIncapacidadDiagnostico', 600, 900)">Buscar</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>                                                
                <div class="form-group form-group-sm">
                    <label for="form_numeroEps" class="col-sm-2 control-label">Numero eps:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.numeroEps, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaDesde) }}
                    </div>
                </div>                
                <div class="form-group form-group-sm">
                    <label for="form_fechaRecogida" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaHasta) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_transcripcion" class="col-sm-2 control-label">Transcripci√≥n:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.estadoTranscripcion) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <label for="form_cobrar" class="col-sm-2 control-label">Cobrar:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.estadoCobrar) }}
                    </div>
                </div>                
                <div class="form-group form-group-sm">
                    <label for="form_prorroga" class="col-sm-2 control-label">Prorroga:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.estadoProrroga) }}
                    </div>
                </div>    
                <div class="form-group">
                    <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>                 
            </div>
        </div>                   
        <div class="modal-footer">   
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_movimiento_incapacidad') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
        </div>    
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}