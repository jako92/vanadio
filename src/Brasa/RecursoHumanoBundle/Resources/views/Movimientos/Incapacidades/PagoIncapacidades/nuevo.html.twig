{% extends '::base2.html.twig' %}
{% block title %}Pago incapacidad nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Incapacidad pago: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimientos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Incapacidad pago</a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}        
        <div class="panel panel-default">
            <div class="panel-heading">Informacion</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_entidadSalud" class="col-sm-2 control-label">Entidad salud:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.entidadSaludRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                    <label for="form_entidadSalud" class="col-sm-2 control-label">Fecha pago:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaPago) }}
                    </div>
                </div>
                <div class="form-group">
                    <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>     
            </div>
        </div>                   
        <div class="modal-footer">   
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_incapacidades_pagos_lista') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
        </div>    
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}