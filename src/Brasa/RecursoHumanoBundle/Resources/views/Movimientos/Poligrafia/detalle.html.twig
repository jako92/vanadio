{% extends '::base2.html.twig' %}
{% block title %}Poligrafia detalle - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Poligrafia: detalle</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimientos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Poligrafia</a></li>
            <li class="active">Detalle</li>
        </ol>
    </section>    
    <section class="content">        	
        
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">                
                {{ form_widget(form.BtnAutorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnDesAutorizar, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}               
                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_ad_archivos_lista', { 'codigoDocumento': 8,  'numero': arPoligrafia.codigoPoligrafiaPk }) }}', 'Archivos', 500, 800)" >Archivos</a>
            </div>
        </div>            
        <br /><br />
        <div class="panel panel-default">
            <div class="panel-heading">Información de la poligrafia</div>
            <div class="panel-body">    
                <table width="100%" class="table table-condensed table-bordered">
                    <tr>
                        <td class="titulo">CODIGO:</td>
                        <td class="td-in-well">{{ arPoligrafia.codigoPoligrafiaPk }}</td>
                        <td class="titulo">FECHA:</th>
                        <td class="td-in-well">{{ arPoligrafia.fecha |date("Y/m/d H:s:i") }}</td>
                        <td class="titulo">USUARIO:</td>
                        <td class="td-in-well">{{ arPoligrafia.codigoUsuario }}</td>                        
                    </tr>
                    <tr>
                        <td class="titulo">IDENTIFICACIÓN:</td>
                        <td class="td-in-well">{{ arPoligrafia.numeroIdentificacion }}</td>
                        <td class="titulo">EMPLEADO:</td>
                        <td class="td-in-well">{{ arPoligrafia.nombreCorto }}</td>
                        <td class="titulo">TIPO</td>
                        <td class="td-in-well">{{ arPoligrafia.poligrafiaTipoRel.nombre | default('') }}</td>                                                
                    </tr>
                    <tr>
                        <td class="titulo">AUTORIZADO:</td>
                        <td class="td-in-well">{% if arPoligrafia.estadoAutorizado == 1 %} SI {% else %} NO {% endif %}</td>
                        <td class="titulo">CERRADO:</td>
                        <td class="td-in-well">{% if arPoligrafia.estadoCerrado == 1 %} SI {% else %} NO {% endif %}</td>
                        <td class="titulo">TOTAL:</td>
                        <td class="td-in-well">{{ arPoligrafia.vrTotal | number_format(0, '.', ',')}}</td>
                    </tr>
                    <tr>
                        <td class="titulo" >COMENTARIOS: </td>
                        <td class="td-in-well" colspan="6">{{ arPoligrafia.comentarios }}</td>                                                                       
                    </tr>                    
                </table>
            </div>
        </div>                    

        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_movimiento_poligrafia') }}" style="float:left">Volver</a>
            </div>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
