{% extends '::base2.html.twig' %}
{% block title %}Poligrafia nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Poligrafia: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimientos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Poligrafia</a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}           
        <div class="panel panel-default">
            <div class="panel-heading">Informaci√≥n general</div>
            <div class="panel-body">                                    
                <div class="form-group form-group-sm">
                    <label for="form_tipoIdentificacionRel" class="col-sm-2 control-label">Tipo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.tipoIdentificacionRel) }}
                        {{ form_errors(form.tipoIdentificacionRel) }} 
                    </div>
                    <label for="form_numeroIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.numeroIdentificacion) }}                        
                    </div> 
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_nombreCorto" class="col-sm-2 control-label">Nombre completo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.nombreCorto, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}                       
                    </div>
                    <label for="form_clienteRel" class="col-sm-2 control-label">Cliente:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.clienteRel) }}                        
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fecha" class="col-sm-2 control-label">Fecha:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fecha) }}                        
                    </div>                
                </div>
                <div class="form-group">
                    <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.comentarios) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Informacion Comercial</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_vrTotal" class="col-sm-2 control-label">Valor poligrafia:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.vrTotal) }}
                    </div>
                </div> 
            </div>                
        </div>
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_movimiento_poligrafia') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>    
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}