{% extends '::base2.html.twig' %}
{% block title %}Visita nuevo - Soga App{% endblock %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva visita</h3>    
    <div class="panel panel-default">
        <div class="panel-heading">Informaci√≥n general</div>
        <div class="panel-body">                                    
            <div class="form-group form-group-sm">
                <label for="form_txtNumeroIdentificacion" class="col-sm-3 control-label">Empleado:</label>
                <div class="col-sm-9">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                <input id="form_txtNumeroIdentificacion"  name="form_txtNumeroIdentificacion"  type="text" class="form-control" value="{{ arVisita.empleadoRel.numeroIdentificacion |default('') }}"/>
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">                                      
                                <input id="form_txtNombreCorto"  name="form_txtNombreCorto"  type="text" class="form-control" value="{{ arVisita.empleadoRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                                <span class="input-group-btn">                                        
                                    <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_buscar_empleado') }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_visitaTipoRel" class="col-sm-3 control-label">Tipo:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.visitaTipoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>                
            </div>              
            <div class="form-group form-group-sm">
                <label for="form_fecha" class="col-sm-3 control-label">Fecha/hora visita:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.fecha) }}                        
                </div>                
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaVence" class="col-sm-3 control-label">Fecha vence:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.fechaVence) }}                        
                </div>                
            </div>
            <div class="form-group form-group-sm">
                <label for="form_validarVencimiento" class="col-sm-3 control-label">Validar vencimiento:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.validarVencimiento) }}                        
                </div>                
            </div>    
            <div class="form-group">
                <label for="form_nombreQuienVisita" class="col-sm-3 control-label">Persona realiza visita:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.nombreQuienVisita, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>    
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-3 control-label">Comentarios:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.comentarios, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_movimiento_visita') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>    
    {{ form_end(form) }}
{% endblock %}