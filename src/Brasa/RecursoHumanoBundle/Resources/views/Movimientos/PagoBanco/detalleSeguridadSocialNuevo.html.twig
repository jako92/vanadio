{% extends '::base_sin_menu.html.twig' %}
{% block title %}Detalle seguridad social nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Seguridad social</h3>
        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>            
                <th>CÓDIGO</th>
                <th>AÑO</th>   
                <th>MES</th>   
                <th>TOTAL</th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
            </tr>        
            {%for arSsoPediodoDetalles in arSsoPediodoDetalles %}
                <tr>
                    <td>{{arSsoPediodoDetalles.codigoPeriodoDetallePk }}</td>
                    <td>{{ arSsoPediodoDetalles.ssoPeriodoRel.anio  }}</td>
                    <td>{{ arSsoPediodoDetalles.ssoPeriodoRel.mes  }}</td>                
                    <td style="text-align: right">{{ arSsoPediodoDetalles.totalCotizacion | number_format(0, '.', ',') }}</td>
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arSsoPediodoDetalles.codigoPeriodoDetallePk }}" /></td>
                    {%endfor%}
            </tr>            
        </table> 


        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                                
                {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            </div>  
        </div>   
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}