{% extends '::base_sin_menu.html.twig' %}
{% block title %}Pago banco nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Pago banco: nuevo</small>
        </h1>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}        
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Tipo:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.pagoBancoTipoRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>            
                <div class="form-group form-group-sm">
                    <label for="form_cuentaRel" class="col-sm-3 control-label">Cuenta:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.cuentaRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>            
                <div class="form-group form-group-sm">
                    <label for="form_descripcion" class="col-sm-3 control-label">Descripción:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.descripcion, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div> 
                <div class="form-group form-group-sm">
                    <label for="form_fechaTrasmision" class="col-sm-3 control-label">Fecha transmisión:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.fechaTrasmision) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_secuencia" class="col-sm-3 control-label">Secuencia:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.secuencia, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <label for="form_fechaAplicacion" class="col-sm-3 control-label">Fecha aplicación:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.fechaAplicacion) }}
                    </div>
                </div>    
            </div>
        </div>               
        <div class="modal-footer">
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}