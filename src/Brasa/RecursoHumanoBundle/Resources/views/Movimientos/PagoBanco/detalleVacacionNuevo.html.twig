{% extends '::base_sin_menu.html.twig' %}
{% block title %}Detalle vacacion nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Pago banco: detalle vacaciones nuevo</small>
        </h1>        
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}        
        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>            
                <th>CÃ“DIGO</th>
                <th>FECHA</th>
                <th>EMPLEADO</th>    
                <th>BANCO</th>
                <th>CUENTA</th>
                <th style="text-align: right">NETO</th>
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
            </tr>        
            {%for arVacaciones in arVacaciones %}
                <tr>
                    <td>{{arVacaciones.codigoVacacionPk }}</td>
                    <td>{{ arVacaciones.fecha |date("Y/m/d")  }}</td>
                    <td>{{arVacaciones.empleadoRel.nombreCorto }}</td>
                    <td>{{arVacaciones.empleadoRel.bancoRel.nombre |default('') }}</td>
                    <td>{{arVacaciones.empleadoRel.cuenta |default('') }}</td>                
                    <td style="text-align: right">{{ arVacaciones.vrVacacion | number_format(0, '.', ',') }}</td>
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arVacaciones.codigoVacacionPk }}" /></td>
                    {%endfor%}
            </tr>            
        </table> 


        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">                                
                {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            </div>  
        </div>   
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}