{% extends '::base2.html.twig' %}
{% block title %}Embargo nuevo - Soga App{% endblock %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva embargo</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion embargo</div>
        <div class="panel-body">        
            <div class="form-group form-group-sm">
                <label class="col-sm-5 control-label">Tipo:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.embargoTipoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label for="form_txtNumeroIdentificacion" class="col-sm-5 control-label">Empleado:</label>
                <div class="col-sm-7">
                    <div class="row">
                        <div class="col-lg-2">
                            <div class="input-group">
                                <input id="form_txtNumeroIdentificacion"  name="form_txtNumeroIdentificacion"  type="text" class="form-control" value="{{ arEmbargo.empleadoRel.numeroIdentificacion |default('') }}"/>
                            </div>
                        </div>
                        <div class="col-lg-10">
                            <div class="input-group">                                      
                                <input id="form_txtNombreCorto"  name="form_txtNombreCorto"  type="text" class="form-control" value="{{ arEmbargo.empleadoRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                                <span class="input-group-btn">                                        
                                    <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_rhu_buscar_empleado') }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>                                                  
            <div class="form-group form-group-sm">
                <label class="col-sm-5 control-label">Numero:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.numero, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                 
            <div class="form-group form-group-sm">
                <label class="col-sm-5 control-label">Activo:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.estadoActivo) }}
                </div>
            </div>                
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-5 control-label">Comentarios:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>                 
        </div>
    </div> 
    <div class="panel panel-default">
        <div class="panel-heading">Descuento fijo</div>
        <div class="panel-body">        
            <div class="form-group form-group-sm">
                <label class="col-sm-5 control-label">Valor fijo:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.valorFijo) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label class="col-sm-5 control-label">Valor:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.valor, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                                 
        </div>
    </div> 
    <div class="panel panel-default">
        <div class="panel-heading">Descuento porcentaje</div>
        <div class="panel-body">         
            <div class="form-group form-group-sm">
                <label class="col-sm-5 control-label">Porcentaje devengado:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.porcentajeDevengado) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label class="col-sm-5 control-label">Porcentaje devengado (Prestacional):</label>
                <div class="col-sm-7">
                    {{ form_widget(form.porcentajeDevengadoPrestacional ) }}
                </div>
            </div>                 
            <div class="form-group form-group-sm">
                <label class="col-sm-5 control-label">Porcentaje devengado menos descuentos de ley:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.porcentajeDevengadoMenosDescuentoLey) }}
                </div>
            </div> 
            <div class="form-group form-group-sm">
                <label class="col-sm-5 control-label">Porcentaje exceda el salario minimo:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.porcentajeExcedaSalarioMinimo) }}
                </div>
            </div>                 
            <div class="form-group form-group-sm">
                <label class="col-sm-5 control-label">Porcentaje:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.porcentaje, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                               
        </div>
    </div>    
    <div class="panel panel-default">
        <div class="panel-heading">Descuento partes</div>
        <div class="panel-body">                      
            <div class="form-group form-group-sm">
                <label class="col-sm-5 control-label">Partes exceda el salario minimo:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.partesExcedaSalarioMinimo) }}
                </div>
            </div>   
            <div class="form-group form-group-sm">
                <label class="col-sm-5 control-label">Partes:</label>
                <div class="col-sm-7">
                    {{ form_widget(form.partes, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                                 
        </div>
    </div>                 
    <div class="modal-footer">   
        <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_movimiento_embargo') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
    </div>    
    {{ form_end(form) }}
{% endblock %}