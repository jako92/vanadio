{% extends '::base_sin_menu.html.twig' %}
{% block title %}Vacaciones detalle deducci√≥n nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Descuento</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="pagoConceptoRel" class="col-sm-2 control-label">Tipo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.pagoConceptoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                        
                <div class="form-group form-group-sm">
                    <label for="TxtValor" class="col-sm-2 control-label">Valor:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.TxtValor, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                           
            </div>
        </div>

        <div class="modal-footer">                
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        <br />
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}