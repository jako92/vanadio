{% block content %}
    <div class="container">        
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Descuento</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
