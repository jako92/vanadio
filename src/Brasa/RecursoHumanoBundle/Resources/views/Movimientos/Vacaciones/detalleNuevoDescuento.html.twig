{% extends '::base_sin_menu.html.twig' %}
{% block title %}Vacacion detalle deducción nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Vacacion: detalle deducción nuevo</small>
        </h1>        
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">            
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="pagoConceptoRel" class="col-sm-2 control-label">Tipo:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.pagoConceptoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                        
                <div class="form-group form-group-sm">
                    <label for="TxtValor" class="col-sm-2 control-label">Valor:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.TxtValor, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                           
            </div>
        </div>

        <div class="modal-footer">                
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        <br />
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}