{% extends '::base_sin_menu.html.twig' %}
{% block title %}Vacacion detalle deducción nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Recurso humano
            <small>Vacacion: detalle deducción nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Vacacion</a></li>
            <li class="active">Detalle deducción nuevo</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}        
        <div class="panel panel-default">
            <table class="table table-striped table-bordered table-condensed table-hover">
                <tr>

                    <th>CÓDIGO</th>
                    <th>NOMBRE</th>
                    <th>CUOTA</th>
                    <th>SALDO</th>
                    <th>VALOR</th>
                    <th></th>
                </tr>

                {%for arCreditos in arCreditos %}
                    <tr>
                        <td>{{arCreditos.codigoCreditoPk}}</td>
                        <td>{{arCreditos.creditoTipoRel.nombre}}</td>
                        <td>{{arCreditos.vrCuota | number_format(2, '.', ',') }}</td>
                        <td>{{arCreditos.saldo | number_format(2, '.', ',') }}</td>   
                        <td style="text-align: right"><input class="input-grid" type="text" name="TxtValor{{ arCreditos.codigoCreditoPk }}" value="{{ arCreditos.vrCuota  }}" size="10" style="text-align: right; width:80px" onkeypress="return validarNumeros(event)" onclick="this.select()"/></td>                                                
                        <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCreditos.codigoCreditoPk }}" /></td>
                        {%endfor%}
                </tr>            
            </table>    
        </div>               
        <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}