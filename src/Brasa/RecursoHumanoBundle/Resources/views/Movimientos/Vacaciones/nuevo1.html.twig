{% extends '::base_sin_menu.html.twig' %}
{% block title %}Vacación nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">        	
        <script type="text/javascript">
            $(document).ready(function () {
                $('.date').datepicker({dateFormat: 'yyyy-mm-dd', dayNamesMin: ["Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]})
            });
        </script>
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Nueva vacación</h3>
        <div class="panel panel-default">
            <div class="panel-heading">Información general</div>
            <div class="panel-body">                
                <div class="form-group form-group-sm">
                    <label for="form_diasDisfrutados" class="col-sm-3 control-label">Dias disfrutados:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.diasDisfrutados , { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>            
                <div class="form-group form-group-sm">
                    <label for="form_diasPagados" class="col-sm-3 control-label">Dias pagados:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.diasPagados , { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                
                <div class="form-group form-group-sm">
                    <label for="form_fechaDesdeDisfrute" class="col-sm-3 control-label">Desde:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.fechaDesdeDisfrute , { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaHastaDisfrute" class="col-sm-3 control-label">Hasta:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.fechaHastaDisfrute, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                     
                <div class="form-group">
                    <label for="form_comentarios" class="col-sm-3 control-label">Comentarios:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>

            </div>
        </div>
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>CÓDIGO</th>
                <th>TIPO</th>
                <th style="text-align: right">VALOR</th>            
            </tr>
            {% for arCreditosPendientes in arCreditosPendientes %}
                <tr>
                    <td>
                        <input type="hidden" name="LblCodigoGuia[]" value="{{ arCreditosPendientes.codigoCreditoPk }}">
                        <span class="badge">{{ arCreditosPendientes.codigoCreditoPk }}</span>
                    </td>
                    <td>{{ arCreditosPendientes.creditoTipoRel.nombre }}</td>           
                    <td style="text-align: right">{{ arCreditosPendientes.saldoTotal | number_format(2, '.', ',') }}</td>            
                </tr>
            {% endfor %}
        </table>           
        <div class="modal-footer">      
            <a class="btn btn-default btn-sm" onclick="window.close()">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>    
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}