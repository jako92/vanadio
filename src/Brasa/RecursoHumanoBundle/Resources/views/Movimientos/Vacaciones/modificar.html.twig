{% extends '::base_sin_menu.html.twig' %}
{% block title %}Vacaciones modificar informacion - Soga App{% endblock %} 
{% block content %}
    <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">        	
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <h3>Modificar vacacion</h3>
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_fechaDesdeDisfrute" class="col-sm-4 control-label">Fecha desde disfrute:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaDesdeDisfrute) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaHastaDisfrute" class="col-sm-4 control-label">Fecha hasta disfrute:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaHastaDisfrute) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_vrSalud" class="col-sm-4 control-label">Vr salud:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.vrSalud, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_vrPension" class="col-sm-4 control-label">Vr pension:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.vrPension, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>            
                <div class="form-group form-group-sm">
                    <label for="form_diasDisfrute" class="col-sm-4 control-label">Dias disfrute:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.diasDisfrute, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_diasPagados" class="col-sm-4 control-label">Dias pagados:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.diasPagados, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_vrSalarioPromedio" class="col-sm-4 control-label">Salario promedio:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.vrSalarioPromedio, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_vrRecargoNocturno" class="col-sm-4 control-label">Promedio recargo nocturno:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.vrRecargoNocturno, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>                            
                <div class="form-group form-group-sm">
                    <label for="form_totalVacaciones" class="col-sm-4 control-label">Total vacaciones:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.totalVacaciones, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_vrVacacion" class="col-sm-4 control-label">Valor a pagar:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.vrVacacion, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>    
            </div>
        </div>               
        <div class="modal-footer">
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}

        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}