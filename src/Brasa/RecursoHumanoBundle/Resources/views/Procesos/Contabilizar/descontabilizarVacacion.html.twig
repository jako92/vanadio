{% extends '::base_sin_menu.html.twig' %}
{% block title %}Descontabilizar vacacion - Soga App{% endblock %}
{% block content %}
        <section class="content-header">
        <h1>
            Recurso humano
            <small>Descontabilizar: vacacion</small>
        </h1>
    </section>    
    <section class="content"> 
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.date').datepicker({dateFormat: 'yy-mm-dd', dayNamesMin: ["Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]})
        });
    </script>    
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_numeroDesde" class="col-sm-2 control-label">Número desde:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.numeroDesde, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_numeroHasta" class="col-sm-2 control-label">Número hasta:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.numeroHasta, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaDesde, {'attr': {'maxlength' : 10} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaHasta, {'attr': {'maxlength' : 10} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">                        
                    {{ form_widget(form.BtnDescontabilizar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right', 'onclick': 'return confirm("Esta seguro de descontabilizar los registros?")'} }) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>      
{% endblock %}