{% extends '::base_sin_menu.html.twig' %}
{% block title %}Descontabilizar pagos nomina - Soga App{% endblock %}
{% block content %}
        <section class="content-header">
        <h1>
            Recurso humano
            <small>Descontabilizar: pago nomina</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Procesos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Descontabilizar</a></li>
            <li class="active">Pago nomina</li>
        </ol>
    </section>    
    <section class="content">    
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-2 control-label">Tipo pago:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.pagoTipoRel, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_numeroDesde" class="col-sm-2 control-label">Número desde:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.numeroDesde, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_numeroHasta" class="col-sm-2 control-label">Número hasta:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.numeroHasta, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaDesde, {'attr': {'maxlength' : 10} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.fechaHasta, {'attr': {'maxlength' : 10} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">                        
                    {{ form_widget(form.BtnDescontabilizar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right', 'onclick': 'return confirm("Esta seguro de descontabilizar los registros?")'} }) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>      
{% endblock %}