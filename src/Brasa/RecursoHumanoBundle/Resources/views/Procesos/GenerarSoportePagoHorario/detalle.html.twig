            <th><p data-toggle="tooltip" data-placement="top" title="Horas extras festivas nocturnas">HEFN</p></th>
            <th></th>
            <th></th>
            <th></th>                
        </tr>
        {% for arSoportesPagosHorariosDetalles in arSoportesPagosHorariosDetalles %}
            <tr>                
                <td>{{ arSoportesPagosHorariosDetalles.codigoSoportePagoHorarioDetallePk  }}</td>
                <td>{{ arSoportesPagosHorariosDetalles.fechaDesde |date("Y/m/d")  }}</td>
                <td>{{ arSoportesPagosHorariosDetalles.fechaHasta |date("Y/m/d")  }}</td>   
                <td>{{ arSoportesPagosHorariosDetalles.empleadoRel.numeroIdentificacion  }}</td>   
                <td>{{ arSoportesPagosHorariosDetalles.empleadoRel.nombreCorto  }}</td>   
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.dias | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.incapacidad | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.licencia | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.vacacion | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.descanso | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horas | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasPermiso | number_format(0, '.', ',') }}</td>
                <td style="text-align: right">{{ arSoportesPagosHorariosDetalles.horasNovedad | number_format(0, '.', ',') }}</td>
