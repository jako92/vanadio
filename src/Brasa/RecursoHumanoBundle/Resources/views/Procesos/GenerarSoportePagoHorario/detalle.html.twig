            <th>DIAS</th>                
            <th>INC</th>
            <th>LIC</th>
            <th>VAC</th>
            <th>DES</th>                
            <th><p data-toggle="tooltip" data-placement="top" title="Horas">H</p></th>
            <th><p data-toggle="tooltip" data-placement="top" title="Horas permisos">HP</p></th>
            <th><p data-toggle="tooltip" data-placement="top" title="Horas novedad">HN</p></th>
            <th><p data-toggle="tooltip" data-placement="top" title="Horas descanso">HDS</p></th>
