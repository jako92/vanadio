{% extends '::base_sin_menu.html.twig' %}
{% block title %}Cotizacion nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo soporte pago detalle</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">                
            <div class="form-group form-group-sm">
                <label for="form_dias" class="col-sm-4 control-label">Dias:</label>
                <div class="col-sm-8">
                        {{ form_widget(form.dias, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_horas" class="col-sm-4 control-label">Horas:</label>
                <div class="col-sm-8">
                        {{ form_widget(form.horas, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_horasDescanso" class="col-sm-4 control-label">Horas descanso:</label>
                <div class="col-sm-8">
                        {{ form_widget(form.horasDescanso, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_horasDiurnas" class="col-sm-4 control-label">Horas diurnas:</label>
                <div class="col-sm-8">
                        {{ form_widget(form.horasDiurnas, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_horasNocturnas" class="col-sm-4 control-label">Horas nocturnas:</label>
                <div class="col-sm-8">
                        {{ form_widget(form.horasNocturnas, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_horasFestivasDiurnas" class="col-sm-4 control-label">Horas festivas diurnas:</label>
                <div class="col-sm-8">
                        {{ form_widget(form.horasFestivasDiurnas, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_horasFestivasNocturnas" class="col-sm-4 control-label">Horas festivas nocturnas:</label>
                <div class="col-sm-8">
                        {{ form_widget(form.horasFestivasNocturnas, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>                
        </div>
    </div>               
    <div class="modal-footer">        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}