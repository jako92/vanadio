{% extends '::base_sin_menu.html.twig' %}
{% block title %}Desgenerar programacion pagos nomina - Soga App{% endblock %}
{% block content %}
        <section class="content-header">
        <h1>
            Recurso humano
            <small>Desgenerar: programacion pago nomina</small>
        </h1>
    </section>    
    <section class="content">    
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">               
            <div class="form-group form-group-sm">
                <label for="form_numero" class="col-sm-2 control-label">Numero:</label>
                <div class="col-sm-10">
                    {{ form_widget(form.numero, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>   
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">                        
                    {{ form_widget(form.BtnDesgenerar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right', 'onclick': 'return confirm("Esta seguro de desgenerar esta programacion de pago?")'} }) }}
                </div>
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>      
{% endblock %}