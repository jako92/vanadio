{% extends '::base2.html.twig' %}
{% block title %}Cierre de mes - Soga App{% endblock %}
{% block content %}
        <section class="content-header">
        <h1>
            Recurso humano
            <small>Cierre mes: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Procesos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Cierre mes</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">     
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <table  class="table table-striped table-bordered table-condensed table-hover">
        <tr>    
            <th>CÓDIGO</th>
            <th>AÑO</th>
            <th>MES</th>
            <th></th>
        </tr>
        {% for arCierresMes in arCierresMes %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arCierresMes.codigoCierreMesPk }}">{{ arCierresMes.codigoCierreMesPk }} </td>
                <td>{{ arCierresMes.anio  }}</td>
                <td>{{ arCierresMes.mes  }}</td>
                {% if arCierresMes.estadoCerrado == 0 %}
                    <td style="text-align: center"><a class="btn btn-default btn-xs" id="{{ path('brs_rhu_proceso_cierre_anio_cerrar', { 'codigoCierreAnio': arCierresMes.codigoCierreMesPk}) }}" style="float:left">Cerrar</a></td>                                                                                                
                {% else %}
                    <td style="text-align: center"></td>
                {% endif %}    
            </tr>
        {% endfor %}
    </table>
    <div class="btn-toolbar" style="float: right">              
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_proceso_cierre_mes_nuevo', {'codigoCierreMes': 0}) }}">Nuevo</a>
        </div>
    </div>        
    {{ form_rest(form) }}
    {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>  
{% endblock %}
