{% extends '::base2.html.twig' %}
{% block title %}Cierre de mes - Soga App{% endblock %}
{% block content %}
        <section class="content-header">
        <h1>
            Recurso humano
            <small>Cierre mes: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Procesos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Cierre mes</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">     
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <table  class="table table-striped table-bordered table-condensed table-hover">
        <tr>    
            <th>CÓDIGO</th>
            <th>AÑO</th>
            <th>MES</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        {% for arCierresMes in arCierresMes %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arCierresMes.codigoCierreMesPk }}">{{ arCierresMes.codigoCierreMesPk }} </td>
                <td>{{ arCierresMes.anio  }}</td>
                <td>{{ arCierresMes.mes  }}</td>
                <td>{% if arCierresMes.estadoGenerado == 0 %}<button class="btn btn-default btn-xs" type="submit" name="OpGenerar" value="{{ arCierresMes.codigoCierreMesPk }}">Generar</button>{% endif %}</td>
                <td>{% if arCierresMes.estadoGenerado == 1 and arCierresMes.estadoCerrado == 0 %}<button class="btn btn-default btn-xs" type="submit" name="OpDeshacer" value="{{ arCierresMes.codigoCierreMesPk }}">Deshacer</button>{% endif %}</td>  
                <td>{% if arCierresMes.estadoGenerado == 1 and arCierresMes.estadoCerrado == 0 %}<button class="btn btn-default btn-xs" type="submit" name="OpCerrar" value="{{ arCierresMes.codigoCierreMesPk }}">Cerrar</button>{% endif %}</td>                  
            </tr>
        {% endfor %}
    </table>
    <div class="btn-toolbar" style="float: right">              
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_proceso_cierre_mes_nuevo', {'codigoCierreMes': 0}) }}">Nuevo</a>
        </div>
    </div>        
    {{ form_rest(form) }}
    {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>  
{% endblock %}
