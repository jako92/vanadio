{% extends '::base2.html.twig' %}
{% block title %}Cierre de año - Soga App{% endblock %}
{% block content %}
        <section class="content-header">
        <h1>
            Programacion turnos
            <small>Programaciones: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Programacion turnos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Movimiento</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content"> 
    <div class="page-header">
        <h3>Cierres año</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <table  class="table table-striped table-bordered table-condensed table-hover">
        <tr>    
            <th>CÓDIGO</th>
            <th>AÑO</th>
            <th></th>
        </tr>
        {% for arCierresAnios in arCierresAnios %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arCierresAnios.codigoCierreAnioPk }}">{{ arCierresAnios.codigoCierreAnioPk }} </td>
                <td>{{ arCierresAnios.anio  }}</td>
                {% if arCierresAnios.estadoCerrado == 0 %}
                    <td style="text-align: center"><a class="btn btn-default btn-xs" id="{{ path('brs_rhu_proceso_cierre_anio_cerrar', { 'codigoCierreAnio': arCierresAnios.codigoCierreAnioPk}) }}" style="float:left">Cerrar</a></td>                                                                                                
                {% else %}
                    <td style="text-align: center"></td>
                {% endif %}    
            </tr>
        {% endfor %}
    </table>
    <div class="btn-toolbar" style="float: right">              
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('brs_rhu_proceso_cierre_anio_nuevo', {'codigoCierreAnio': 0}) }}">Nuevo</a>
        </div>
    </div>        
    {{ form_rest(form) }}
    {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>  
{% endblock %}
