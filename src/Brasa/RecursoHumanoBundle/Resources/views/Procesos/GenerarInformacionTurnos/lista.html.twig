{% extends '::base2.html.twig' %}
{% block title %}Generar informacion turnos - Soga App{% endblock %}
{% block content %}
        <section class="content-header">
        <h1>
            Recurso humano
            <small>Generar: Informacion turnos</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Recurso humano</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Procesos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Generar</a></li>
            <li class="active">Informacion turnos</li>
        </ol>
    </section>    
    <section class="content">     
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
               
        <div class="panel panel-default">
            <div class="panel-heading">Parametros de generacion</div>
            <div class="panel-body">                                                   
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">AÃ±o:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtAnio, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">Mes:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.TxtMes, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                       
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnGenerar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                                                    
            </div>
        </div> 

    {{ form_rest(form) }}
    {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>      
{% endblock %}
