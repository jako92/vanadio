{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<script type="text/javascript">
    $(document).ready(function() {
    $('.date').datepicker({ dateFormat: 'yy-mm-dd' ,dayNamesMin: [ "Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa" ],monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre" ], monthNames: [ "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre" ]})  });
</script>
<div class="container">
    <div class="page-header">
        <h3>Pago afiliaciones anticipos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div     class="form-group form-group-sm">
                    <label for="txtNit" class="col-sm-2 control-label">Cliente:</label>
                    <div class="col-sm-10">
                        <div class="row">
                          <div class="col-lg-2">
                            <div class="input-group">
                              {{ form_widget(form.TxtNit, { 'attr': {'class': 'form-control'} }) }}
                            </div>
                          </div>
                          <div class="col-lg-10">
                            <div class="input-group">
                              {{ form_widget(form.TxtNombreCliente, { 'attr': {'class': 'form-control', 'readOnly': 'ReadOnly'} }) }}
                              <span class="input-group-btn">
                                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_afi_buscar_cliente', { 'campoCodigo': 'form_TxtNit', 'campoNombre': 'form_TxtNombreCliente' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                              </span>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_TxtNumeroIdentificacion" class="col-sm-2 control-label">Identificacion:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.TxtNumeroIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.TxtNombre, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_TxtNumero" class="col-sm-2 control-label">Numero:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.TxtNumero, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label for="form_TxtCodigo" class="col-sm-2 control-label">Codigo:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.TxtCodigo, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaDesde ) }}
                    </div>
                    <label for="form_asesorRel" class="col-sm-2 control-label">Asesor:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.asesorRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaHasta ) }}
                    </div>
                    <label for="form_cuentaRel" class="col-sm-2 control-label">Cuenta:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.cuentaRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arPagoAfiliacionesDetalle, 'CÃ“DIGO', 'codigo') }}</th>
                <th>NUMERO</th>
                <th>FECHA P</th>
                <th>NIT</th>
                <th>CLIENTE</th>
                <th>ASESOR</th>
                <th>DOCUMENTO</th>
                <th>NOMBRE</th>
                <th>CONTRATO</th>
                <th>CUENTA</th>
                <th>AFI</th>
                <th>ADMON</th>
                <th>PAGO</th>
                <th>TIPO</th>
            </tr>

            {% for arPagoAfiliacionesDetalle in arPagoAfiliacionesDetalle %}
            <tr>
                <td>{{ arPagoAfiliacionesDetalle.codigo }}</td>
                <td>{{ arPagoAfiliacionesDetalle.numero }}</td>
                <td>{{ arPagoAfiliacionesDetalle.fechaPago }}</td>
                <td>{{ arPagoAfiliacionesDetalle.nit }}</td>
                <td>{{ arPagoAfiliacionesDetalle.cliente }}</td>
                <td>{{ arPagoAfiliacionesDetalle.asesor }}</td>
                <td>{{ arPagoAfiliacionesDetalle.ccEmpleado }}</td>
                <td>{{ arPagoAfiliacionesDetalle.empleado }}</td>
                <td>{{ arPagoAfiliacionesDetalle.contrato }}</td>
                <td>{{ arPagoAfiliacionesDetalle.cuenta }}</td>
                <td style="text-align: right">{{ arPagoAfiliacionesDetalle.afiliacion | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagoAfiliacionesDetalle.administracion | number_format(2, '.', ',') }}</td>
                <td style="text-align: right">{{ arPagoAfiliacionesDetalle.pago | number_format(2, '.', ',') }}</td>
                <td>{% if arPagoAfiliacionesDetalle.tipo == 0 %}NUEVO{% else %}REINGRESO{% endif %}</td>
            </tr>

            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arPagoAfiliacionesDetalle.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arPagoAfiliacionesDetalle) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
