{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Lista periodos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div     class="form-group form-group-sm">
                    <label for="txtNit" class="col-sm-2 control-label">Cliente:</label>
                    <div class="col-sm-10">
                        <div class="row">
                          <div class="col-lg-2">
                            <div class="input-group">
                              {{ form_widget(form.TxtNit, { 'attr': {'class': 'form-control'} }) }}                              
                            </div>
                          </div>
                          <div class="col-lg-10">
                            <div class="input-group">     
                              {{ form_widget(form.TxtNombreCliente, { 'attr': {'class': 'form-control', 'readOnly': 'ReadOnly'} }) }}                              
                              <span class="input-group-btn">                                        
                                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_afi_buscar_cliente', { 'campoCodigo': 'form_TxtNit', 'campoNombre': 'form_TxtNombreCliente' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                              </span>
                            </div>
                          </div>
                        </div>
                    </div>
                </div> 
                <div class="form-group form-group-sm">  
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaDesde ) }}
                    </div>
                    <label class="col-sm-2 control-label">Cerrado:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.estadoCerrado, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.fechaHasta ) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arPeriodos, 'CÃ“DIGO', 'p.codigoPeriodoPk') }}</th>
                <th>NIT</th>
                <th>CLIENTE</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>TOTAL</th>
                <th>COBRO</th>
                <th>PAGO</th>
                <th>CERRAR</th>
                <th>FACT</th>                
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {% for arPeriodos in arPeriodos %}
            <tr>
                <td>{{ arPeriodos.codigoPeriodoPk  }}</td>
                <td>{{ arPeriodos.clienteRel.nit  }}</td>
                <td>{{ arPeriodos.clienteRel.nombreCorto  }}</td>
                <td>{{ arPeriodos.fechaDesde |date('Y/m/d') }}</td>
                <td>{{ arPeriodos.fechaHasta |date('Y/m/d') }}</td>
                <td style="text-align: right">{{ arPeriodos.total | number_format(0, '.', ',') }}</td>                
                {% if arPeriodos.estadoGenerado == 0 %}
                    <td><button class="btn btn-default btn-xs" type="submit" name="OpGenerar" value="{{ arPeriodos.codigoPeriodoPk }}">Generar</button></td>                    
                {% else %}
                    {% if arPeriodos.estadoCerrado == 0 %}
                        <td><button class="btn btn-default btn-xs" type="submit" name="OpDeshacer" value="{{ arPeriodos.codigoPeriodoPk }}">Deshacer</button></td>                                                
                    {% else %}                        
                        <td></td>                        
                    {% endif %}                                                                                            
                {% endif %}       
                {% if arPeriodos.estadoPagoGenerado == 0 %}
                    <td><button class="btn btn-default btn-xs" type="submit" name="OpGenerarPago" value="{{ arPeriodos.codigoPeriodoPk }}">Generar</button></td>
                {% else %}
                    {% if arPeriodos.estadoCerrado == 0 %}
                        <td><button class="btn btn-default btn-xs" type="submit" name="OpDeshacerPago" value="{{ arPeriodos.codigoPeriodoPk }}">Deshacer</button></td>
                    {% else %}                        
                        <td></td>                        
                    {% endif %}                        
                {% endif %} 
                {% if arPeriodos.estadoCerrado == 0 %}
                    <td><button class="btn btn-default btn-xs" type="submit" name="OpCerrar" value="{{ arPeriodos.codigoPeriodoPk }}">Cerrar</button></td>
                {% else %}                        
                    <td></td>                        
                {% endif %}
                {% if arPeriodos.estadoFacturado == 0 %}
                    <td>NO</td>
                {% else %}
                    <td>SI</td>
                {% endif %}
                {% if arPeriodos.estadoGenerado == 0 and arPeriodos.estadoPagoGenerado == 0 %}
                    <td style="text-align: center"><a href="{{ path('brs_afi_movimiento_periodo_nuevo', {'codigoPeriodo': arPeriodos.codigoPeriodoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>                                    
                {% else %}
                    <td></td>                                                                        
                {% endif %}                 
                <td style="text-align: center"><a href="{{ path('brs_afi_movimiento_periodo_detalle', { 'codigoPeriodo': arPeriodos.codigoPeriodoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>                                            
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arPeriodos.codigoPeriodoPk }}" /></td>
            </tr>

            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arPeriodos.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arPeriodos) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnGenerarInteresMora, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnGenerarCobro, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnGenerarPago, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_afi_movimiento_periodo_nuevo', {'codigoPeriodo': 0}) }}">Nuevo</a>
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
