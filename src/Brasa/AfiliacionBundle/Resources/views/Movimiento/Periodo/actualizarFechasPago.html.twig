<script>
    $('#myModal').modal('toggle');
</script>        
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Actualizar fechas pagos</h4>
      </div>  
      {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
      <div class="modal-body">
        <div class="form-group form-group-sm">
            <label for="form_fechaDesde" class="col-sm-4 control-label">Periodo desde:</label>
            <div class="col-sm-8">
                    {{ form_widget(form.fechaDesde, {'attr': {'maxlength' : 10} }) }} 
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="form_fechaHasta" class="col-sm-4 control-label">Periodo hasta:</label>
            <div class="col-sm-8">
                    {{ form_widget(form.fechaHasta, {'attr': {'maxlength' : 10} }) }} 
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="form_fechaPago" class="col-sm-4 control-label">Fecha pago:</label>
            <div class="col-sm-8">
                    {{ form_widget(form.fechaPago, {'attr': {'maxlength' : 10} }) }} 
            </div>
        </div>    
        <div class="form-group form-group-sm">
            <label for="form_anio" class="col-sm-4 control-label">Año:</label>
            <div class="col-sm-8">
                    {{ form_widget(form.anio, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="form_mes" class="col-sm-4 control-label">Mes:</label>
            <div class="col-sm-8">
                    {{ form_widget(form.mes, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>    
        <div class="form-group form-group-sm">
            <label for="form_anioPago" class="col-sm-4 control-label">Año pago:</label>
            <div class="col-sm-8">
                    {{ form_widget(form.anioPago, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>
        <div class="form-group form-group-sm">
            <label for="form_mesPago" class="col-sm-4 control-label">Mes pago:</label>
            <div class="col-sm-8">
                    {{ form_widget(form.mesPago, { 'attr': {'class': 'form-control'} }) }}
            </div>
        </div>        
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>        
        {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary'} }) }}            
      </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>