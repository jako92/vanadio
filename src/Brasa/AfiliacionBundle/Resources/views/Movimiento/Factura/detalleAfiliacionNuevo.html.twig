{% extends '::base_sin_menu.html.twig' %}
{% block title %}Detalle factura afiliacion nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <h3>Nuevo detalle (Afiliacion)</h3> 
        <table  class="table table-striped table-bordered table-condensed table-hover">            
            <tr>                
                <th>CODIGO</th>
                <th>DESDE</th>
                <th>HASTA</th>
                <th>IDENTIFICACION</th>  
                <th>EMPLEADO</th> 
                <th>TOTAL</th>               
                <th></th>
            </tr>
            {% for arContratos in arContratos %}
            <tr>
                <td><input type="hidden" name="LblCodigo[]" value="{{ arContratos.codigoContratoPk }}">{{ arContratos.codigoContratoPk }}</td>                                
                <td>{{ arContratos.fechaDesde | date('Y-m-d') }}</td>
                <td>{{ arContratos.fechaHasta | date('Y-m-d') }}</td>
                <td>{{ arContratos.empleadoRel.numeroIdentificacion | default('') }}</td>
                <td>{{ arContratos.empleadoRel.nombreCorto | default('') }}</td>
                <td style="text-align: right">{{ arContratos.clienteRel.afiliacion | number_format(0, '.', ',') }}</td>                
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arContratos.codigoContratoPk }}" /></td>
            </tr>
            {% endfor %} 
        </table>                
        <div class="modal-footer">            
                {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}