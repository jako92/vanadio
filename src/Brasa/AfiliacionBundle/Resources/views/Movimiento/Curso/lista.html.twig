{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Lista cursos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div     class="form-group form-group-sm">
                    <label for="txtNit" class="col-sm-2 control-label">Cliente:</label>
                    <div class="col-sm-10">
                        <div class="row">
                          <div class="col-lg-2">
                            <div class="input-group">
                              {{ form_widget(form.TxtNit, { 'attr': {'class': 'form-control'} }) }}                              
                            </div>
                          </div>
                          <div class="col-lg-10">
                            <div class="input-group">     
                              {{ form_widget(form.TxtNombreCliente, { 'attr': {'class': 'form-control', 'readOnly': 'ReadOnly'} }) }}                              
                              <span class="input-group-btn">                                        
                                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_afi_buscar_cliente', { 'campoCodigo': 'form_TxtNit', 'campoNombre': 'form_TxtNombreCliente' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                              </span>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>                 

                <div     class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Empleado:</label>
                    <div class="col-sm-10">
                        <div class="row">
                          <div class="col-lg-2">
                            <div class="input-group">
                              {{ form_widget(form.TxtNumeroIdentificacion, { 'attr': {'class': 'form-control'} }) }}                              
                            </div>
                          </div>
                          <div class="col-lg-10">
                            <div class="input-group">     
                              {{ form_widget(form.TxtNombreEmpleado, { 'attr': {'class': 'form-control', 'readOnly': 'ReadOnly'} }) }}                              
                              <span class="input-group-btn">                                        
                                <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_afi_buscar_empleado', { 'campoCodigo': 'form_TxtNumeroIdentificacion', 'campoNombre': 'form_TxtNombreEmpleado' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                              </span>
                            </div>
                          </div>
                        </div>
                    </div>
                </div>                               
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumero" class="col-sm-2 control-label">Numero:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.TxtNumero, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label for="form_estadoAutorizado" class="col-sm-2 control-label">Autorizado:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.estadoAutorizado, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>    
                <div class="form-group form-group-sm">  
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-4">  
                        {{ form_widget(form.fechaDesde) }}
                    </div>
                    <label for="form_asistencia" class="col-sm-2 control-label">Asistencia:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.asistencia, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>                    
                <div class="form-group form-group-sm">  
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-4">   
                        {{ form_widget(form.fechaHasta) }}
                    </div>
                    <label for="form_estadoFacturado" class="col-sm-2 control-label">Facturado:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.estadoFacturado, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumero" class="col-sm-2 control-label">Filtrar por fecha:</label>
                    <div class="col-sm-4"> 
                        {{ form_widget(form.filtrarFecha) }}
                    </div>
                    <label for="form_estadoPagado" class="col-sm-2 control-label">Pagado:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.estadoPagado, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>                    
                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumero" class="col-sm-2 control-label"></label>
                    <div class="col-sm-4"> 
                        
                    </div>
                    <label for="form_estadoAnulado" class="col-sm-2 control-label">Anulado:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.estadoAnulado, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>

                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CODIGO</th>
                <th>NUMERO</th>
                <th>FECHA</th>
                <th>VENCE</th>                
                <th>CLIENTE</th>
                <th>IDENTIFICACION</th>
                <th>EMPLEADO</th>
                <th>ENTIDAD</th>
                <th><p data-toggle="tooltip" data-placement="top" title="Autorizado">AUT</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Facturado">FAC</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Facturado">PAG</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Asistio al curso">ASI</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Certificado">CER</p></th>
                <th><p data-toggle="tooltip" data-placement="top" title="Anulado">ANU</p></th>
                <th>TOTAL</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            {% for arCursos in arCursos %}
            <tr>
                <td>{{ arCursos.codigoCursoPk  }}</td>
                <td>{{ arCursos.numero  }}</td>
                <td>{{ arCursos.fecha |date('Y/m/d') }}</td>
                <td>{{ arCursos.fechaVence |date('Y/m/d') }}</td>                                
                <td>{{ arCursos.clienteRel.nombreCorto  }}</td>
                <td>{{ arCursos.numeroIdentificacion | default('') }}</td>
                <td>{{ arCursos.nombreCorto | default('') }}</td>
                <td>{{ arCursos.entidadEntrenamientoRel.nombreCorto | default('') }}</td>
                <td>{% if arCursos.estadoAutorizado == 1 %} SI {% else %} NO {% endif %}</td>
                <td>{% if arCursos.estadoFacturado == 1 %} SI {% else %} NO {% endif %}</td>
                <td>{% if arCursos.estadoPagado == 1 %} SI {% else %} NO {% endif %}</td>
                <td>{% if arCursos.asistencia == 1 %} SI {% else %} NO {% endif %}</td>
                <td>{% if arCursos.certificado == 1 %} SI {% else %} NO {% endif %}</td>
                <td>{% if arCursos.estadoAnulado == 1 %} SI {% else %} NO {% endif %}</td>
                <td style="text-align: right">{{ arCursos.total | number_format(0, '.', ',') }}</td>
                <td style="text-align: center"><a href="{{ path('brs_afi_movimiento_curso_nuevo', {'codigoCurso': arCursos.codigoCursoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                <td style="text-align: center"><a href="{{ path('brs_afi_movimiento_curso_detalle', { 'codigoCurso': arCursos.codigoCursoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_152_new_window.png') }}" width=22 height=22></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arCursos.codigoCursoPk }}" /></td>
            </tr>

            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arCursos.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arCursos) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnExcelDetalle, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_afi_movimiento_curso_nuevo', {'codigoCurso': 0}) }}">Nuevo</a>
                <a class="btn btn-default btn-sm" href="{{ path('brs_afi_movimiento_curso_nuevo_cliente') }}">Nuevo desde cliente</a>
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnAsistencia, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnCertificado, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
