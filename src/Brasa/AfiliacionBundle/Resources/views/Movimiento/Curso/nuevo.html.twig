{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <h3>Nuevo curso</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">             
            <div class="form-group form-group-sm">
                <label for="txtNit" class="col-sm-3 control-label">Cliente:</label>
                <div class="col-sm-9">
                    <div class="row">
                      <div class="col-lg-2">
                        <div class="input-group">
                          <input id="txtNit"  name="txtNit"  type="text" class="form-control" value="{{ arCurso.clienteRel.nit |default('') }}"/>
                        </div>
                      </div>
                      <div class="col-lg-10">
                        <div class="input-group">                                      
                          <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arCurso.clienteRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                          <span class="input-group-btn">                                        
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_afi_buscar_cliente', { 'campoCodigo': 'txtNit', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarTercero', 600, 900)">Buscar</a>
                          </span>
                        </div>
                      </div>
                    </div>
                </div>
            </div>    
            
            <div class="form-group form-group-sm">
                <label for="txtNumeroIdentificacion" class="col-sm-3 control-label">Empleado:</label>
                <div class="col-sm-9">
                    <div class="row">
                      <div class="col-lg-2">
                        <div class="input-group">
                          <input id="txtNumeroIdentificacion"  name="txtNumeroIdentificacion"  type="text" class="form-control" value="{{ arCurso.empleadoRel.numeroIdentificacion |default('') }}"/>
                        </div>
                      </div>
                      <div class="col-lg-10">
                        <div class="input-group">                                      
                          <input id="txtNombreCortoEmpleado"  name="txtNombreCortoEmpleado"  type="text" class="form-control" value="{{ arCurso.empleadoRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                          <span class="input-group-btn">                                        
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_afi_buscar_empleado', { 'campoCodigo': 'txtNumeroIdentificacion', 'campoNombre': 'txtNombreCortoEmpleado' }) }}', 'buscarEmpleado', 600, 900)">Buscar</a>
                          </span>
                        </div>
                      </div>
                    </div>
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label for="form_entidadEntrenamientoRel" class="col-sm-3 control-label">Entidad entrenamiento:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.entidadEntrenamientoRel, { 'attr': {'class': 'form-control'} }) }}                      
                </div>                
            </div>                     
            <div class="form-group form-group-sm">
                <label for="form_fechaVence" class="col-sm-3 control-label">Vence:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.fechaVence) }}                      
                </div>                
            </div>                 
            <div class="form-group form-group-sm">
                <label for="form_fechaProgramacion" class="col-sm-3 control-label">Programacion:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.fechaProgramacion) }}                      
                </div>                
            </div>                
        </div>
    </div>               
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_afi_movimiento_curso') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}