{% extends '::base.html.twig' %}
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Generar periodos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="form_TxtFechaDesde" class="col-sm-3 control-label">Desde:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.fechaDesde) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label for="form_TxtFechaHasta" class="col-sm-3 control-label">Hasta:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.fechaHasta) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnGenerar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
