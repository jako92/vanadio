{% extends '::base.html.twig' %}
{% block title %}Directorio archivos - Soga App{% endblock %} 
{% block content %}    
    <div class="page-header">
        <h3>Directorio {{ arDirectorio.nombre }}</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}

    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>CÃ“DIGO</th>
            <th>NOMBRE</th>
            <th>TIPO ARCHIVO</th>
            <th></th>
            <th></th>
        </tr>
        {% for arDirectorioArchivos in arDirectorioArchivos %}
            <tr>
                <td>
                    <input type="hidden" name="LblCodigoGuia[]" value="{{ arDirectorioArchivos.codigoDirectorioArchivoPk }}">
                    <span class="badge">{{ arDirectorioArchivos.codigoDirectorioArchivoPk }}</span>
                </td>
                <td>{{ arDirectorioArchivos.nombre }}</td>
                <td>{{ arDirectorioArchivos.archivo }}</td>
                <td style="text-align: center"><a href="{{ path('brs_gen_directorio_descargar_archivo', { 'codigoDirectorioArchivo': arDirectorioArchivos.codigoDirectorioArchivoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_181_download_alt.png') }}" width=22 height=22></a></td>                        
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arDirectorioArchivos.codigoDirectorioArchivoPk }}" /></td>
            </tr>
        {% endfor %}
    </table>

    <div class="btn-toolbar" style="float:left">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('brs_gen_directorio') }}" style="float:left">Volver</a>
        </div>
    </div>  
    <div class="btn-toolbar" style="float: right">                           
        <div class="btn-group">                
            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_gen_directorio_cargar_archivo', { 'codigoDirectorio': arDirectorio.codigoDirectorioPk }) }}', 'Archivos', 500, 700)" >Cargar archivos</a>
        </div>
        <div class="btn-group">                
            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}                
        </div>
    </div>             
    {{ form_rest(form) }}
    {{ form_end(form) }}    
{% endblock %}