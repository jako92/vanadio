{% extends '::base2.html.twig' %}
{% block title %}Contenido lista - Soga App{% endblock %} 
{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            General
            <small>formatos: lista</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> General</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Administracion</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Formato</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>   
    <section class="content">      
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(form) }} 
        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>CÓDIGO</th>
                <th>{{ knp_pagination_sortable(arContenidos, 'TITULO', 'c.codigoContenidoPk') }}</th> 
                <th>COD. FORMATO</th>
                <th>VERSIÓN</th>
                <th>FECHA VERSIÓN</th>
                <th>ISO</th>
                <th>M_IZQ</th>
                <th>M_DER</th>                
                <th></th>
                <th></th>
            </tr>

            {%for arContenidos in arContenidos %}
                <tr>
                    <td>{{arContenidos.codigoContenidoPk}}</td>
                    <td align="justify">{{arContenidos.titulo}}</td>
                    <td align="justify">{{arContenidos.codigoFormatoIso}}</td>
                    <td align="justify">{{arContenidos.version}}</td>
                    <td align="justify">{% if arContenidos.fechaVersion != null %}{{arContenidos.fechaVersion | date('Y-m-d')}}{% else %}{% endif %}</td>
                    <td align="justify">{% if arContenidos.requiereFormatoIso == 1%} SI {% else %} NO {% endif %}</td>
                    <td>{{arContenidos.margenIzquierda}}</td>
                    <td>{{arContenidos.margenDerecha}}</td>                    
                    <td><a href="{{ path('brs_gen_base_contenido_nuevo',{'codigoContenido': arContenidos.codigoContenidoPk})}}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                    <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arContenidos.codigoContenidoPk }}" /></td>
                    {%endfor%}
            </tr>            
        </table>
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Contenidos <span class="badge">{{ arContenidos.getTotalItemCount }}</span></div>                        
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arContenidos) }}       
        </div>
        <div class="btn-toolbar" style="float: right">              
            <div class='btn-group'>
                <a class="btn btn-default btn-sm" href="{{ path('brs_gen_base_contenido_nuevo', {'codigoContenido': 0}) }}">Nuevo</a>
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}</td>                   
            </div>

        </div>     
        {{ form_rest(form) }}
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}