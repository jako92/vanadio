{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo evento</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion incapacidad</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_fecha" class="col-sm-2 control-label">Fecha:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.fecha) }}
                </div>
            </div>      
            <div class="form-group form-group-sm">
                <label for="form_hora" class="col-sm-2 control-label">Hora:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.hora) }}
                </div>
            </div>                                        
            <div class="form-group form-group-sm">
                <label for="form_asunto" class="col-sm-2 control-label">Asunto:</label>
                <div class="col-sm-10">
                        {{ form_widget(form.asunto, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>   
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-2 control-label">Comentarios:</label>
                <div class="col-sm-10">
                            {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>                 
        </div>
    </div>                   
    <div class="modal-footer">        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}