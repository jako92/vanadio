{% extends '::base.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nueva recogida</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Informacion general</div>
        <div class="panel-body">  
            <div class="form-group form-group-sm">
                <label for="txtNit" class="col-sm-3 control-label">Tercero:</label>
                <div class="col-sm-9">
                    <div class="row">
                      <div class="col-lg-2">
                        <div class="input-group">
                          <input id="txtNit"  name="txtNit"  type="text" class="form-control" value="{{ arProgramacion.terceroRel.nit |default('') }}"/>
                        </div>
                      </div>
                      <div class="col-lg-10">
                        <div class="input-group">                                      
                          <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arProgramacion.terceroRel.nombreCorto |default('') }}" readOnly="ReadOnly" />
                          <span class="input-group-btn">                                        
                            <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_gen_buscar_tercero', { 'campoCodigo': 'txtNit', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarTercero', 600, 900)">Buscar</a>
                          </span>
                        </div>
                      </div>
                    </div>
                </div>
            </div>   
            <div class="form-group form-group-sm">
                <label for="form_anunciante" class="col-sm-3 control-label">Anunciante:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.anunciante, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>
            <div class="form-group form-group-sm">
                <label for="form_direccion" class="col-sm-3 control-label">Direccion:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.direccion, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>     
            <div class="form-group form-group-sm">
                <label for="form_telefono" class="col-sm-3 control-label">Telefono:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.telefono, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>  
            <div class="form-group form-group-sm">
                <label for="form_fecha" class="col-sm-3 control-label">fecha:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.fechaRecogida) }}                        
                </div>                
            </div>     
            <div class="form-group form-group-sm">
                <label for="form_unidades" class="col-sm-3 control-label">Unidades:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.unidades, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>       
            <div class="form-group form-group-sm">
                <label for="form_pesoReal" class="col-sm-3 control-label">Peso real:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.pesoReal, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group form-group-sm">
                <label for="form_pesoVolumen" class="col-sm-3 control-label">Peso volumen:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.pesoVolumen, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>
            <div class="form-group form-group-sm">
                <label for="form_vrDeclarado" class="col-sm-3 control-label">Declarado:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.vrDeclarado, { 'attr': {'class': 'form-control'} }) }}                        
                </div>                
            </div>                
            <div class="form-group">
                <label for="form_contenido" class="col-sm-3 control-label">Contenido:</label>
                <div class="col-sm-9">
                   {{ form_widget(form.contenido, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>                
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-3 control-label">Comentarios:</label>
                <div class="col-sm-9">
                   {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>                 
        </div>
    </div>               
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_tte_recogida_lista') }}">Cancelar</a>        
        {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}