{% extends '::base_sin_menu.html.twig' %}
{% block title %}Permiso documento detalle nuevo - Soga App{% endblock %}
{% block content %}
    <section class="content-header">
        <h1>
            Seguridad
            <small>Permiso: nuevo</small>
        </h1>
    </section>
    <section class="content">         
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">Modulo:</label>
                    <div class="col-sm-4">   
                        {{form_widget(form.centroTrabajoRel, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                    <label class="col-sm-2 control-label">Tipo:</label>
                    <div class="col-sm-4">                                         
                    </div>    
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>     
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">Informaci√≥n general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">Ingreso:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.ingreso) }}
                    </div>
                    <label class="col-sm-2 control-label">Nuevo:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.nuevo) }}
                    </div>                    
                </div>
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">Editar:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.editar) }}
                    </div>
                    <label class="col-sm-2 control-label">Eliminar:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.eliminar) }}
                    </div>                    
                </div>
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">Autorizar:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.autorizar) }}
                    </div>
                    <label class="col-sm-2 control-label">Desautorizar:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.desautorizar) }}
                    </div>                    
                </div>                
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">Aprobar:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.aprobar) }}
                    </div>
                    <label class="col-sm-2 control-label">Desaprobar:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.desaprobar) }}
                    </div>                    
                </div> 
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">Anular:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.anular) }}
                    </div>
                    <label class="col-sm-2 control-label">Imprimir:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.imprimir) }}
                    </div>                    
                </div>  
                <div class="form-group form-group-sm">  
                    <label class="col-sm-2 control-label">Desanular:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.desanular) }}
                    </div>                   
                </div>                
            </div>
        </div>  
        <table class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>ID</th>            
                <th>TIPO</th>
                <th>MODULO</th>
                <th>NOMBRE</th>            
                <th><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodosTabla(this, 'ChkSeleccionar[]');"/></th>
            </tr>       
            {%for arDocumentos in arDocumentos %}
                <tr>                
                    <td>{{arDocumentos.codigoDocumentoPk}}</td> 
                    <td>{{arDocumentos.tipo}}</td> 
                    <td>{{arDocumentos.modulo}}</td>
                    <td>{{arDocumentos.nombre}}</td>                    
                    <td align="center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arDocumentos.codigoDocumentoPk }}" /></td>
                </tr>
            {%endfor%}                        
        </table>                                          
        <div class="modal-footer">      
            <a class="btn btn-default btn-sm" onclick="window.close()">Cancelar</a>        
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>    
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section> 
{% endblock %}