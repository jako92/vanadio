{% extends '::base2.html.twig' %}
{% block title %}Cartera consulta recibo detalle - Soga App{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
   <section class="content-header">
        <h1>
            Cartera
            <small>Recibo: detalle</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Cartera</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Consultas</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Recibo</a></li>
            <li class="active">Detalle</li>
        </ol>
    </section>  
    <section class="content"> 
        <script>
            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            })
        </script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('.date').datepicker({dateFormat: 'yy-mm-dd', dayNamesMin: ["Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]})
            });
        </script>
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div     class="form-group form-group-sm">
                    <label for="txtNit" class="col-sm-2 control-label">Cliente:</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-lg-2">
                                <div class="input-group">
                                    {{ form_widget(form.TxtNit, { 'attr': {'class': 'form-control'} }) }}                              
                                </div>
                            </div>
                            <div class="col-lg-10">
                                <div class="input-group">     
                                    {{ form_widget(form.TxtNombreCliente, { 'attr': {'class': 'form-control', 'readOnly': 'ReadOnly'} }) }}                              
                                    <span class="input-group-btn">                                        
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_cartera_buscar_cliente', { 'campoCodigo': 'form_TxtNit', 'campoNombre': 'form_TxtNombreCliente' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>                

                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumero" class="col-sm-2 control-label">Numero:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.TxtNumero, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label for="form_cuentaCobrarTipoRel" class="col-sm-2 control-label">Tipo cuenta cobrar:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.cuentaCobrarTipoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>
                <div class="form-group form-group-sm">  
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.fechaDesde, {'attr': {'maxlength' : 10} }) }}
                    </div>
                </div>                     
                <div class="form-group form-group-sm">  
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.fechaHasta, {'attr': {'maxlength' : 10} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrarDetalle, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arRecibosDetalles, 'CÃ“DIGO', 'rd.codigoReciboDetallePk') }}</th>
                <th>NUMERO</th>
                <th>FECHA</th>
                <th>NIT</th>
                <th>CLIENTE</th>
                <th>TIPO</th>
                <th>DESCUENTO</th>
                <th>AJUSTE PESO</th>
                <th>RTE ICA</th>
                <th>RTE IVA</th>
                <th>RTE FUENTE</th>
                <th>VALOR</th>
                <th>VALOR PAGO</th>
            </tr>
            {% for arRecibosDetalles in arRecibosDetalles %}
                <tr>
                    <td>{{ arRecibosDetalles.codigoReciboDetallePk  }}</td>
                    <td>{{ arRecibosDetalles.numeroFactura  }}</td>
                    <td>{{ arRecibosDetalles.reciboRel.fecha |date("Y/m/d")  }}</td>
                    <td>{{ arRecibosDetalles.reciboRel.clienteRel.nit |default('')  }}</td>
                    <td>{{ arRecibosDetalles.reciboRel.clienteRel.nombreCorto |default('')  }}</td>
                    <td>{{ arRecibosDetalles.cuentaCobrarTipoRel.nombre |default('')  }}</td>
                    <td style="text-align: right">{{ arRecibosDetalles.vrDescuento | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arRecibosDetalles.vrAjustePeso | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arRecibosDetalles.vrReteIca | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arRecibosDetalles.vrReteIva | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arRecibosDetalles.vrReteFuente | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arRecibosDetalles.valor | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arRecibosDetalles.vrPagoDetalle | number_format(2, '.', ',') }}</td>
                </tr>

            {% endfor %}
        </table>
        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arRecibosDetalles.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arRecibosDetalles) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcelDetalle, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
