{% extends '::base2.html.twig' %}
{% block title %}Cartera consulta recibo lista - Soga App{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
   <section class="content-header">
        <h1>
            Cartera
            <small>Recibo: resumen</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Cartera</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Consultas</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Recibo</a></li>
            <li class="active">Resumen</li>
        </ol>
    </section>   
    <section class="content"> 
        <script>
            $(function () {
                $('[data-toggle="tooltip"]').tooltip()
            })
        </script>
        <script type="text/javascript">
            $(document).ready(function () {
                $('.date').datepicker({dateFormat: 'yy-mm-dd', dayNamesMin: ["Do", "Lu", "Ma", "Mi", "Ju", "Vi", "Sa"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Deciembre"], monthNames: ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]})
            });
        </script>
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">
                <div     class="form-group form-group-sm">
                    <label for="txtNit" class="col-sm-2 control-label">Cliente:</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-lg-2">
                                <div class="input-group">
                                    {{ form_widget(form.TxtNit, { 'attr': {'class': 'form-control'} }) }}                              
                                </div>
                            </div>
                            <div class="col-lg-10">
                                <div class="input-group">     
                                    {{ form_widget(form.TxtNombreCliente, { 'attr': {'class': 'form-control', 'readOnly': 'ReadOnly'} }) }}                              
                                    <span class="input-group-btn">                                        
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_cartera_buscar_cliente', { 'campoCodigo': 'form_TxtNit', 'campoNombre': 'form_TxtNombreCliente' }) }}', 'buscarCliente', 600, 900)">Buscar</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>                

                <div class="form-group form-group-sm">  
                    <label for="form_TxtNumero" class="col-sm-2 control-label">Numero:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.TxtNumero, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                    <label for="form_reciboTipoRel" class="col-sm-2 control-label">Tipo recibo:</label>
                    <div class="col-sm-4">                  
                        {{ form_widget(form.reciboTipoRel, { 'attr': {'class': 'form-control'} }) }}
                    </div>                    
                </div>
                <div class="form-group form-group-sm">  
                    <label for="form_fechaDesde" class="col-sm-2 control-label">Desde:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.fechaDesde, {'attr': {'maxlength' : 10} }) }}
                    </div>
                </div>                     
                <div class="form-group form-group-sm">  
                    <label for="form_fechaHasta" class="col-sm-2 control-label">Hasta:</label>
                    <div class="col-sm-10">                  
                        {{ form_widget(form.fechaHasta, {'attr': {'maxlength' : 10} }) }}
                    </div>
                </div>    
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrarLista, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>TIPO</th>
                <th>CUENTA</th>
                <th>NUM</th>
                <th>TOTAL</th>
            </tr>
            {% for arRecibosResumen in arRecibosResumen %}
                <tr>
                    <td>{{ arRecibosResumen.tipo  }}</td>
                    <td>{{ arRecibosResumen.cuenta  }}</td>
                    <td>{{ arRecibosResumen.numeroRecibos  }}</td>
                    <td style="text-align: right">{{ arRecibosResumen.vrTotalPago | number_format(2, '.', ',') }}</td>
                </tr>
            {% endfor %}
        </table>  

        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arRecibos, 'CÃ“DIGO', 'r.codigoReciboPk') }}</th>
                <th>NUMERO</th>
                <th>TIPO</th>
                <th>CUENTA</th>
                <th>FECHA</th>
                <th>F.PAGO</th>
                <th>NIT</th>
                <th>CLIENTE</th>                                                
                <th>DSTO</th>
                <th>AJ. PESO</th>
                <th>RTE ICA</th>
                <th>RTE IVA</th>
                <th>RTE FTE</th>
                <th>TOTAL</th>
                <th>ANU</th>
                <th>AUT</th>
                <th>IMP</th>
            </tr>
            {% for arRecibos in arRecibos %}
                <tr>
                    <td>{{ arRecibos.codigoReciboPk  }}</td>
                    <td>{{ arRecibos.numero  }}</td>
                    <td>{{ arRecibos.reciboTipoRel.nombre |default('')  }}</td>
                    <td>{{ arRecibos.cuentaRel.nombre |default('')  }}</td>
                    <td>{{ arRecibos.fecha |date("Y/m/d")  }}</td>
                    <td>{{ arRecibos.fechaPago |date("Y/m/d")  }}</td>
                    <td>{{ arRecibos.clienteRel.nit |default('')  }}</td>
                    <td>{{ arRecibos.clienteRel.nombreCorto |default('')  }}</td>                                                
                    <td style="text-align: right">{{ arRecibos.vrTotalDescuento | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arRecibos.vrTotalAjustePeso | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arRecibos.vrTotalRetencionIca | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arRecibos.vrTotalRetencionIva | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arRecibos.vrTotalRetencionFuente | number_format(2, '.', ',') }}</td>
                    <td style="text-align: right">{{ arRecibos.vrTotal | number_format(2, '.', ',') }}</td>
                    <td>{% if arRecibos.estadoAnulado == 1%}SI{% else %}NO{% endif %}</td>
                    <td>{% if arRecibos.estadoAutorizado == 1%}SI{% else %}NO{% endif %}</td>
                    <td>{% if arRecibos.estadoImpreso == 1%}SI{% else %}NO{% endif %}</td>
                </tr>

            {% endfor %}
        </table>
        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
            <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arRecibos.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
            {{ knp_pagination_render(arRecibos) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnImprimir, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
