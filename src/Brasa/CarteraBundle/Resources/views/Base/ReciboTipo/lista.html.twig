{% extends '::base2.html.twig' %}
{% block title %}Cartera Recibo tipo lista - Soga App{% endblock %} 
{% block content %}
<script>
    $(function () {
      $('[data-toggle="tooltip"]').tooltip()
    })
</script>
<div class="container">
    <div class="page-header">
        <h3>Lista tipos recibos</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">

                <div class="form-group form-group-sm">
                    <label for="form_TxtNombre" class="col-sm-3 control-label">Nombre:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.TxtNombre , { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>

                <div class="form-group form-group-sm">
                    <label for="form_TxtCodigo" class="col-sm-3 control-label">Codigo:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.TxtCodigo, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>
            </div>
        </div>
        <table  class="table table-striped table-bordered table-condensed table-hover">
            <tr>
                <th>{{ knp_pagination_sortable(arReciboTipos, 'CÃ“DIGO', 'rt.codigoReciboTipoPk') }}</th>
                <th>NOMBRE</th>
                <th></th>
                <th></th>
            </tr>
            {% for arReciboTipos in arReciboTipos %}
            <tr>
                <td>{{ arReciboTipos.codigoRecibotipoPk  }}</td>
                <td>{{ arReciboTipos.nombre }}</td>
                <td style="text-align: center"><a href="{{ path('brs_cartera_base_recibo_tipo_nuevo', {'codigoReciboTipo': arReciboTipos.codigoReciboTipoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                <td><input type="checkbox" name="ChkSeleccionar[]" value="{{ arReciboTipos.codigoReciboTipoPk }}" /></td>
            </tr>

            {% endfor %}
        </table>

        <!-- Botones Menu Items -->
        <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arReciboTipos.getTotalItemCount }}</span></div>
        </div>
        <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
                {{ knp_pagination_render(arReciboTipos) }}
        </div>
        <div class="btn-toolbar" style="float: right">
            <div class="btn-group">
                {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
            </div>
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('brs_cartera_base_recibo_tipo_nuevo', {'codigoReciboTipo': 0}) }}">Nuevo</a>
            </div>
            <div class="btn-group">
                {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
            </div>
        </div>
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
    {{ form_end(form) }}

</div>
{% endblock %}
