{% extends '::base2.html.twig' %}
{% block title %}Cartera cuenta cobro tipo nuevo - Soga App{% endblock %} 
{% block content %}
    <!-- Content Header (Page header) -->
        <section class="content-header">
        <h1>
            Cartera
            <small>Tipo cuenta cobro: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Cartera</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Administracion </a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> General </a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Tipo cuenta cobro </a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>   
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">                                                       
                <div class="form-group form-group-sm">
                    <label for="form_nombre" class="col-sm-3 control-label">Nombre:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.nombre, { 'attr': {'class': 'form-control', 'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()'} }) }}                        
                    </div>                
                </div>                                                                      
            </div>
        </div>               
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_cartera_base_cuentacobrar_tipo_listar') }}">Cancelar</a>        
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}