{% extends '::base2.html.twig' %}
{% block title %}Bodega lista - Soga App{% endblock %}
{% block content %}
    <script>
        $(function () {
            $('[data-toggle="tooltip"]').tooltip()
        })
    </script>
    <div class="page-header">
        <h3>Lista bodega</h3>
    </div>
    {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
    {{ form_errors(form) }}
    <div class="panel panel-default">
        <div class="panel-heading">Filtros de busqueda</div>
        <div class="panel-body">                                                   
            <div class="form-group form-group-sm">  
                <label for="form_TxtCodigo" class="col-sm-2 control-label">Codigo:</label>
                <div class="col-sm-4">
                    {{ form_widget(form.TxtCodigo, { 'attr': {'class': 'form-control'} }) }}
                </div>
                <label for="form_TxtNombre" class="col-sm-2 control-label">Nombre:</label>
                <div class="col-sm-4">                  
                    {{ form_widget(form.TxtNombre, { 'attr': {'class': 'form-control'} }) }}
                </div>                    
            </div>                                                                         
            <div class="form-group form-group-sm">
                <div class="col-sm-offset-2 col-sm-10">
                    {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                </div>
            </div>
        </div>
    </div>
    <table  class="table table-striped table-bordered table-condensed table-hover">
        <tr>
            <th>CODIGO</th>
            <th>NOMBRE</th>
            <th></th>                
            <th align="center"><input type="checkbox" name="ChkSeleccionarTodos" OnClick="ChequearTodos(this);"/></th>
        </tr>
        {% for arBodegas in arBodegas %}
            <tr>
                <td>{{ arBodegas.codigoBodegaPk  }}</td>
                <td>{{ arBodegas.nombre  }}</td>
                <td style="text-align: center"><a href="{{ path('brs_inv_base_bodega_nuevo', {'codigoBodega': arBodegas.codigoBodegaPk }) }}" ><img src="{{ asset('imagenes/bootstrap/glyphicons_151_edit.png') }}" width=20 height=20 title="Editar el registro"></a></td>
                <td align="center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arBodegas.codigoBodegaPk }}" /></td>
            </tr>

        {% endfor %}
    </table>        
    <div class="btn-group" style="float: left">
        <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arBodegas.getTotalItemCount }}</span></div>
    </div>
    <div class="btn-group btn-sm" style="float: left;margin-left: 0px;padding-top: 0px;">
        {{ knp_pagination_render(arBodegas) }}
    </div>
    <div class="btn-toolbar" style="float: right">
        <div class="btn-group">
            <a class="btn btn-default btn-sm" href="{{ path('brs_inv_base_bodega_nuevo', {'codigoBodega': 0 }) }}">Nuevo</a>
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnExcel, { 'attr': {'class': 'btn btn-default btn-sm'} }) }}
        </div>
        <div class="btn-group">
            {{ form_widget(form.BtnEliminar, { 'attr': {'class': 'btn btn-danger btn-sm'} }) }}
        </div>
    </div>

</div>

{{ form_rest(form) }}
{{ form_end(form) }}
{% endblock %}
