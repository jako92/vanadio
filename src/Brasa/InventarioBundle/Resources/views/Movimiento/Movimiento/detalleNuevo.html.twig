{% extends '::base_sin_menu.html.twig' %}
{% block title %}Item nuevo - Soga App{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Inventario
            <small>movimiento: nuevo item</small>
        </h1>
    </section>    
    <section class="content">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}  
        <table class="table table-striped table-bordered table-condensed">
            <tr>
                <th>CODIGO</th>
                <th>NOMBRE</th>
                <th>MARCA</th>            
                <th>% IVA</th>            
                <th></th>
            </tr>
            {% for arItem in arItem %}
                <tr>
                    <td>{{ arItem.codigoItemPk  }}<input type="hidden" name="LblCodigoConcepto[]" value="{{ arItem.codigoItemPk }}"></td>
                    <td>{{ arItem.nombre }}</td>
                    <td>{{ arItem.marcaRel.nombre |default('') }}</td>
                    <td style="text-align: right">{{ arItem.porcentajeIva | number_format(0, '.', ',') }}</td>                                                
                    <td align="center"><input type="checkbox" name="ChkSeleccionar[]" value="{{ arItem.codigoItemPk }}" /></td>
                </tr>
            {% endfor %}
        </table>    

        <div class="modal-footer">            
            {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}