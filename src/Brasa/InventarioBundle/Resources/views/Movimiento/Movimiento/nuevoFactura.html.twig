{% extends '::base2.html.twig' %}
{% block title %}Movimiento nuevo - Soga App{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Inventario
            <small>movimiento: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Inventario</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Movimientos</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Factura</a></li>
            <li class="active">Lista</li>
        </ol>
    </section>    
    <section class="content">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informacion general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="txtNit" class="col-sm-3 control-label">Tercero:</label>
                    <div class="col-sm-9">
                        <div class="row">
                            <div class="col-lg-2">
                                <div class="input-group">
                                    <input id="txtNit"  name="txtNit"  type="text" class="form-control" value="{{ arMovimiento.terceroRel.nit | default('')}}"/>
                                </div>
                            </div>
                            <div class="col-lg-10">
                                <div class="input-group">                                      
                                    <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arTercero.terceroRel.nombreCorto | default('') }}" readOnly="ReadOnly" />
                                    <span class="input-group-btn">                                        
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_inv_buscar_tercero', { 'campoNit': 'txtNit', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarTercero', 600, 900)">Buscar</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Tipo:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.facturaTipoRel, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                                     
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Soporte:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.soporte, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>                
                </div>                          
                <div class="form-group">
                    <label class="col-sm-3 control-label">Comentarios:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>
                </div>                                                                                     
            </div>
        </div>               
        <div class="modal-footer">        
            <a class="btn btn-default btn-sm" href="{{ path('brs_inv_movimiento_movimiento_lista', {'codigoDocumento': arDocumento.codigoDocumentoPk }) }}">Cancelar</a>
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}