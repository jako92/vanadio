{% extends '::base2.html.twig' %}
{% block title %}Orden de compra nuevo - Soga App{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Inventario
            <small>Orden de compra: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Inventario</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-group"></i> Movimiento</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Orden de compra</a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>   
    <section class="content">    
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Informaci√≥n general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label for="txtNit" class="col-sm-2 control-label">Tercero:</label>
                    <div class="col-sm-10">
                        <div class="row">
                            <div class="col-lg-2">
                                <div class="input-group">
                                    <input id="txtNit"  name="txtNit"  type="text" class="form-control" value="{{ arMovimiento.terceroRel.nit | default('')}}"/>
                                </div>
                            </div>
                            <div class="col-lg-10">
                                <div class="input-group">                                      
                                    <input id="txtNombreCorto"  name="txtNombreCorto"  type="text" class="form-control" value="{{ arTercero.terceroRel.nombreCorto | default('') }}" readOnly="ReadOnly" />
                                    <span class="input-group-btn">                                        
                                        <a class="btn btn-default btn-sm" href="javascript:abrirVentana3('{{ path('brs_inv_buscar_tercero', { 'campoNit': 'txtNit', 'campoNombre': 'txtNombreCorto' }) }}', 'buscarTercero', 600, 900)">Buscar</a>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Fecha de entrega:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.fechaEntrega) }}
                    </div>
                    <label for="form_soporte" class="col-sm-2 control-label">Soporte:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.soporte) }}                        
                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Tipo orden compra:</label>
                    <div class="col-sm-4">
                        {{ form_widget(form.ordenCompraDocumentoRel, { 'attr': {'class': 'form-control'} }) }}                        
                    </div>   
                </div>           
                <div class="form-group form-group-sm">
                    <label class="col-sm-2 control-label">Comentarios:</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.comentarios) }}
                    </div>
                </div>    
            </div>
        </div>           
        <div class="modal-footer">
            <a class="btn btn-default btn-sm" href="{{ path('brs_inv_movimiento_orden_compra_lista') }}">Cancelar</a>
            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            {{ form_widget(form.guardarnuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        </div>
        {{ form_end(form) }}
        <br/><br/><br/><br/>
    </section>
{% endblock %}
