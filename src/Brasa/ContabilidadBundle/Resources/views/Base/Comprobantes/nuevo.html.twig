{% extends '::base2.html.twig' %}
{% block title %}Comprobante nuevo - Soga App{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
     <section class="content-header">
        <h1>
            Contabilidad
            <small>Comprobante: nuevo</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-calendar"></i> Contabilidad</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Administracion</a></li>
            <li><a href="{{ path('brasa_general_inicio') }}"><i class="fa fa-bars"></i> Comprobante</a></li>
            <li class="active">Nuevo</li>
        </ol>
    </section>  
    <section class="content"> 
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        {{ form_errors(form) }}
        <div class="panel panel-default">
            <div class="panel-heading">Información general</div>
            <div class="panel-body">
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Código:</label>
                    <div class="col-sm-9">
                        {% if form_errors(form.codigoComprobantePk) %}
                            {{ form_widget(form.codigoComprobantePk, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                            <div class="alert alert-danger" role="alert">{{ form_errors(form.codigoComprobantePk)}}</div>
                        {% else %}
                            {{ form_widget(form.codigoComprobantePk, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                        {% endif %}    

                    </div>
                </div>
                <div class="form-group form-group-sm">
                    <label class="col-sm-3 control-label">Nombre:</label>
                    <div class="col-sm-9">
                        {{ form_widget(form.nombre, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a class="btn btn-default btn-sm" href="{{ path('brs_ctb_base_comprobantes_lista') }}">Cancelar</a>
                {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
            </div>
            {{ form_end(form) }}
            <br/><br/><br/><br/>
    </section>
</div>    
{% endblock %}
