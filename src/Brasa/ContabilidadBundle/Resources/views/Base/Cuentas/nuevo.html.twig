{% extends '::base2.html.twig' %}
{% block title %}Cuenta nueva - Soga App{% endblock %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    {{ form_errors(form) }}
    <h3>Nueva cuenta</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Cuenta padre:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.codigoCuentaPadreFk, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Código cuenta:</label>
                <div class="col-sm-9">
                    {% if form_errors(form.codigoCuentaPk) %}
                        {{ form_widget(form.codigoCuentaPk, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                        <div class="alert alert-danger" role="alert">{{ form_errors(form.codigoCuentaPk)}}</div>
                    {% else %}
                        {{ form_widget(form.codigoCuentaPk, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                    {% endif %}    

                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Nombre:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.nombreCuenta, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Permite movimientos:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.permiteMovimientos, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Exige nit:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.exigeNit, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Exige centro costo:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.exigeCentroCostos, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label class="col-sm-3 control-label">Porcentaje retención:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.porcentajeRetencion, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>    
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_ctb_base_cuentas_lista') }}">Cancelar</a>
        {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>
    {{ form_end(form) }}
{% endblock %}
