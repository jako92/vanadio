{% extends '::base_sin_menu.html.twig' %}
{% block title %}Buscar tercero - Soga App{% endblock %}
{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Buscar
            <small>Tercero</small>
        </h1>
    </section>   
    <section class="content"> 
        <script language="javascript">
            function selTercero(codigo,nombre, campoCodigo, campoNombre)
            {
                opener.document.getElementById(campoCodigo).value = codigo;
                opener.document.getElementById(campoNombre).value = nombre;
                opener.document.getElementById(campoCodigo).focus();
                self.close();
            }
        </script>    
        {{ form_start(form, { 'attr': {'class': 'form-horizontal', 'novalidate': 'novalidate'} }) }}
        {{ form_errors(form) }}                
        <div class="panel panel-default">
            <div class="panel-heading">Filtros de busqueda</div>
            <div class="panel-body">

                <div class="form-group form-group-sm">  
                    <label for="form_TxtNombre" class="col-sm-3 control-label">Nombre:</label>
                    <div class="col-sm-9">                  
                        {{ form_widget(form.TxtNombre , { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                    </div>                   
                </div>  

                <div class="form-group form-group-sm">  
                    <label for="form_TxtIdentificacion" class="col-sm-3 control-label">Identificación:</label>
                    <div class="col-sm-9">                  
                        {{ form_widget(form.TxtIdentificacion, { 'attr': {'class': 'form-control'} }) }}
                    </div>      
                </div>   
                <div class="form-group form-group-sm">
                    <div class="col-sm-offset-2 col-sm-10">
                        {{ form_widget(form.BtnFiltrar, { 'attr': {'class': 'btn btn-default btn-sm', 'style':'float:right'} }) }}
                    </div>
                </div>                                                    
            </div>
        </div>        
        <table  class="table table-striped table-bordered table-condensed table-hover">            
            <tr>
                <th>{{ knp_pagination_sortable(arTerceros, 'CÓDIGO', 't.numeroIdentificacion') }}</th>
                <th>IDENTIFICACIÓN</th>
                <th>{{ knp_pagination_sortable(arTerceros, 'NOMBRE', 't.nombreCorto') }}</th>                                                
                <th></th>
            </tr>
            {% for arTerceros in arTerceros %}
                <tr>
                    <td><input type="hidden" name="LblCodigo[]" value="{{ arTerceros.codigoTerceroPk }}">{{ arTerceros.codigoTerceroPk }} </td>
                    <td>{{ arTerceros.numeroIdentificacion  }}</td>
                    <td>{{ arTerceros.nombreCorto }}</td>                                                
                    <td style="text-align: center"><a href="javascript:selTercero('{{ arTerceros.numeroIdentificacion }}','{{ arTerceros.nombreCorto }}','{{ campoCodigo }}','{{ campoNombre }}')" ><img src="{{ asset('imagenes/bootstrap/glyphicons_198_ok.png') }}" width=20 height=20></a></td>                                
                </tr>
            {% endfor %} 
        </table>                                         


        <!-- Botones Menu Items -->
        <div class="btn-toolbar">            
            <div class="btn-group" style="float: left">
                <div class="btn btn-default btn-sm">Registros <span class="badge">{{ arTerceros.getTotalItemCount }}</span></div>                        
            </div>            
        </div>          
        <!-- Fin Botones Menu Items -->
        {{ form_rest(form) }}
        {{ form_end(form) }}    
        <br/><br/><br/><br/>
    </section>
{% endblock %}
