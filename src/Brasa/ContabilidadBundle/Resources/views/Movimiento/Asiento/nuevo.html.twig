{% extends '::base.html.twig' %}
{% block title %}Asiento nuevo - Soga App{% endblock %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Nuevo asiento</h3>    
    <div class="panel panel-default">
        <div class="panel-heading">Información general</div>
        <div class="panel-body">
            <div class="form-group form-group-sm">
                <label for="form_comprobanteRel" class="col-sm-3 control-label">Comprobante:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.comprobanteRel, { 'attr': {'class': 'form-control','autofocus':'autofocus'} }) }}
                </div>
            </div>            
            <div class="form-group form-group-sm">
                <label for="form_numeroAsiento" class="col-sm-3 control-label">Número asiento:</label>
                <div class="col-sm-9">
                    {{ form_widget(form.numeroAsiento, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group form-group-sm">
                <label for="form_soporte" class="col-sm-3 control-label">Soporte:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.soporte, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>
            <div class="form-group">
                <label for="form_fecha" class="col-sm-3 control-label">Fecha:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.fecha, { 'attr': {'class': 'form-control'} }) }}
                </div>
            </div>    
            <div class="form-group">
                <label for="form_comentarios" class="col-sm-3 control-label">Comentarios:</label>
                <div class="col-sm-9">
                            {{ form_widget(form.comentarios, { 'attr': {'style':'text-transform:uppercase;','onblur':'javascript:this.value=this.value.toUpperCase()','class': 'form-control'} }) }}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a class="btn btn-default btn-sm" href="{{ path('brs_ctb_mov_asientos_lista') }}">Cancelar</a>        
        {{ form_widget(form.BtnGuardar, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
        {{ form_widget(form.BtnGuardarNuevo, { 'attr': {'class': 'btn btn-primary btn-sm'} }) }}
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}