{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <h3>Enviar archivo</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Enviar archivo por correo</div>
        <div class="panel-body">
            <div>   
                <div class="form-group form-group-sm">
                    <label for="form_asunto" class="col-sm-2 control-label">Asunto:</label>
                    <div class="col-sm-10">
                            {{ form_widget(form.asunto, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                
                <div class="form-group form-group-sm">
                    <label for="form_email" class="col-sm-2 control-label">Email:</label>
                    <div class="col-sm-10">
                            {{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                                
                <div class="form-group">
                    <label for="form_mensaje" class="col-sm-2 control-label">Mensaje:</label>
                    <div class="col-sm-10">
                                {{ form_widget(form.mensaje, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>                      
            </div>                                            
        </div>
    </div>                   
    <div class="modal-footer">        
            <a  class="btn btn-default btn-sm" href="{{ path('brs_ad_archivos_lista', { 'codigoDocumento': codigoDocumento,  'numero': numero }) }}">Regresar</a>    
            {{ form_widget(form.BtnEnviar, { 'attr': {'class': 'btn btn-sm btn-primary'} }) }}            
    </div>    
    {{ form_end(form) }}
</div>
{% endblock %}
