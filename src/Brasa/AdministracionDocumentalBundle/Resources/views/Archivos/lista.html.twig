{% extends '::base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    
    <h3>Lista archivos</h3>
    <div class="panel panel-default">
        <div class="panel-heading">Lista archivos</div>
        <div class="panel-body">
            <div>                      
                <table  class="table table-striped table-bordered table-condensed table-hover">
                    <tr>
                        <th>ID</th>
                        <th>NUMERO</th>
                        <th>NOMBRE</th>
                        <th>ARCHIVO</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                    {% for arArchivos in arArchivos %}
                    <tr>
                        <td><input type="hidden" name="LblCodigo[]" value="{{ arArchivos.codigoArchivoPk }}">{{ arArchivos.codigoArchivoPk }} </td>
                        <td>{{ arArchivos.numero  }}</td>
                        <td>{{ arArchivos.descripcion  }}</td>
                        <td>{{ arArchivos.nombre  }}</td>
                        <td style="text-align: center"><a href="{{ path('brs_ad_archivos_descargar', { 'codigoArchivo': arArchivos.codigoArchivoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_181_download_alt.png') }}" width=22 height=22></a></td>                        
                        <td style="text-align: center"><a href="{{ path('brs_ad_archivos_enviar', { 'codigoDocumento': codigoDocumento,'numero': numero,'codigoArchivo': arArchivos.codigoArchivoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_399_e-mail.png')}}" width=22 height=22></a></td>                        
                        <td style="text-align: center"><a href="{{ path('brs_ad_archivos_eliminar', { 'codigoArchivo': arArchivos.codigoArchivoPk }) }}"><img src="{{ asset('imagenes/bootstrap/glyphicons_197_remove.png') }}" width=22 height=22></a></td>                        
                    </tr>
                    {% endfor %}
                </table>
                {{ knp_pagination_render(arArchivos) }}
            </div>                                            
        </div>
    </div>                   
    <div class="modal-footer">                                                                  
        <a  class="btn btn-default btn-sm" href="{{ path('brs_ad_archivos_cargar', { 'codigoDocumento': codigoDocumento,  'numero': numero }) }}">Cargar</a>
    </div>
</div>
{% endblock %}
